{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Computes the correlation matrix corresponding to the residual (or error) time series in 'dset'.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "3dErrtsCormat"
    },
    "dset": {
      "type": "string",
      "title": "Input dataset",
      "description": "Dataset to read, usually the '-errts' output from 3dDeconvolve."
    },
    "concat": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Concatenation re-run name",
      "description": "As used in 3dDeconvolve."
    },
    "input": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Alternate input dataset",
      "description": "Alternate way of specifying the dataset to read."
    },
    "mask": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Mask dataset",
      "description": "Mask dataset to apply."
    },
    "maxlag": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Maximum lag",
      "description": "Set maximum lag."
    },
    "polort": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Polort level",
      "description": "Set polort level. Default is 0."
    }
  },
  "additionalProperties": false,
  "required": [
    "dset"
  ]
}