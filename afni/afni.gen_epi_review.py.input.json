{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "gen_epi_review.py",
  "description": "Generate an AFNI processing script to review EPI data",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.gen_epi_review.py"
    },
    "datasets": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Datasets",
      "description": "Specify input datasets for processing"
    },
    "script_name": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Script name",
      "description": "Specify the name of the generated script"
    },
    "windows": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Windows",
      "description": "Specify the image windows to open"
    },
    "verbosity": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Verbosity",
      "description": "Specify a verbosity level"
    },
    "image_size": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Image size",
      "description": "Set image dimensions, in pixels"
    },
    "image_xoffset": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Image X-offset",
      "description": "Set the X-offset for the image, in pixels"
    },
    "image_yoffset": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Image Y-offset",
      "description": "Set the Y-offset for the image, in pixels"
    },
    "graph_size": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Graph size",
      "description": "Set graph dimensions, in pixels"
    },
    "graph_xoffset": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Graph X-offset",
      "description": "Set the X-offset for the graph, in pixels"
    },
    "graph_yoffset": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Graph Y-offset",
      "description": "Set the Y-offset for the graph, in pixels"
    }
  },
  "additionalProperties": false,
  "required": [
    "datasets"
  ]
}