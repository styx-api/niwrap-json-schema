{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "slow_surf_clustsim.py",
  "description": "Generate a tcsh script to run clustsim on surface",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni/slow_surf_clustsim.py"
    },
    "on_surface": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "On Surface",
      "description": "Start from noise on the surface (so no volume data is involved)"
    },
    "save_script": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Save Script",
      "description": "Save script to given file"
    },
    "print_script": {
      "type": "boolean",
      "default": false,
      "title": "Print Script",
      "description": "Print script to terminal"
    },
    "uvar": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "User Variable",
      "description": "Set the user variable (use -show_default_uvars to see user vars). Example usage: -uvar spec_file sb23_lh_141_std.spec -uvar surf_vol sb23_SurfVol_aligned+orig"
    },
    "verbosity": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Verbosity Level",
      "description": "Set the verbosity level"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Show this help"
    },
    "hist": {
      "type": "boolean",
      "default": false,
      "title": "History Flag",
      "description": "Show module history"
    },
    "show_default_cvars": {
      "type": "boolean",
      "default": false,
      "title": "Show Default Control Variables Flag",
      "description": "List default control variables"
    },
    "show_default_uvars": {
      "type": "boolean",
      "default": false,
      "title": "Show Default User Variables Flag",
      "description": "List default user variables"
    },
    "show_valid_opts": {
      "type": "boolean",
      "default": false,
      "title": "Show Valid Options Flag",
      "description": "List valid options"
    },
    "version": {
      "type": "boolean",
      "default": false,
      "title": "Version Flag",
      "description": "Show current version"
    }
  },
  "additionalProperties": false
}