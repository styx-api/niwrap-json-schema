{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "1dApar2mat",
  "description": "Computes the affine transformation matrix from the set of 3dAllineate parameters.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.1dApar2mat"
    },
    "x_shift": {
      "type": "number",
      "title": "X Shift",
      "description": "x-shift in mm"
    },
    "y_shift": {
      "type": "number",
      "title": "Y Shift",
      "description": "y-shift in mm"
    },
    "z_shift": {
      "type": "number",
      "title": "Z Shift",
      "description": "z-shift in mm"
    },
    "z_angle": {
      "type": "number",
      "title": "Z Angle",
      "description": "z-angle (roll) in degrees"
    },
    "x_angle": {
      "type": "number",
      "title": "X Angle",
      "description": "x-angle (pitch) in degrees"
    },
    "y_angle": {
      "type": "number",
      "title": "Y Angle",
      "description": "y-angle (yaw) in degrees"
    },
    "x_scale": {
      "type": "number",
      "minimum": 0.1,
      "maximum": 10.0,
      "title": "X Scale",
      "description": "x-scale factor in [0.10,10.0]"
    },
    "y_scale": {
      "type": "number",
      "minimum": 0.1,
      "maximum": 10.0,
      "title": "Y Scale",
      "description": "y-scale factor in [0.10,10.0]"
    },
    "z_scale": {
      "type": "number",
      "minimum": 0.1,
      "maximum": 10.0,
      "title": "Z Scale",
      "description": "z-scale factor in [0.10,10.0]"
    },
    "y_x_shear": {
      "type": "number",
      "minimum": -0.3333,
      "maximum": 0.3333,
      "title": "Y/X Shear",
      "description": "y/x-shear factor in [-0.3333,0.3333]"
    },
    "z_x_shear": {
      "type": "number",
      "minimum": -0.3333,
      "maximum": 0.3333,
      "title": "Z/X Shear",
      "description": "z/x-shear factor in [-0.3333,0.3333]"
    },
    "z_y_shear": {
      "type": "number",
      "minimum": -0.3333,
      "maximum": 0.3333,
      "title": "Z/Y Shear",
      "description": "z/y-shear factor in [-0.3333,0.3333]"
    }
  },
  "additionalProperties": false,
  "required": [
    "x_shift",
    "y_shift",
    "z_shift",
    "z_angle",
    "x_angle",
    "y_angle",
    "x_scale",
    "y_scale",
    "z_scale",
    "y_x_shear",
    "z_x_shear",
    "z_y_shear"
  ]
}