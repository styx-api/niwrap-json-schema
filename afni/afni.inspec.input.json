{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "inspec",
  "description": "Outputs information found from specfile.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni/inspec"
    },
    "specfile": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Spec file",
      "description": "Spec file to be read"
    },
    "newspecname": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "New spec file name",
      "description": "Rewrite spec file"
    },
    "detail": {
      "anyOf": [
        {
          "type": "number",
          "minimum": 0,
          "maximum": 3
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output detail level",
      "description": "Level of output detail. Default is 1 in general, 0 with -LRmerge. Available levels are 0, 1, 2, and 3."
    },
    "leftspec": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Left spec file",
      "description": "Merge two spec files in a way that makes sense for viewing in SUMA"
    },
    "rightspec": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Right spec file",
      "description": "Merge two spec files in a way that makes sense for viewing in SUMA"
    },
    "state_rm": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Remove state",
      "description": "Get rid of state STATE_RM from the specfile"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help flag",
      "description": "Display help message"
    }
  },
  "additionalProperties": false,
  "required": [
    "specfile"
  ]
}