{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Perform various system checks for figuring out AFNI installation issues.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.afni_system_check.py"
    },
    "check_all": {
      "type": "boolean",
      "default": false,
      "title": "Check All Flag",
      "description": "Perform all system checks."
    },
    "find_prog": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Find Program",
      "description": "Search PATH for PROG."
    },
    "exact": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Exact Flag",
      "description": "Search for PROG without wildcards in -find_prog."
    },
    "disp_num_cpu": {
      "type": "boolean",
      "default": false,
      "title": "Display Number of CPUs Flag",
      "description": "Display number of CPUs available."
    },
    "disp_ver_matplotlib": {
      "type": "boolean",
      "default": false,
      "title": "Display matplotlib version Flag",
      "description": "Display matplotlib version (else 'None')."
    },
    "dot_file_list": {
      "type": "boolean",
      "default": false,
      "title": "Dot File List Flag",
      "description": "List all found dot files (startup files)."
    },
    "dot_file_show": {
      "type": "boolean",
      "default": false,
      "title": "Dot File Show Flag",
      "description": "Display contents of all found dot files."
    },
    "dot_file_pack": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Dot File Pack",
      "description": "Create a NAME.tgz package containing dot files."
    },
    "casematch": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Case Match Flag",
      "description": "Match case in -find_prog."
    },
    "data_root": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Data Root Directory",
      "description": "Search for class data under DDIR."
    }
  },
  "additionalProperties": false
}