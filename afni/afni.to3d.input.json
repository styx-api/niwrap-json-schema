{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "to3d",
  "description": "Creates 3D datasets for use with AFNI from 2D image files",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni/to3d"
    },
    "input_files": {
      "type": "array",
      "items": {
        "type": "string",
        "x-styx-type": "file"
      },
      "title": "Input Files",
      "description": "Input 2D image files"
    },
    "type": {
      "anyOf": [
        {
          "type": "string",
          "enum": [
            "spgr",
            "fse",
            "epan",
            "anat",
            "ct",
            "spct",
            "pet",
            "mra",
            "bmap",
            "diff",
            "omri",
            "abuc",
            "fim",
            "fith",
            "fico",
            "fitt",
            "fift",
            "fizt",
            "fict",
            "fibt",
            "fibn",
            "figt",
            "fipt",
            "fbuc"
          ]
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Image Type",
      "description": "Declare images to contain data of a given type"
    },
    "statpar": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Statistical Parameters",
      "description": "Supply auxiliary statistical parameters"
    },
    "prefix": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output Prefix",
      "description": "Prefix of the output 3D dataset"
    },
    "session": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output Session",
      "description": "Session directory for output 3D dataset"
    },
    "geomparent": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Geometry Parent File",
      "description": "Read geometry data from dataset file"
    },
    "anatparent": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Anatomy Parent File",
      "description": "Take anatomy parent from dataset file"
    },
    "nosave_flag": {
      "type": "boolean",
      "default": false,
      "title": "No Save Flag",
      "description": "Suppress autosave of 3D dataset"
    },
    "nowritebrik_flag": {
      "type": "boolean",
      "default": false,
      "title": "No Write BRIK Flag",
      "description": "Suppress saving of the BRIK file"
    },
    "view": {
      "anyOf": [
        {
          "type": "string",
          "enum": [
            "orig",
            "acpc",
            "tlrc"
          ]
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "View Type",
      "description": "Set the dataset's viewing coordinates"
    },
    "time_zt": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Time Dependent Data (zt)",
      "description": "Specify time dependent dataset (z-axis first, then t-axis)"
    },
    "time_tz": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Time Dependent Data (tz)",
      "description": "Specify time dependent dataset (t-axis first, then z-axis)"
    },
    "tr_units": {
      "anyOf": [
        {
          "type": "string",
          "enum": [
            "ms",
            "msec",
            "s",
            "sec",
            "Hz",
            "Hertz"
          ]
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "TR Units",
      "description": "Specify TR units"
    },
    "torg": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Time Origin",
      "description": "Set time origin of dataset"
    },
    "xFOV": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "X-Axis FOV",
      "description": "Specify size and orientation of the x-axis extent"
    },
    "yFOV": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Y-Axis FOV",
      "description": "Specify size and orientation of the y-axis extent"
    },
    "zFOV": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Z-Axis FOV",
      "description": "Specify size and orientation of the z-axis extent"
    },
    "xSLAB": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "X-Axis Slab",
      "description": "Specify x-axis slab"
    },
    "ySLAB": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Y-Axis Slab",
      "description": "Specify y-axis slab"
    },
    "zSLAB": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Z-Axis Slab",
      "description": "Specify z-axis slab"
    },
    "zorigin": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Z-Origin",
      "description": "Set the center of the first slice offset in z-axis"
    },
    "data_type": {
      "anyOf": [
        {
          "type": "string",
          "enum": [
            "short",
            "float",
            "byte",
            "complex"
          ]
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Data Type",
      "description": "Set voxel data to be stored as given data type"
    },
    "global_scaling_factor": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Global Scaling Factor",
      "description": "Global scaling factor"
    },
    "nofloatscan_flag": {
      "type": "boolean",
      "default": false,
      "title": "No Float Scan Flag",
      "description": "Do not scan for illegal floating point values"
    },
    "in1_flag": {
      "type": "boolean",
      "default": false,
      "title": "In 1 Flag",
      "description": "Read and process images one slice at a time"
    },
    "orient": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Orientation Code",
      "description": "Set the orientation of the 3D volumes"
    },
    "skip_outliers_flag": {
      "type": "boolean",
      "default": false,
      "title": "Skip Outliers Flag",
      "description": "Skip the outlier check for 3D+time datasets"
    },
    "text_outliers_flag": {
      "type": "boolean",
      "default": false,
      "title": "Text Outliers Flag",
      "description": "Only print out the outlier check results in text form"
    },
    "save_outliers": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Save Outliers File",
      "description": "Save the outliers count into a 1D file"
    },
    "assume_dicom_mosaic_flag": {
      "type": "boolean",
      "default": false,
      "title": "Assume DICOM Mosaic Flag",
      "description": "Assume any Siemens DICOM file is a potential MOSAIC image"
    },
    "oblique_origin_flag": {
      "type": "boolean",
      "default": false,
      "title": "Oblique Origin Flag",
      "description": "Assume origin and orientation from oblique transformation matrix"
    },
    "reverse_list_flag": {
      "type": "boolean",
      "default": false,
      "title": "Reverse List Flag",
      "description": "Reverse the input file list"
    },
    "use_last_elem_flag": {
      "type": "boolean",
      "default": false,
      "title": "Use Last Element Flag",
      "description": "Search DICOM images for the last occurrence of each element"
    },
    "use_old_mosaic_code_flag": {
      "type": "boolean",
      "default": false,
      "title": "Use Old Mosaic Code Flag",
      "description": "Do not use the Dec 2010 updates to Siemens mosaic code"
    },
    "ushort2float_flag": {
      "type": "boolean",
      "default": false,
      "title": "Ushort2Float Flag",
      "description": "Convert input shorts to float and add 2^16 to any negatives"
    },
    "verbose_flag": {
      "type": "boolean",
      "default": false,
      "title": "Verbose Flag",
      "description": "Show debugging information for reading DICOM files"
    },
    "gamma": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Gamma Correction",
      "description": "Gamma correction factor for the monitor"
    },
    "ncolors": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of Colors",
      "description": "Number of gray levels for the image displays"
    },
    "xtwarns_flag": {
      "type": "boolean",
      "default": false,
      "title": "XT Warns Flag",
      "description": "Turn on display of Xt warning messages"
    },
    "quit_on_err_flag": {
      "type": "boolean",
      "default": false,
      "title": "Quit on Error Flag",
      "description": "Do not launch interactive to3d mode if input has error"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_files",
    "@type"
  ]
}