{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "@diff.files",
  "description": "Show file differences (between specified files and those in another directory)",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni/@diff.files"
    },
    "files": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Files",
      "description": "List of files to compare"
    },
    "old_dir": {
      "type": "string",
      "title": "Old Directory",
      "description": "Directory containing the files to compare against"
    },
    "diff_opts": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Diff Options",
      "description": "Add options to diff command (e.g., -w)"
    },
    "diff_prog": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Diff Program",
      "description": "Display diffs using a specified program (e.g., meld, xxdiff)"
    },
    "ignore_missing": {
      "type": "boolean",
      "default": false,
      "title": "Ignore Missing Files Flag",
      "description": "Continue even if files are missing"
    },
    "longlist": {
      "type": "boolean",
      "default": false,
      "title": "Longlist Flag",
      "description": "Run 'ls -l' on both directories instead of listing files"
    },
    "save": {
      "type": "boolean",
      "default": false,
      "title": "Save Diffs Flag",
      "description": "Create PDFs of diffs"
    },
    "show": {
      "type": "boolean",
      "default": false,
      "title": "Show Diffs Flag",
      "description": "Show diffs using 'diff'"
    },
    "xxdiff": {
      "type": "boolean",
      "default": false,
      "title": "XXDiff Flag",
      "description": "Show diffs using 'xxdiff'"
    },
    "X_flag": {
      "type": "boolean",
      "default": false,
      "title": "X Flag",
      "description": "Implies -xxdiff and -ignore_missing"
    },
    "verbosity": {
      "anyOf": [
        {
          "type": "number",
          "minimum": 1,
          "maximum": 3
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Verbosity Level",
      "description": "Set verbosity level (2 or 3)"
    }
  },
  "additionalProperties": false,
  "required": [
    "files",
    "old_dir",
    "@type"
  ]
}