{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Computes the median in a spherical neighborhood around each point in the input to produce the output.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.3dMedianFilter"
    },
    "irad": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Radius",
      "description": "Radius in voxels of spherical regions"
    },
    "iter": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Iterations",
      "description": "Iterate 'n' times [default=1]"
    },
    "verbose": {
      "type": "boolean",
      "default": false,
      "title": "Verbose flag",
      "description": "Be verbose during run"
    },
    "prefix": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output Prefix",
      "description": "Use 'pp' for prefix of output dataset"
    },
    "automask": {
      "type": "boolean",
      "default": false,
      "title": "Automask flag",
      "description": "Create a mask (a la 3dAutomask)"
    },
    "dataset": {
      "type": "string",
      "title": "Dataset",
      "description": "Input dataset"
    }
  },
  "additionalProperties": false,
  "required": [
    "dataset"
  ]
}