{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Shifts and rotates an image",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "imrotate"
    },
    "linear_interpolation": {
      "type": "boolean",
      "default": false,
      "title": "Linear Interpolation",
      "description": "Use bilinear interpolation (default is bicubic)"
    },
    "fourier_interpolation": {
      "type": "boolean",
      "default": false,
      "title": "Fourier Interpolation",
      "description": "Use Fourier interpolation"
    },
    "dx": {
      "type": "number",
      "title": "Dx",
      "description": "Pixels to shift rightwards (can be non-integer)"
    },
    "dy": {
      "type": "number",
      "title": "Dy",
      "description": "Pixels to shift downwards (can be non-integer)"
    },
    "phi": {
      "type": "number",
      "title": "Phi",
      "description": "Degrees to rotate clockwise"
    },
    "input_image": {
      "type": "string",
      "title": "Input Image",
      "description": "Input image file"
    },
    "output_image": {
      "type": "string",
      "title": "Output Image",
      "description": "Output image file"
    }
  },
  "additionalProperties": false,
  "required": [
    "dx",
    "dy",
    "phi",
    "input_image",
    "output_image"
  ]
}