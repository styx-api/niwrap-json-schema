{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Generate script to test anatomical/EPI alignment",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "uber_align_test.py"
    },
    "no_gui": {
      "type": "boolean",
      "default": false,
      "title": "No GUI",
      "description": "Run without the graphical user interface (GUI)"
    },
    "print_script": {
      "type": "boolean",
      "default": false,
      "title": "Print Script",
      "description": "Print the generated script to standard output"
    },
    "save_script": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Save Script",
      "description": "Save the generated script to the specified file"
    },
    "user_variable": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "User Variables",
      "description": "Specify user variables for alignment"
    },
    "qt_opts": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "QT Options",
      "description": "Pass PyQt4 options directly to the GUI"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help",
      "description": "Show help information"
    },
    "help_gui": {
      "type": "boolean",
      "default": false,
      "title": "GUI Help",
      "description": "Show help information for the GUI"
    },
    "history": {
      "type": "boolean",
      "default": false,
      "title": "History",
      "description": "Show command history"
    },
    "show_valid_opts": {
      "type": "boolean",
      "default": false,
      "title": "Show Valid Options",
      "description": "Show valid options"
    },
    "version": {
      "type": "boolean",
      "default": false,
      "title": "Version",
      "description": "Show version information"
    }
  },
  "additionalProperties": false
}