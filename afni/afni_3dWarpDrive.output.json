{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "3dWarpDrive",
  "description": "Warp a dataset to match another one (the base) using an affine transformation.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "root": {
      "type": "string",
      "title": "Root",
      "description": "Output root directory"
    },
    "output_dataset": {
      "type": "string",
      "title": "Output Dataset",
      "description": "Warped dataset output"
    },
    "output_summary": {
      "type": "string",
      "title": "Summary File",
      "description": "Summary of calculations"
    },
    "oned_output_file": {
      "type": "string",
      "title": "Warping Parameters File",
      "description": "File with warping parameters"
    },
    "matrix_output_file": {
      "type": "string",
      "title": "Transformation Matrices File",
      "description": "File with transformation matrices"
    }
  }
}