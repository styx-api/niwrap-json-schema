{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "uber_skel.py",
  "description": "Sample uber processing program for initializing user and control variables, with options for both GUI and non-GUI modes.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.uber_skel.py"
    },
    "qt_options": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Qt Options",
      "description": "Pass PyQt4 options directly to the GUI"
    },
    "no_gui_flag": {
      "type": "boolean",
      "default": false,
      "title": "No GUI Flag",
      "description": "Run without the GUI"
    },
    "print_script": {
      "type": "boolean",
      "default": false,
      "title": "Print Script Flag",
      "description": "Print the script"
    },
    "save_script": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Save Script",
      "description": "Save the script"
    },
    "user_var": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "User Variable",
      "description": "Initialize user variables. Usage: -uvar <name> <value>"
    },
    "help_howto_program": {
      "type": "boolean",
      "default": false,
      "title": "Help How to Program Flag",
      "description": "Show programming comments"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Show help"
    },
    "help_gui": {
      "type": "boolean",
      "default": false,
      "title": "Help GUI Flag",
      "description": "Show help for the GUI"
    },
    "history": {
      "type": "boolean",
      "default": false,
      "title": "History Flag",
      "description": "Show history"
    },
    "show_valid_opts": {
      "type": "boolean",
      "default": false,
      "title": "Show Valid Options Flag",
      "description": "Show valid options"
    },
    "version": {
      "type": "boolean",
      "default": false,
      "title": "Version Flag",
      "description": "Show version"
    }
  },
  "additionalProperties": false
}