{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "serial_helper",
  "description": "Passes motion parameters from socket to serial port",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni/serial_helper"
    },
    "serial_port": {
      "type": "string",
      "title": "Serial Port",
      "description": "Output serial port filename"
    },
    "sock_num": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Socket Number",
      "description": "Specify socket number to serve"
    },
    "mp_max": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Maximum MP Value",
      "description": "Limit the maximum value of the MP data"
    },
    "mp_min": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Minimum MP Value",
      "description": "Limit the minimum value of the MP data"
    },
    "num_extra": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of Extras",
      "description": "Receive additional floats per TR"
    },
    "disp_all": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Display All Voxels",
      "description": "Receive NVOX*8 extra floats per TR"
    },
    "debug": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Debug Level",
      "description": "Set the debugging level (0-3)"
    },
    "show_times": {
      "type": "boolean",
      "default": false,
      "title": "Show Times",
      "description": "Show communication times"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help",
      "description": "Display this help information"
    },
    "hist": {
      "type": "boolean",
      "default": false,
      "title": "History",
      "description": "Show the module history"
    },
    "no_serial": {
      "type": "boolean",
      "default": false,
      "title": "No Serial Output",
      "description": "Turn off serial port output"
    },
    "version": {
      "type": "boolean",
      "default": false,
      "title": "Version",
      "description": "Show the current version number"
    }
  },
  "additionalProperties": false,
  "required": [
    "serial_port",
    "@type"
  ]
}