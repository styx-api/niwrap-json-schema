{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "3dBRAIN_VOYAGERtoAFNI",
  "description": "Converts a BrainVoyager vmr dataset to AFNI's BRIK format based on information from BrainVoyager's website.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "root": {
      "type": "string",
      "title": "Root",
      "description": "Output root directory"
    },
    "output_brik_file": {
      "type": "string",
      "title": "Output BRIK File",
      "description": "Output BRIK file"
    },
    "output_head_file": {
      "type": "string",
      "title": "Output HEAD File",
      "description": "Output HEAD file"
    }
  }
}