{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Alters the input dataset's slice thickness and/or number.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.3dZregrid"
    },
    "z_thickness": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Slice Thickness",
      "description": "Set slice thickness to D mm"
    },
    "slice_count": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Slice Count",
      "description": "Set slice count to N"
    },
    "z_size": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Dataset Thickness",
      "description": "Set thickness of dataset (center-to-center of first and last slices) to Z mm"
    },
    "prefix": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output Prefix",
      "description": "Write result to dataset with prefix P"
    },
    "infile": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input file",
      "description": "Input dataset"
    },
    "verbose": {
      "type": "boolean",
      "default": false,
      "title": "Verbose Flag",
      "description": "Write progress reports to stderr"
    }
  },
  "additionalProperties": false,
  "required": [
    "infile"
  ]
}