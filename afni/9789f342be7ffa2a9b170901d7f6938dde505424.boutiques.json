{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Display, modify, or compare nifti headers",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.nifti_tool"
    },
    "action": {
      "type": "string",
      "title": "Action to perform",
      "description": "Action type that defines what nifti_tool will do."
    },
    "input_files": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Input files",
      "description": "One or more input nifti files."
    },
    "field": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Field",
      "description": "Field name to display, modify, or compare."
    },
    "mod_field": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Modify field",
      "description": "Field name and new value to modify."
    },
    "prefix": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output file prefix",
      "description": "Prefix for the output file."
    },
    "debug": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Debug level",
      "description": "Debugging level (0-3)."
    },
    "overwrite": {
      "type": "boolean",
      "default": false,
      "title": "Overwrite mode",
      "description": "Overwrite input files with modifications."
    },
    "convert2dtype": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Convert to datatype",
      "description": "Convert data to a new datatype."
    },
    "convert_fail_choice": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Conversion failure choice",
      "description": "Action on conversion failure (ignore, warn, fail)."
    },
    "convert_verify": {
      "type": "boolean",
      "default": false,
      "title": "Verify conversion",
      "description": "Verify datatype conversion exactness."
    },
    "add_comment_ext": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Add comment extension",
      "description": "Add COMMENT-type extension to dataset."
    },
    "rm_ext": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Remove extension",
      "description": "Remove extension by index or ALL."
    }
  },
  "additionalProperties": false,
  "required": [
    "action"
  ]
}