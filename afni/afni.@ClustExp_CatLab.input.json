{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "@ClustExp_CatLab",
  "description": "Helper script to concatenate and label a group of data sets.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni/@ClustExp_CatLab"
    },
    "prefix": {
      "type": "string",
      "title": "Prefix",
      "description": "Output file name"
    },
    "input_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input file",
      "description": "Name of file containing the labels and data sets table (e.g. subjects.csv)"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Show help information"
    }
  },
  "additionalProperties": false,
  "required": [
    "prefix",
    "input_file",
    "@type"
  ]
}