{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "@afni_R_package_install",
  "description": "Helper script to install R packages for various afni-ish purposes.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni/@afni_R_package_install"
    },
    "afni": {
      "type": "boolean",
      "default": false,
      "title": "AFNI Packages",
      "description": "Install AFNI related R packages."
    },
    "shiny": {
      "type": "boolean",
      "default": false,
      "title": "Shiny App Packages",
      "description": "Install AFNI related shiny app packages."
    },
    "bayes_view": {
      "type": "boolean",
      "default": false,
      "title": "bayes_view Packages",
      "description": "Install R packages for bayes_view."
    },
    "circos": {
      "type": "boolean",
      "default": false,
      "title": "CIRCOS Packages",
      "description": "Install OmicCircos for FATCAT_matplot."
    },
    "custom_packages": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Custom Packages",
      "description": "Install custom R packages (space-separated list). Must start and end with double quotes."
    },
    "mirror": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "CRAN Mirror",
      "description": "Set the CRAN mirror to a custom URL."
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Show help message."
    }
  },
  "additionalProperties": false,
  "required": [
    "@type"
  ]
}