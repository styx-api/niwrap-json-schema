{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Describe or convert MATLAB files (.mat) to 1D format",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "read_matlab_files.py"
    },
    "infiles": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Input files",
      "description": "Input MATLAB files to be processed"
    },
    "prefix": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output file prefix",
      "description": "Prefix for output file names"
    },
    "overwrite": {
      "type": "boolean",
      "default": false,
      "title": "Overwrite flag",
      "description": "Overwrite any existing output files"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help flag",
      "description": "Show help message"
    },
    "history": {
      "type": "boolean",
      "default": false,
      "title": "History flag",
      "description": "Show revision history"
    },
    "version": {
      "type": "boolean",
      "default": false,
      "title": "Version flag",
      "description": "Show version number"
    }
  },
  "additionalProperties": false,
  "required": [
    "infiles"
  ]
}