{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SurfClust",
  "description": "A program to perform clustering analysis surfaces",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "root": {
      "type": "string",
      "title": "Root",
      "description": "Output root directory"
    },
    "cluster_table": {
      "type": "string",
      "title": "Cluster table",
      "description": "Cluster table output"
    },
    "clustered_dataset": {
      "type": "string",
      "title": "Clustered dataset",
      "description": "Clustered version of input dataset"
    },
    "roi_dataset": {
      "type": "string",
      "title": "ROI dataset",
      "description": "ROI dataset with rank of clusters"
    }
  }
}