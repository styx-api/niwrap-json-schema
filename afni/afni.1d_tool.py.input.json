{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "1d_tool.py",
  "description": "A tool for manipulating and evaluating 1D files",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.1d_tool.py"
    },
    "infile": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input file",
      "description": "Input 1D file"
    },
    "write": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output file",
      "description": "Output file to write results"
    },
    "select_cols": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Select columns",
      "description": "Select specific columns"
    },
    "select_rows": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Select rows",
      "description": "Select specific rows"
    },
    "select_groups": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Select groups",
      "description": "Select columns by group numbers"
    },
    "censor_motion": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Censor motion",
      "description": "Generate a boolean censor file"
    },
    "pad_into_many_runs": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Pad into many runs",
      "description": "Pad a 1D file into many runs"
    },
    "set_nruns": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Set number of runs",
      "description": "Set number of runs"
    },
    "set_run_lengths": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Set run lengths",
      "description": "Set run lengths"
    },
    "show_rows_cols": {
      "type": "boolean",
      "default": false,
      "title": "Show rows and columns",
      "description": "Show the number of rows and columns"
    },
    "transpose": {
      "type": "boolean",
      "default": false,
      "title": "Transpose",
      "description": "Transpose the input matrix"
    },
    "reverse": {
      "type": "boolean",
      "default": false,
      "title": "Reverse",
      "description": "Reverse the data over time"
    },
    "show_max_displace": {
      "type": "boolean",
      "default": false,
      "title": "Show maximum displacement",
      "description": "Show the maximum pairwise displacement"
    }
  },
  "additionalProperties": false,
  "required": [
    "infile"
  ]
}