{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A tool to compare the modification times of two files",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "@TimeDiff"
    },
    "file1": {
      "type": "string",
      "title": "File 1",
      "description": "First file to compare (e.g., file1.txt)"
    },
    "file2": {
      "type": "string",
      "title": "File 2",
      "description": "Second file to compare (e.g., file2.txt)"
    }
  },
  "additionalProperties": false,
  "required": [
    "file1",
    "file2"
  ]
}