{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "realtime_receiver.py",
  "description": "Program to receive and display real-time plugin data from AFNI.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.realtime_receiver.py"
    },
    "show_data": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Show Data",
      "description": "Display incoming data in terminal window"
    },
    "write_text_data": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Write Text Data",
      "description": "Write data to text file"
    },
    "data_choice": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Data Choice",
      "description": "Pick which data to send as feedback"
    },
    "serial_port": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Serial Port",
      "description": "Specify serial port file for feedback data"
    },
    "show_demo_gui": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Show Demo GUI",
      "description": "Demonstrate a feedback GUI"
    },
    "dc_params": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Data Choice Parameters",
      "description": "Set data_choice parameters, e.g. for diff_ratio, params P1 P2"
    },
    "extras_on_one_line": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Extras On One Line",
      "description": "Show 'extras' on one line only"
    },
    "show_comm_times": {
      "type": "boolean",
      "default": false,
      "title": "Show Communication Times",
      "description": "Display communication times"
    },
    "show_demo_data": {
      "type": "boolean",
      "default": false,
      "title": "Show Demo Data",
      "description": "Display feedback data in terminal window"
    },
    "swap": {
      "type": "boolean",
      "default": false,
      "title": "Swap Bytes",
      "description": "Swap bytes of incoming data"
    },
    "tcp_port": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "TCP Port",
      "description": "Specify TCP port for incoming connections"
    },
    "verbosity": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Verbosity Level",
      "description": "Set the verbosity level"
    }
  },
  "additionalProperties": false
}