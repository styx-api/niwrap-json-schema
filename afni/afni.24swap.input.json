{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "24swap",
  "description": "Swaps bytes pairs and/or quadruples on the files listed.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.24swap"
    },
    "quiet": {
      "type": "boolean",
      "default": false,
      "title": "Quiet Flag",
      "description": "Operate quietly"
    },
    "pattern": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Byte Swap Pattern",
      "description": "Pattern that determines the pattern of 2 and 4 byte swaps."
    },
    "input_files": {
      "type": "array",
      "items": {
        "type": "string",
        "x-styx-type": "file"
      },
      "title": "Input Files",
      "description": "Input file(s) to swap bytes"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_files"
  ]
}