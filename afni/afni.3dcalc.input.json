{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "3dcalc",
  "description": "AFNI's calculator program.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.3dcalc"
    },
    "in_file_a": {
      "type": "string",
      "x-styx-type": "file",
      "title": "In file a",
      "description": "Input file to 3dcalc."
    },
    "in_file_b": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "In file b",
      "description": "Operand file to 3dcalc."
    },
    "in_file_c": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "In file c",
      "description": "Operand file to 3dcalc."
    },
    "other": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Other",
      "description": "Other options."
    },
    "overwrite": {
      "type": "boolean",
      "default": false,
      "title": "Overwrite",
      "description": "Overwrite output."
    },
    "single_idx": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Single idx",
      "description": "Volume index for in_file_a."
    },
    "start_idx": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Start idx",
      "description": "Start index for in_file_a."
    },
    "stop_idx": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Stop idx",
      "description": "Stop index for in_file_a."
    },
    "expr": {
      "type": "string",
      "title": "Expr",
      "description": "Expr."
    },
    "prefix": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Prefix",
      "description": "Output image file name."
    }
  },
  "additionalProperties": false,
  "required": [
    "in_file_a",
    "expr"
  ]
}