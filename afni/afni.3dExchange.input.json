{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "3dExchange",
  "description": "Replaces voxel values using a mapping file with specified columns",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.3dExchange"
    },
    "prefix": {
      "type": "string",
      "title": "Output Prefix",
      "description": "Output prefix"
    },
    "infile": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input file",
      "description": "Input dataset. Acceptable data types are byte, short, and floats."
    },
    "mapfile": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Mapping file",
      "description": "Mapping columns. Input values in the first column, output values in the second column"
    },
    "version": {
      "type": "boolean",
      "default": false,
      "title": "Version info flag",
      "description": "Print author and version info"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help flag",
      "description": "Print this help screen"
    }
  },
  "additionalProperties": false,
  "required": [
    "prefix",
    "infile",
    "mapfile"
  ]
}