{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CreateIcosahedron",
  "description": "Tool to create an icosahedron with optional tessellation.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.CreateIcosahedron"
    },
    "rad": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Radius",
      "description": "Size of icosahedron."
    },
    "rec_depth": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Recursive Depth",
      "description": "Recursive tessellation depth for icosahedron."
    },
    "lin_depth": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Linear Depth",
      "description": "Number of edge divides for linear icosahedron tessellation."
    },
    "min_nodes": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Minimum Nodes",
      "description": "Automatically select the -ld value which produces an icosahedron of at least MIN_NODES nodes."
    },
    "nums": {
      "type": "boolean",
      "default": false,
      "title": "Output Numbers Flag",
      "description": "Output the number of nodes (vertices), triangles, edges, total volume, and total area then quit."
    },
    "nums_quiet": {
      "type": "boolean",
      "default": false,
      "title": "Quiet Output Numbers Flag",
      "description": "Output numbers in a less verbose manner."
    },
    "center_coordinates": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 3,
          "maxItems": 3
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Center Coordinates",
      "description": "Coordinates of the center of the icosahedron."
    },
    "to_sphere": {
      "type": "boolean",
      "default": false,
      "title": "Project to Sphere Flag",
      "description": "Project nodes to sphere."
    },
    "output_prefix": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output File Prefix",
      "description": "Prefix for output files."
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Display help message."
    }
  },
  "additionalProperties": false
}