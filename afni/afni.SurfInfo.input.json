{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SurfInfo",
  "description": "Tool to gather information about surface files.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni/SurfInfo"
    },
    "surface": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Surface file",
      "description": "Input surface file."
    },
    "com": {
      "type": "boolean",
      "default": false,
      "title": "Center of mass flag",
      "description": "Output the center of mass."
    },
    "debug_level": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Debug level",
      "description": "Debugging level (2 turns LocalHead ON)"
    },
    "detail_level": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Detail level",
      "description": "Calculate surface metrics. 1=yes, 0=no"
    },
    "n_node": {
      "type": "boolean",
      "default": false,
      "title": "Number of nodes flag",
      "description": "Output the number of nodes."
    },
    "n_faceset": {
      "type": "boolean",
      "default": false,
      "title": "Number of face sets flag",
      "description": "Output the number of face sets."
    },
    "n_tri": {
      "type": "boolean",
      "default": false,
      "title": "Number of triangles flag",
      "description": "Output the number of triangles."
    },
    "quiet": {
      "type": "boolean",
      "default": false,
      "title": "Quiet flag",
      "description": "Do not include the name of the parameter in output."
    },
    "separator": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Separator string",
      "description": "Use string SEP to separate parameter values. Default is ' ; '"
    },
    "input_surface": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Input surface type and file",
      "description": "Specify the input surface type and file."
    },
    "surface_state": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Surface type, state, and name",
      "description": "Specify surface type, state, and name."
    },
    "surface_volume": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Surface volume file",
      "description": "Specify a surface volume file."
    },
    "spec_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Spec file",
      "description": "Specify a surface specification (spec) file."
    },
    "novolreg": {
      "type": "boolean",
      "default": false,
      "title": "No volume registration",
      "description": "Ignore any Rotate, Volreg, Tagalign, or WarpDrive transformations present in the Surface Volume."
    },
    "noxform": {
      "type": "boolean",
      "default": false,
      "title": "No transform",
      "description": "Same as -novolreg."
    },
    "setenv": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Set environment variable",
      "description": "Set environment variable ENVname to be ENVvalue. Quotes are necessary."
    },
    "trace": {
      "type": "boolean",
      "default": false,
      "title": "Trace flag",
      "description": "Turns on In/Out debug and Memory tracing."
    },
    "extreme_trace": {
      "type": "boolean",
      "default": false,
      "title": "Extreme trace flag",
      "description": "Turns on extreme tracing."
    },
    "nomall": {
      "type": "boolean",
      "default": false,
      "title": "No memory trace flag",
      "description": "Turn off memory tracing."
    },
    "yesmall": {
      "type": "boolean",
      "default": false,
      "title": "Memory trace flag",
      "description": "Turn on memory tracing (default)."
    }
  },
  "additionalProperties": false,
  "required": [
    "surface"
  ]
}