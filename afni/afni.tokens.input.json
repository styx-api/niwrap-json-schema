{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "tokens",
  "description": "Token counting tool",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.tokens"
    },
    "infile": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Input file",
      "description": "Specify input file (stdin if none)"
    },
    "extra_char": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Extra character",
      "description": "Specify extra character to count as valid. Can be used more than once."
    }
  },
  "additionalProperties": false
}