{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "@IsoMasks",
  "description": "Creates isosurfaces from isovolume envelopes.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni/@IsoMasks"
    },
    "input_dataset": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Dataset",
      "description": "Input dataset for creating isosurfaces"
    },
    "isovals": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Isovalues",
      "description": "Isovalue thresholds for creating isosurfaces"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_dataset",
    "@type"
  ]
}