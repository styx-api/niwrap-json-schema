{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DriveSuma",
  "description": "A program to drive suma from the command line.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.DriveSuma"
    },
    "command": {
      "type": "string",
      "title": "Command",
      "description": "Command to be sent to SUMA."
    },
    "surf_label": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Surface Label",
      "description": "A label (identifier) to assign to the surface"
    },
    "surface_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Surface File",
      "description": "Name of surface file"
    },
    "surf_state": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Surface State",
      "description": "Name the state of that surface"
    },
    "surf_winding": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Surface Winding",
      "description": "Winding of triangles (ccw or cw)"
    },
    "coordinates": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Coordinates File",
      "description": "A 1D formatted file containing new coordinates for nodes"
    },
    "autorecord": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Autorecord Prefix",
      "description": "Set the autorecord prefix"
    },
    "background_color": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Background Color",
      "description": "Set the background color (R G B)"
    },
    "view_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "View File",
      "description": "Load a previously saved view file"
    },
    "do_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Displayable Object File",
      "description": "Load a displayable object file"
    },
    "do_draw_mask": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "DO Draw Mask",
      "description": "Restrict where DO node-based objects are displayed"
    },
    "fixed_do": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Fixed DO",
      "description": "Load a fixed coordinate type NIML DO"
    },
    "mobile_do": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Mobile DO",
      "description": "Mobile version of fixed_do"
    },
    "key_press": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Key Press",
      "description": "Act as if a key press was applied in the viewer"
    },
    "viewer": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Viewer",
      "description": "Specify which viewer should be acted upon"
    },
    "anim_dup": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Animation Duplication",
      "description": "Save DUP copies of each frame into movie"
    },
    "save_as": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Save As",
      "description": "Save image(s) in recorder in specified format"
    },
    "save_index": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Save Index",
      "description": "Save one image indexed IND"
    },
    "save_range": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Save Range",
      "description": "Save images from FROM to TO"
    },
    "save_last": {
      "type": "boolean",
      "default": false,
      "title": "Save Last",
      "description": "Save last image"
    },
    "save_last_n": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Save Last N",
      "description": "Save last N images"
    },
    "save_all": {
      "type": "boolean",
      "default": false,
      "title": "Save All",
      "description": "Save all images"
    },
    "echo_edu": {
      "type": "boolean",
      "default": false,
      "title": "Echo Edu",
      "description": "Echoes the entire command line for edification purposes"
    },
    "echo_nel_stdout": {
      "type": "boolean",
      "default": false,
      "title": "Echo NEL to STDOUT",
      "description": "Spit out the NIML object being sent to SUMA to stdout"
    },
    "echo_nel_stderr": {
      "type": "boolean",
      "default": false,
      "title": "Echo NEL to STDERR",
      "description": "Spit out the NIML object being sent to SUMA to stderr"
    },
    "examples": {
      "type": "boolean",
      "default": false,
      "title": "Show Examples",
      "description": "Show all the sample commands and exit"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help",
      "description": "Show the help in detail"
    },
    "h": {
      "type": "boolean",
      "default": false,
      "title": "Short Help",
      "description": "Show help with slightly less detail"
    },
    "help_nido": {
      "type": "boolean",
      "default": false,
      "title": "NIDO Help",
      "description": "Show the help for NIML Displayable Objects and exit"
    },
    "c_demo": {
      "type": "boolean",
      "default": false,
      "title": "C Demo",
      "description": "Execute a preset number of commands to illustrate how one can communicate with SUMA from one's own C code"
    },
    "viewer_cont": {
      "type": "boolean",
      "default": false,
      "title": "Viewer Controller",
      "description": "Apply settings to viewer or viewer controller"
    }
  },
  "additionalProperties": false,
  "required": [
    "command"
  ]
}