{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "@djunct_overlap_check",
  "description": "A helper script for visualizing overlap between datasets in AFNI",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni/@djunct_overlap_check"
    },
    "ulay": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Underlay dataset",
      "description": "Dataset to use as the underlay (background)"
    },
    "olay": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Overlay dataset",
      "description": "Dataset to use as the overlay (foreground)"
    },
    "prefix": {
      "type": "string",
      "title": "Prefix",
      "description": "Prefix for the output files"
    },
    "box_focus_slices": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Box focus slices dataset",
      "description": "Dataset for box focus slices"
    },
    "montgap": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Montage gap",
      "description": "Gap between montage slices"
    },
    "montcolor": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Montage color",
      "description": "Color of the montage gap"
    },
    "cbar": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Colorbar",
      "description": "Colorbar for the overlay"
    },
    "opacity": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Overlay opacity",
      "description": "Opacity of the overlay"
    },
    "zerocolor": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Zero color",
      "description": "Color for zero values"
    },
    "set_dicom_xyz": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 3,
          "maxItems": 3
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "DICOM coordinates",
      "description": "Set DICOM coordinates for slice location"
    },
    "ulay_range": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Underlay range",
      "description": "Range for underlay values"
    },
    "ulay_range_nz": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Non-zero underlay range",
      "description": "Range for non-zero underlay values"
    },
    "montx": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Montage X panels",
      "description": "Number of panels in X direction in montage"
    },
    "monty": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Montage Y panels",
      "description": "Number of panels in Y direction in montage"
    },
    "montx_cat": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Montage X Cat panels",
      "description": "Number of X panes per image in montage"
    },
    "monty_cat": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Montage Y Cat panels",
      "description": "Number of Y panes per image in montage"
    },
    "label_mode": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Label mode",
      "description": "Label mode"
    },
    "pbar_posonly_off": {
      "type": "boolean",
      "default": false,
      "title": "PBar position-only off",
      "description": "Turn off position-only p-bar"
    },
    "edgy_ulay": {
      "type": "boolean",
      "default": false,
      "title": "Edgy underlay",
      "description": "Edgify the underlay"
    },
    "set_dicom_xyz_off": {
      "type": "boolean",
      "default": false,
      "title": "Set DICOM XYZ off",
      "description": "Turn off DICOM coordinates setting"
    },
    "no_cor": {
      "type": "boolean",
      "default": false,
      "title": "No coronal slices",
      "description": "Skip coronal slices"
    },
    "no_axi": {
      "type": "boolean",
      "default": false,
      "title": "No axial slices",
      "description": "Skip axial slices"
    },
    "no_sag": {
      "type": "boolean",
      "default": false,
      "title": "No sagittal slices",
      "description": "Skip sagittal slices"
    },
    "no_clean": {
      "type": "boolean",
      "default": false,
      "title": "No clean",
      "description": "Do not clean up temporary files"
    }
  },
  "additionalProperties": false,
  "required": [
    "ulay",
    "olay",
    "prefix",
    "@type"
  ]
}