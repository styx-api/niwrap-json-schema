{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "3dAcost",
  "description": "Allineate dataset to a base dataset",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.3dAcost"
    },
    "infile": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input file",
      "description": "Input dataset for allineation"
    },
    "basefile": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Base file",
      "description": "Base dataset for allineation"
    },
    "outfile": {
      "type": "string",
      "title": "Output file prefix",
      "description": "Prefix for the output dataset"
    },
    "all_cost": {
      "type": "boolean",
      "default": false,
      "title": "Print all alignment cost metrics",
      "description": "Prints all alignment cost metrics"
    }
  },
  "additionalProperties": false,
  "required": [
    "infile",
    "basefile",
    "outfile"
  ]
}