{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "gen_group_command",
  "description": "Generate group analysis command scripts by parsing wildcard-based lists of input datasets.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.gen_group_command"
    },
    "command_name": {
      "type": "string",
      "title": "Command Name",
      "description": "Resulting command, such as 3dttest++"
    },
    "datasets": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Datasets",
      "description": "List of datasets, can be used multiple times for different groups"
    },
    "prefix": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Prefix",
      "description": "Prefix for the output file names"
    },
    "set_labels": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Set Labels",
      "description": "Labels corresponding to datasets entries"
    },
    "subj_prefix": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subject Prefix",
      "description": "Prefix for subject names"
    },
    "subj_suffix": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subject Suffix",
      "description": "Suffix for subject names"
    },
    "subs_betas": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Sub-brick Betas",
      "description": "Sub-bricks for beta weights"
    },
    "subs_tstats": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Sub-brick T-Stats",
      "description": "Sub-bricks for t-stats (3dMEMA)"
    },
    "type": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Test Type",
      "description": "Specify the type of test to perform"
    },
    "verb": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Verbosity Level",
      "description": "Set the verbosity level"
    },
    "write_script": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Write Script",
      "description": "Write command script to specified file name"
    },
    "other_options": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Other Options",
      "description": "List of options to pass along to result"
    }
  },
  "additionalProperties": false,
  "required": [
    "command_name",
    "datasets"
  ]
}