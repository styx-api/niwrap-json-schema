{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "afni_open",
  "description": "A program to open various AFNI/SUMA files.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni/afni_open"
    },
    "files": {
      "type": "array",
      "items": {
        "type": "string",
        "x-styx-type": "file"
      },
      "title": "Input Files",
      "description": "Input file(s) to be opened."
    },
    "method": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Open Method",
      "description": "Method to open files (editor, downloader, browser, afni, suma, 1dplot, ExamineXmat, iviewer, afniweb, readme)."
    },
    "editor": {
      "type": "boolean",
      "default": false,
      "title": "Editor Flag",
      "description": "Same as -w editor."
    },
    "downloader": {
      "type": "boolean",
      "default": false,
      "title": "Downloader Flag",
      "description": "Same as -w downloader."
    },
    "examinexmat": {
      "type": "boolean",
      "default": false,
      "title": "ExamineXmat Flag",
      "description": "Same as -w ExamineXmat."
    },
    "browser": {
      "type": "boolean",
      "default": false,
      "title": "Browser Flag",
      "description": "Same as -w browser."
    },
    "readme": {
      "type": "boolean",
      "default": false,
      "title": "Readme Flag",
      "description": "Same as -w readme."
    },
    "afniweb": {
      "type": "boolean",
      "default": false,
      "title": "Afniweb Flag",
      "description": "Same as -w afniweb."
    },
    "global_help": {
      "type": "boolean",
      "default": false,
      "title": "Global Help Flag",
      "description": "Show help for global options."
    },
    "gopts_help": {
      "type": "boolean",
      "default": false,
      "title": "Gopts Help Flag",
      "description": "Show help for global options."
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "The entire help output."
    },
    "mini_help": {
      "type": "boolean",
      "default": false,
      "title": "Mini Help Flag",
      "description": "Mini help."
    },
    "extreme_help": {
      "type": "boolean",
      "default": false,
      "title": "Extreme Help Flag",
      "description": "Extreme help."
    },
    "h_view": {
      "type": "boolean",
      "default": false,
      "title": "View Help in Editor Flag",
      "description": "Open help in text editor."
    },
    "h_web": {
      "type": "boolean",
      "default": false,
      "title": "View Help in Browser Flag",
      "description": "Open help in web browser."
    }
  },
  "additionalProperties": false,
  "required": [
    "files"
  ]
}