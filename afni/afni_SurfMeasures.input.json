{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SurfMeasures",
  "description": "Compute measures from surface dataset(s)",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni/SurfMeasures"
    },
    "spec_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Spec file",
      "description": "SUMA spec file containing a list of related surfaces"
    },
    "surf_A": {
      "type": "string",
      "title": "Surface A",
      "description": "Surface name (in spec file) for the first surface"
    },
    "surf_B": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Surface B",
      "description": "Surface name (in spec file) for the second surface"
    },
    "out_1D": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output 1D file",
      "description": "Output filename in 1D format"
    },
    "out_dset": {
      "type": "string",
      "title": "Output dataset file",
      "description": "Output filename with dataset format"
    },
    "func": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Function",
      "description": "Measure function to be applied"
    },
    "surf_volume": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Surface Volume",
      "description": "AFNI volume dataset associated with the surface"
    },
    "cmask": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Constraint Mask",
      "description": "Restrict nodes with a mask"
    },
    "debug": {
      "anyOf": [
        {
          "type": "integer",
          "minimum": 0,
          "maximum": 5
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Debug Level",
      "description": "Display extra run-time information with specified debug level (0-5)"
    },
    "dnode": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Debug Node",
      "description": "Display extra information for specified node"
    },
    "nodes_1D": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Node List",
      "description": "Restrict output to specific nodes listed in a file"
    },
    "info_all": {
      "type": "boolean",
      "default": false,
      "title": "Info All",
      "description": "Display all final info"
    },
    "info_area": {
      "type": "boolean",
      "default": false,
      "title": "Info Area",
      "description": "Display total area of each triangulated surface"
    },
    "info_norms": {
      "type": "boolean",
      "default": false,
      "title": "Info Norms",
      "description": "Display info about the normals"
    },
    "info_thick": {
      "type": "boolean",
      "default": false,
      "title": "Info Thickness",
      "description": "Display minimum and maximum thickness between surfaces"
    },
    "info_vol": {
      "type": "boolean",
      "default": false,
      "title": "Info Volume",
      "description": "Display total computed volume between surfaces"
    },
    "info_volg": {
      "type": "boolean",
      "default": false,
      "title": "Info Volume Gauss",
      "description": "Display total computed volume estimated via Gauss' theorem"
    },
    "ver": {
      "type": "boolean",
      "default": false,
      "title": "Version Information",
      "description": "Show program version and compile date"
    }
  },
  "additionalProperties": false,
  "required": [
    "spec_file",
    "surf_A",
    "out_dset"
  ]
}