{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Initialize or evaluate user dot files (.cshrc, .bashrc, ...) for system settings.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.init_user_dotfiles.py"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Show this help"
    },
    "help_dotfiles_all": {
      "type": "boolean",
      "default": false,
      "title": "Help dot files all flag",
      "description": "Display dot files known by the program"
    },
    "help_dotfiles_mod": {
      "type": "boolean",
      "default": false,
      "title": "Help dot files mod flag",
      "description": "Display modifiable dot files"
    },
    "help_shells": {
      "type": "boolean",
      "default": false,
      "title": "Help shells flag",
      "description": "Display shells known by the program"
    },
    "hist": {
      "type": "boolean",
      "default": false,
      "title": "History Flag",
      "description": "Show module history"
    },
    "show_valid_opts": {
      "type": "boolean",
      "default": false,
      "title": "Show valid options flag",
      "description": "List valid options"
    },
    "ver": {
      "type": "boolean",
      "default": false,
      "title": "Version Flag",
      "description": "Show current version"
    },
    "dot_files_list": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Dot files list",
      "description": "Specify dot files to focus on (default from -help_dotfiles_mod)"
    },
    "dir_bin": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Bin Directory",
      "description": "Specify bin directory to add to PATH (default comes from `which afni_proc.py`)"
    },
    "dir_dot": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Dot Directory",
      "description": "Specify directory containing dot files."
    },
    "do_updates": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Updates List",
      "description": "Specify which updates to make (default is nothing)"
    },
    "dry_run": {
      "type": "boolean",
      "default": false,
      "title": "Dry Run Flag",
      "description": "Do not modify files, but see what would happen"
    },
    "force": {
      "type": "boolean",
      "default": false,
      "title": "Force Flag",
      "description": "Force edits, whether they seem needed or not"
    },
    "make_backup": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Make Backup",
      "description": "Specify whether to make backups of originals (default is yes)"
    },
    "shell_list": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Shell List",
      "description": "Specify shells instead of using -dflist"
    },
    "test": {
      "type": "boolean",
      "default": false,
      "title": "Test Flag",
      "description": "Just test the files for potential changes"
    },
    "verbosity_level": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Verbosity Level",
      "description": "Set the verbosity level (default 1)"
    }
  },
  "additionalProperties": false
}