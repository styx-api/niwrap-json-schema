{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A tool for evaluating an AFNI X-matrix",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "xmat_tool.py"
    },
    "no_gui": {
      "type": "boolean",
      "default": false,
      "title": "No GUI",
      "description": "Do not start the GUI"
    },
    "load_xmat": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Load X-matrix",
      "description": "Load the AFNI X-matrix"
    },
    "load_1d": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Load 1D Time Series",
      "description": "Load the 1D time series"
    },
    "choose_cols": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Choose Columns",
      "description": "Select columns to fit against"
    },
    "choose_nonzero_cols": {
      "type": "boolean",
      "default": false,
      "title": "Choose Non-zero Columns",
      "description": "Select only non-zero columns"
    },
    "chrono": {
      "type": "boolean",
      "default": false,
      "title": "Chronological Order",
      "description": "Apply options chronologically"
    },
    "cormat_cutoff": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Correlation Matrix Cutoff",
      "description": "Set min cutoff for correlation matrix warnings"
    },
    "cosmat_cutoff": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Cosine Matrix Cutoff",
      "description": "Set min cutoff for cosine matrix warnings"
    },
    "cosmat_motion": {
      "type": "boolean",
      "default": false,
      "title": "Cosine Matrix Motion",
      "description": "Include motion in cosine matrix warnings"
    },
    "verb": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Verbose Level",
      "description": "Set the verbose level. Valid levels are currently 0..5."
    },
    "show_col_types": {
      "type": "boolean",
      "default": false,
      "title": "Show Column Types",
      "description": "Display columns by regressor types"
    },
    "show_conds": {
      "type": "boolean",
      "default": false,
      "title": "Show Condition Numbers",
      "description": "Display a list of condition numbers"
    },
    "show_cormat": {
      "type": "boolean",
      "default": false,
      "title": "Show Correlation Matrix",
      "description": "Display the correlation matrix"
    },
    "show_cormat_warnings": {
      "type": "boolean",
      "default": false,
      "title": "Show Correlation Matrix Warnings",
      "description": "Show correlation matrix warnings"
    },
    "show_cosmat": {
      "type": "boolean",
      "default": false,
      "title": "Show Cosine Matrix",
      "description": "Display the cosine matrix"
    },
    "show_cosmat_warnings": {
      "type": "boolean",
      "default": false,
      "title": "Show Cosine Matrix Warnings",
      "description": "Show cosine matrix warnings"
    },
    "show_fit_betas": {
      "type": "boolean",
      "default": false,
      "title": "Show Fit Betas",
      "description": "Show fit betas"
    },
    "show_fit_ts": {
      "type": "boolean",
      "default": false,
      "title": "Show Fit Time Series",
      "description": "Show fit time series"
    },
    "show_xmat": {
      "type": "boolean",
      "default": false,
      "title": "Show X-Matrix Info",
      "description": "Display general X-matrix information"
    },
    "show_1d": {
      "type": "boolean",
      "default": false,
      "title": "Show 1D Info",
      "description": "Display general 1D information"
    },
    "gui_plot_xmat_as_one": {
      "type": "boolean",
      "default": false,
      "title": "GUI Plot Xmat As One",
      "description": "Plot Xmat columns on single axis"
    }
  },
  "additionalProperties": false
}