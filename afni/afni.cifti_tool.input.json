{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "cifti_tool",
  "description": "Example tool for reading/writing CIFTI-2 datasets",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni/cifti_tool"
    },
    "input_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input file",
      "description": "Specify input dataset"
    },
    "as_cext": {
      "type": "boolean",
      "default": false,
      "title": "As CIFTI extension flag",
      "description": "Process the input as just an extension"
    },
    "disp_cext": {
      "type": "boolean",
      "default": false,
      "title": "Display CIFTI extension flag",
      "description": "Display the CIFTI extension"
    },
    "eval_cext": {
      "type": "boolean",
      "default": false,
      "title": "Evaluate CIFTI extension flag",
      "description": "Evaluate the CIFTI extension"
    },
    "eval_type": {
      "anyOf": [
        {
          "type": "string",
          "enum": [
            "has_data",
            "has_bdata",
            "num_tokens",
            "show",
            "show_names",
            "show_summary",
            "show_text_data"
          ]
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Evaluation type",
      "description": "Method for evaluation of axml elements"
    },
    "output_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output file",
      "description": "Where to write output"
    },
    "verbose_level": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Verbose level",
      "description": "Set the verbose level"
    },
    "verbose_read_level": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Verbose read level",
      "description": "Set verbose level when reading"
    },
    "both_verbose_levels": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Both verbose levels",
      "description": "Apply both -verb options"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_file"
  ]
}