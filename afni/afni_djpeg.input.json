{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "djpeg",
  "description": "Decompress a JPEG file to an image file",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni/djpeg"
    },
    "input_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input file",
      "description": "Input JPEG file (e.g. image.jpg)"
    },
    "output_file": {
      "type": "string",
      "title": "Output file",
      "description": "Output image file (e.g. image.ppm)"
    },
    "gray": {
      "type": "boolean",
      "default": false,
      "title": "Grayscale flag",
      "description": "Force grayscale output"
    },
    "fast_dct": {
      "type": "boolean",
      "default": false,
      "title": "Fast flag",
      "description": "Prevent dithering of output"
    },
    "one_pixel_height": {
      "type": "boolean",
      "default": false,
      "title": "One-pixel height flag",
      "description": "Force one-pixel modulation flag"
    },
    "pseudo_pixel_ratio": {
      "type": "boolean",
      "default": false,
      "title": "Pseudo-pixel ratio flag",
      "description": "Force pseudo-pixel ratio flag"
    },
    "crop_region": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Crop region",
      "description": "Crop region (syntax: WxH+X+Y, e.g., 100x100+10+10)"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_file",
    "output_file"
  ]
}