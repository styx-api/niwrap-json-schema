{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Create a brain-only mask of the image using AFNI 3dAutomask command.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.3dAutomask"
    },
    "prefix": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Prefix",
      "description": "Write mask into dataset with prefix 'ppp'. [Default == 'automask']"
    },
    "apply_prefix": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Apply Prefix",
      "description": "Apply mask to input dataset and save masked dataset."
    },
    "clfrac": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Clfrac",
      "description": "Sets the clip level fraction (must be 0.1-0.9). a small value will tend to make the mask larger [default = 0.5]."
    },
    "dilate": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Dilate",
      "description": "Dilate the mask outwards."
    },
    "erode": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Erode",
      "description": "Erode the mask inwards."
    },
    "outputtype": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Outputtype",
      "description": "'nifti' or 'afni' or 'nifti_gz'. Afni output filetype."
    },
    "in_file": {
      "type": "string",
      "title": "In file",
      "description": "Input file to 3dautomask."
    }
  },
  "additionalProperties": false,
  "required": [
    "in_file"
  ]
}