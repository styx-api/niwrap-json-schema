{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "3dDFT",
  "description": "Performs Discrete Fourier Transform (DFT) along the time axis of a complex- or float-valued dataset.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni/3dDFT"
    },
    "infile": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input file",
      "description": "Input dataset (complex- or float-valued)"
    },
    "prefix": {
      "type": "string",
      "title": "Output file prefix",
      "description": "Prefix for the output file"
    },
    "abs_output": {
      "type": "boolean",
      "default": false,
      "title": "Absolute value output flag",
      "description": "Output float dataset = abs(DFT)"
    },
    "nfft": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "DFT length",
      "description": "DFT length (must be >= number of time points)"
    },
    "detrend": {
      "type": "boolean",
      "default": false,
      "title": "Detrend flag",
      "description": "Least-squares remove linear drift before DFT"
    },
    "taper": {
      "anyOf": [
        {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Taper fraction",
      "description": "Fraction (0 <= f <= 1) of data to taper at ends (Hamming taper)"
    },
    "inverse": {
      "type": "boolean",
      "default": false,
      "title": "Inverse DFT flag",
      "description": "Perform the inverse DFT"
    }
  },
  "additionalProperties": false,
  "required": [
    "infile",
    "prefix",
    "@type"
  ]
}