{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Program for plotting a 1D file",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "1dRplot"
    },
    "input_file": {
      "type": "string",
      "title": "Input File",
      "description": "Input 1D file to plot"
    },
    "output_prefix": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output Prefix",
      "description": "Output prefix. See also -save."
    },
    "save_size": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Save Size",
      "description": "Save figure size in pixels. Default is 2000 2000."
    },
    "TR": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Sampling Period",
      "description": "Sampling period, in seconds."
    },
    "title": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Graph Title",
      "description": "Graph title. File name is used by default. Use NONE to be sure no title is used."
    },
    "input_type": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Input Type",
      "description": "Type of data in 1D file. Choose from 'VOLREG' or 'XMAT'."
    },
    "legend_font_size": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Legend Font Size",
      "description": "Font size for legend text."
    },
    "left_y_margin_text": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Left Y Margin Text",
      "description": "Text to be placed at left Y margin. You need one string per column."
    },
    "right_y_margin_text": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Right Y Margin Text",
      "description": "Text to be placed at right Y margin. You need one string per column."
    },
    "x_axis_label": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "X Axis Label",
      "description": "Labels for the X axis."
    },
    "y_axis_label": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Y Axis Label",
      "description": "Labels for the Y axis."
    },
    "x_axis_range": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "X Axis Range",
      "description": "Range of X axis. STEP is optional."
    },
    "y_axis_range": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Y Axis Range",
      "description": "Range of Y axis. STEP is optional."
    },
    "plot_char": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Plot Character",
      "description": "Symbols for each column in input."
    },
    "group_labels": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Group Labels",
      "description": "Legends assigned to each group. Default is no labeling."
    },
    "legend_show": {
      "type": "boolean",
      "default": false,
      "title": "Show Legend",
      "description": "Show legend."
    },
    "legend_position": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Legend Position",
      "description": "Legend position. Choose from: bottomright, bottom, bottomleft, left, topleft, top, topright, right, center."
    },
    "save_plot": {
      "type": "boolean",
      "default": false,
      "title": "Save Plot",
      "description": "Save plot and quit. No need for -prefix with this option."
    },
    "column_name_show": {
      "type": "boolean",
      "default": false,
      "title": "Show Column Names",
      "description": "Show names of column in input."
    }
  },
  "additionalProperties": false,
  "required": [
    "input_file"
  ]
}