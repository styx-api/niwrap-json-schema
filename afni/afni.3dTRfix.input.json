{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "3dTRfix",
  "description": "Re-sample dataset with irregular time grid to regular time grid via linear interpolation.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.3dTRfix"
    },
    "input_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input File",
      "description": "Input dataset"
    },
    "tr_list": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "TR List File",
      "description": "File of time gaps between sub-bricks in input dataset"
    },
    "time_list": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Time List File",
      "description": "File with times at each sub-brick in the input dataset"
    },
    "prefix": {
      "type": "string",
      "title": "Output Prefix",
      "description": "Prefix name for output dataset"
    },
    "output_tr": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output TR",
      "description": "TR value for output dataset (in seconds)"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_file",
    "prefix"
  ]
}