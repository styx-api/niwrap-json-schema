{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Helper program to anonymize files",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "@djunct_anonymize"
    },
    "input": {
      "type": "string",
      "title": "Input file",
      "description": "Input dataset"
    },
    "add_note": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Add Note",
      "description": "Add a note to the history after anonymizing"
    },
    "copy_to": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Copy To",
      "description": "Copy the input to a new file, which is then anonymized"
    },
    "overwrite": {
      "type": "boolean",
      "default": false,
      "title": "Overwrite",
      "description": "Overwrite the existing file if using -copy_to"
    }
  },
  "additionalProperties": false,
  "required": [
    "input"
  ]
}