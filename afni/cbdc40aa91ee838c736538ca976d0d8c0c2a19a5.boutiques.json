{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A script to retrieve and search AFNI's help page for all programs",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "@help.AFNI"
    },
    "match": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Match word list",
      "description": "Looks for occurrence of each word in the list in the help file. For a match with multiple words, all the words must be on the same line of text in the help file."
    },
    "lynx": {
      "type": "boolean",
      "default": false,
      "title": "Lynx viewer flag",
      "description": "Set viewer to lynx"
    },
    "vi": {
      "type": "boolean",
      "default": false,
      "title": "Vi viewer flag",
      "description": "Set viewer to vi"
    },
    "less": {
      "type": "boolean",
      "default": false,
      "title": "Less viewer flag",
      "description": "Set viewer to less (default)"
    },
    "nedit": {
      "type": "boolean",
      "default": false,
      "title": "Nedit viewer flag",
      "description": "Set viewer to nedit"
    },
    "noview": {
      "type": "boolean",
      "default": false,
      "title": "No view flag",
      "description": "Set viewer to no view"
    }
  },
  "additionalProperties": false
}