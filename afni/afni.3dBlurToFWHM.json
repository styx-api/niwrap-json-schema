{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Blurs a 'master' dataset until it reaches a specified FWHM smoothness (approximately).",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.3dBlurToFWHM"
    },
    "automask": {
      "type": "boolean",
      "default": false,
      "title": "Automask",
      "description": "Create an automask from the input dataset."
    },
    "blurmaster": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Blurmaster",
      "description": "The dataset whose smoothness controls the process."
    },
    "fwhm": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Fwhm",
      "description": "Blur until the 3d fwhm reaches this value (in mm)."
    },
    "fwhmxy": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Fwhmxy",
      "description": "Blur until the 2d (x,y)-plane fwhm reaches this value (in mm)."
    },
    "in_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "In file",
      "description": "The dataset that will be smoothed."
    },
    "mask": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Mask",
      "description": "Mask dataset, if desired. voxels not in mask will be set to zero in output."
    },
    "outputtype": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Outputtype",
      "description": "'nifti' or 'afni' or 'nifti_gz'. Afni output filetype."
    },
    "prefix": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Prefix",
      "description": "Prefix for output dataset."
    }
  },
  "additionalProperties": false,
  "required": [
    "in_file"
  ]
}