{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "adjunct_suma_fs_roi_info",
  "description": "Script for making ROI stats for the SUMA/ directory created by @SUMA_Make_Spec_FS after running FreeSurfer's recon-all.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni/adjunct_suma_fs_roi_info"
    },
    "subject_id": {
      "type": "string",
      "title": "Subject ID",
      "description": "Subject ID"
    },
    "suma_directory": {
      "type": "string",
      "title": "SUMA Directory",
      "description": "SUMA directory output by AFNI's @SUMA_Make_Spec_FS"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help",
      "description": "Show help"
    },
    "hview": {
      "type": "boolean",
      "default": false,
      "title": "Help View",
      "description": "Show help in text editor"
    },
    "version": {
      "type": "boolean",
      "default": false,
      "title": "Version",
      "description": "Show version"
    }
  },
  "additionalProperties": false,
  "required": [
    "subject_id",
    "suma_directory"
  ]
}