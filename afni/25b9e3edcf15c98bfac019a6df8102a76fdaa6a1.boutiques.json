{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Normalizes each voxel time series by multiplicative scaling",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni.3dTnorm"
    },
    "prefix": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output prefix",
      "description": "Prefix for the output dataset"
    },
    "norm2": {
      "type": "boolean",
      "default": false,
      "title": "L2 normalization flag",
      "description": "L2 normalize (sum of squares = 1)"
    },
    "normR": {
      "type": "boolean",
      "default": false,
      "title": "Sum of squares normalization flag",
      "description": "Normalize so sum of squares = number of time points"
    },
    "norm1": {
      "type": "boolean",
      "default": false,
      "title": "L1 normalization flag",
      "description": "L1 normalize (sum of absolute values = 1)"
    },
    "normx": {
      "type": "boolean",
      "default": false,
      "title": "Max absolute value normalization flag",
      "description": "Scale so max absolute value = 1 (L_infinity norm)"
    },
    "polort": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Polynomial order for detrending",
      "description": "Detrend with polynomials of order p before normalizing"
    },
    "L1fit": {
      "type": "boolean",
      "default": false,
      "title": "L1 regression detrending flag",
      "description": "Detrend with L1 regression (L2 is default)"
    },
    "input_dataset": {
      "type": "string",
      "title": "Input dataset",
      "description": "Input dataset (e.g. data.nii)"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_dataset"
  ]
}