{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Swaps byte quadruples on the listed files.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "4swap"
    },
    "files": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Input Files",
      "description": "List of files to process."
    },
    "quiet": {
      "type": "boolean",
      "default": false,
      "title": "Quiet Flag",
      "description": "Work quietly; suppress output messages."
    }
  },
  "additionalProperties": false,
  "required": [
    "files"
  ]
}