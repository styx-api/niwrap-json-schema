{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "meica.py",
  "description": "Multi-Echo Independent Component Analysis for fMRI denoising",
  "type": "object",
  "properties": {
    "@type": {
      "const": "afni/meica.py"
    },
    "infile": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input file",
      "description": "Input image dataset (e.g. dataset.nii.gz)"
    },
    "echo_times": {
      "type": "string",
      "title": "Echo times",
      "description": "Echo times (e.g. 15.0,30.0,45.0)"
    },
    "affine": {
      "type": "string",
      "title": "Affine registration matrix",
      "description": "Affine registration matrix"
    },
    "output_directory": {
      "type": "string",
      "title": "Output directory",
      "description": "Output directory"
    },
    "components": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of components",
      "description": "Number of components for ICA"
    },
    "talairach": {
      "type": "boolean",
      "default": false,
      "title": "Talairach Flag",
      "description": "Apply standard Talairach transformation"
    },
    "threshold": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Threshold value",
      "description": "Threshold value for masking"
    },
    "debug": {
      "type": "boolean",
      "default": false,
      "title": "Debug Flag",
      "description": "Enable debug mode"
    }
  },
  "additionalProperties": false,
  "required": [
    "infile",
    "echo_times",
    "affine",
    "output_directory"
  ]
}