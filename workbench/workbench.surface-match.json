{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Surface match.\n\nThe Input Surface File will be transformed so that its coordinate ranges (bounding box) match that of the Match Surface File",
  "type": "object",
  "properties": {
    "@type": {
      "const": "workbench.surface-match"
    },
    "match_surface_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "match_surface_file",
      "description": "Match (Reference) Surface"
    },
    "input_surface_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "input_surface_file",
      "description": "File containing surface that will be transformed"
    },
    "output_surface_name": {
      "type": "string",
      "title": "output_surface_name",
      "description": "Surface File after transformation"
    }
  },
  "additionalProperties": false,
  "required": [
    "match_surface_file",
    "input_surface_file",
    "output_surface_name"
  ]
}