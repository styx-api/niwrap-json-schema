{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "surface-smoothing",
  "description": "Surface smoothing.\n\nSmooths a surface by averaging vertex coordinates with those of the neighboring vertices.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "workbench/surface-smoothing"
    },
    "surface_in": {
      "type": "string",
      "x-styx-type": "file",
      "title": "surface_in",
      "description": "the surface file to smooth"
    },
    "smoothing_strength": {
      "type": "number",
      "title": "smoothing_strength",
      "description": "smoothing strength (ranges [0.0 - 1.0])"
    },
    "smoothing_iterations": {
      "type": "integer",
      "title": "smoothing_iterations",
      "description": "smoothing iterations"
    },
    "surface_out": {
      "type": "string",
      "title": "surface_out",
      "description": "output surface file"
    }
  },
  "additionalProperties": false,
  "required": [
    "surface_in",
    "smoothing_strength",
    "smoothing_iterations",
    "surface_out"
  ]
}