{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Merge two spec files into one.\n\nThe output spec file contains every file that is in either of the input spec files.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "spec-file-merge"
    },
    "spec_1": {
      "type": "string",
      "title": "spec_1",
      "description": "first spec file to merge"
    },
    "spec_2": {
      "type": "string",
      "title": "spec_2",
      "description": "second spec file to merge"
    },
    "out_spec": {
      "type": "string",
      "title": "out_spec",
      "description": "output - output spec file"
    }
  },
  "additionalProperties": false,
  "required": [
    "spec_1",
    "spec_2",
    "out_spec"
  ]
}