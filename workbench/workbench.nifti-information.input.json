{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "nifti-information",
  "description": "Display information about a nifti/cifti file.\n\nYou must specify at least one -print-* option.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "workbench.nifti-information"
    },
    "nifti_file": {
      "type": "string",
      "title": "nifti_file",
      "description": "the nifti/cifti file to examine"
    },
    "print_header": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "@type": {
              "const": "workbench.nifti-information.print_header"
            },
            "opt_allow_truncated": {
              "type": "boolean",
              "default": false,
              "title": "opt_allow_truncated",
              "description": "print the header even if the data is truncated"
            }
          },
          "additionalProperties": false,
          "title": "print_header",
          "description": "display the header contents"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "print_header",
      "description": "display the header contents"
    },
    "opt_print_matrix": {
      "type": "boolean",
      "default": false,
      "title": "opt_print_matrix",
      "description": "output the values in the matrix (cifti only)"
    },
    "print_xml": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "@type": {
              "const": "workbench.nifti-information.print_xml"
            },
            "opt_version_version": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "opt_version_version",
              "description": "convert the XML to a specific CIFTI version (default is the file's cifti version): the CIFTI version to use"
            }
          },
          "additionalProperties": false,
          "title": "print_xml",
          "description": "print the cifti XML (cifti only)"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "print_xml",
      "description": "print the cifti XML (cifti only)"
    }
  },
  "additionalProperties": false,
  "required": [
    "nifti_file"
  ]
}