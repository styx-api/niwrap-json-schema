{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "DISPLAY INFORMATION ABOUT A NIFTI/CIFTI FILE.\n\nYou must specify at least one -print-* option.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "workbench/nifti-information"
    },
    "allow-truncated": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "display the header contents\n\nprint the header even if the data is truncated"
    },
    "print-matrix": {
      "type": "boolean",
      "default": false,
      "description": "output the values in the matrix (cifti only)"
    },
    "print-xml": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "@type": {
              "const": "print-xml"
            },
            "version": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "description": "convert the XML to a specific CIFTI version (default is the file's cifti version)\n\nthe CIFTI version to use"
            }
          },
          "additionalProperties": false,
          "description": "print the cifti XML (cifti only)"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "print the cifti XML (cifti only)"
    },
    "nifti-file": {
      "type": "string",
      "description": "the nifti/cifti file to examine"
    }
  },
  "additionalProperties": false,
  "required": [
    "nifti-file",
    "@type"
  ]
}