{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "cifti-merge-dense",
  "description": "MERGE CIFTI FILES ALONG DENSE DIMENSION.\n\nThe input cifti files must have matching mappings along the direction not specified, and the mapping along the specified direction must be brain models.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "workbench/cifti-merge-dense"
    },
    "cifti-out": {
      "type": "string",
      "description": "the output cifti file"
    },
    "cifti": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "@type": {
                "const": "cifti"
              },
              "cifti-in": {
                "type": "string",
                "x-styx-type": "file",
                "description": "a cifti file to merge"
              }
            },
            "additionalProperties": false,
            "description": "specify an input cifti file",
            "required": [
              "cifti-in"
            ]
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "specify an input cifti file"
    },
    "action": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "how to handle conflicts between label keys\n\n'ERROR', 'FIRST', or 'LEGACY', default 'ERROR', use 'LEGACY' to match v1.4.2 and earlier"
    },
    "direction": {
      "type": "string",
      "description": "which dimension to merge along, ROW or COLUMN"
    }
  },
  "additionalProperties": false,
  "required": [
    "cifti-out",
    "direction",
    "@type"
  ]
}