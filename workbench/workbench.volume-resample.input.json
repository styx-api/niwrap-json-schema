{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "volume-resample",
  "description": "TRANSFORM AND RESAMPLE A VOLUME FILE.\n\nResample a volume file with an arbitrary list of transformations.  You may specify -affine, -warp, and -affine-series multiple times each, and they will be used in the order specified.  For instance, for rigid motion correction followed by nonlinear atlas registration, specify -affine-series first, then -warp.  The recommended methods are CUBIC (cubic spline) for most data, and ENCLOSING_VOXEL for label data.  The parameter <method> must be one of:\n\nCUBIC\nENCLOSING_VOXEL\nTRILINEAR",
  "type": "object",
  "properties": {
    "@type": {
      "const": "workbench/volume-resample"
    },
    "volume-out": {
      "type": "string",
      "description": "the output volume"
    },
    "affine": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "@type": {
                "const": "affine"
              },
              "affine": {
                "type": "string",
                "description": "the affine file to use"
              },
              "flirt": {
                "anyOf": [
                  {
                    "type": "object",
                    "properties": {
                      "@type": {
                        "const": "flirt"
                      },
                      "source-volume": {
                        "type": "string",
                        "description": "the source volume used when generating the affine"
                      },
                      "target-volume": {
                        "type": "string",
                        "description": "the target volume used when generating the affine"
                      }
                    },
                    "additionalProperties": false,
                    "description": "MUST be used if affine is a flirt affine",
                    "required": [
                      "source-volume",
                      "target-volume"
                    ]
                  },
                  {
                    "type": "null"
                  }
                ],
                "default": null,
                "description": "MUST be used if affine is a flirt affine"
              }
            },
            "additionalProperties": false,
            "description": "add an affine transform",
            "required": [
              "affine"
            ]
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "add an affine transform"
    },
    "affine-series": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "@type": {
                "const": "affine-series"
              },
              "affine-series": {
                "type": "string",
                "description": "text file containing 12 or 16 numbers per line, each being a row-major flattened affine"
              },
              "flirt": {
                "anyOf": [
                  {
                    "type": "object",
                    "properties": {
                      "@type": {
                        "const": "flirt"
                      },
                      "source-volume": {
                        "type": "string",
                        "description": "the source volume used when generating the affine"
                      },
                      "target-volume": {
                        "type": "string",
                        "description": "the target volume used when generating the affine"
                      }
                    },
                    "additionalProperties": false,
                    "description": "MUST be used if the affines are flirt affines",
                    "required": [
                      "source-volume",
                      "target-volume"
                    ]
                  },
                  {
                    "type": "null"
                  }
                ],
                "default": null,
                "description": "MUST be used if the affines are flirt affines"
              }
            },
            "additionalProperties": false,
            "description": "add an independent affine per-frame",
            "required": [
              "affine-series"
            ]
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "add an independent affine per-frame"
    },
    "warp": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "@type": {
                "const": "warp"
              },
              "warpfield": {
                "type": "string",
                "description": "the warpfield file"
              },
              "source-volume": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "null"
                  }
                ],
                "default": null,
                "description": "MUST be used if using a fnirt warpfield\n\nthe source volume used when generating the warpfield"
              }
            },
            "additionalProperties": false,
            "description": "add a nonlinear warpfield transform",
            "required": [
              "warpfield"
            ]
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "add a nonlinear warpfield transform"
    },
    "value": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "use a specified value for locations outside the FoV of the input image or warpfield(s)\n\nthe value to use (default 0)"
    },
    "volume-in": {
      "type": "string",
      "x-styx-type": "file",
      "description": "volume to resample"
    },
    "volume-space": {
      "type": "string",
      "description": "a volume file in the volume space you want for the output"
    },
    "method": {
      "type": "string",
      "description": "the resampling method"
    }
  },
  "additionalProperties": false,
  "required": [
    "volume-out",
    "volume-in",
    "volume-space",
    "method",
    "@type"
  ]
}