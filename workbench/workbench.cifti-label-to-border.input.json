{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "cifti-label-to-border",
  "description": "DRAW BORDERS AROUND CIFTI LABELS.\n\nFor each surface, takes the labels on the matching structure and draws borders around the labels.  Use -column to only draw borders around one label map.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "workbench/cifti-label-to-border"
    },
    "border": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "@type": {
                "const": "border"
              },
              "surface": {
                "type": "string",
                "x-styx-type": "file",
                "description": "the surface to use for neighbor and structure information"
              },
              "border-out": {
                "type": "string",
                "description": "the output border file"
              }
            },
            "additionalProperties": false,
            "description": "specify output file for a surface structure",
            "required": [
              "surface",
              "border-out"
            ]
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "specify output file for a surface structure"
    },
    "column": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "select a single column\n\nthe column number or name"
    },
    "fraction": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "set how far along the edge border points are drawn\n\nfraction along edge from inside vertex (default 0.33)"
    },
    "cifti-in": {
      "type": "string",
      "x-styx-type": "file",
      "description": "the input cifti dlabel file"
    }
  },
  "additionalProperties": false,
  "required": [
    "cifti-in",
    "@type"
  ]
}