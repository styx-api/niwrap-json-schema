{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "metric-regression",
  "description": "REGRESS SPATIAL MAP OUT OF A METRIC FILE.\n\nFor each regressor, its mean across the surface is subtracted from its data.  Each input map is then regressed against these, and a constant term.  The resulting regressed slopes of all regressors specified with -remove are multiplied with their respective regressor maps, and these are subtracted from the input map.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "workbench/metric-regression"
    },
    "metric-out": {
      "type": "string",
      "description": "the output metric"
    },
    "remove": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "@type": {
                "const": "remove"
              },
              "metric": {
                "type": "string",
                "x-styx-type": "file",
                "description": "the metric file to use"
              },
              "column": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "null"
                  }
                ],
                "default": null,
                "description": "select a column to use, rather than all\n\nthe column number or name"
              }
            },
            "additionalProperties": false,
            "description": "specify a metric to regress out",
            "required": [
              "metric"
            ]
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "specify a metric to regress out"
    },
    "keep": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "@type": {
                "const": "keep"
              },
              "metric": {
                "type": "string",
                "x-styx-type": "file",
                "description": "the metric file to use"
              },
              "column": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "null"
                  }
                ],
                "default": null,
                "description": "select a column to use, rather than all\n\nthe column number or name"
              }
            },
            "additionalProperties": false,
            "description": "specify a metric to include in regression, but not remove",
            "required": [
              "metric"
            ]
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "specify a metric to include in regression, but not remove"
    },
    "column": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "select a single column to regress from\n\nthe column number or name"
    },
    "roi-metric": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "only regress inside an roi\n\nthe area to use for regression, as a metric"
    },
    "metric-in": {
      "type": "string",
      "x-styx-type": "file",
      "description": "the metric to regress from"
    }
  },
  "additionalProperties": false,
  "required": [
    "metric-out",
    "metric-in",
    "@type"
  ]
}