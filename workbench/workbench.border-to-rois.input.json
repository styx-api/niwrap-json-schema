{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "border-to-rois",
  "description": "MAKE METRIC ROIS FROM BORDERS.\n\nBy default, draws ROIs inside all borders in the border file, as separate metric columns.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "workbench/border-to-rois"
    },
    "metric-out": {
      "type": "string",
      "description": "the output metric file"
    },
    "name": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "create ROI for only one border\n\nthe name of the border"
    },
    "inverse": {
      "type": "boolean",
      "default": false,
      "description": "use inverse selection (outside border)"
    },
    "include-border": {
      "type": "boolean",
      "default": false,
      "description": "include vertices the border is closest to"
    },
    "surface": {
      "type": "string",
      "x-styx-type": "file",
      "description": "the surface the borders are drawn on"
    },
    "border-file": {
      "type": "string",
      "x-styx-type": "file",
      "description": "the border file"
    }
  },
  "additionalProperties": false,
  "required": [
    "metric-out",
    "surface",
    "border-file",
    "@type"
  ]
}