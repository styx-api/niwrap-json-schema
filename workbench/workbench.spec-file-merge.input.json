{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "MERGE TWO SPEC FILES INTO ONE.\n\nThe output spec file contains every file that is in either of the input spec files.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "workbench/spec-file-merge"
    },
    "spec-1": {
      "type": "string",
      "description": "first spec file to merge"
    },
    "spec-2": {
      "type": "string",
      "description": "second spec file to merge"
    },
    "out-spec": {
      "type": "string",
      "description": "output - output spec file"
    }
  },
  "additionalProperties": false,
  "required": [
    "spec-1",
    "spec-2",
    "out-spec",
    "@type"
  ]
}