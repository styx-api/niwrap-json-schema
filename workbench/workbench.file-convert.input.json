{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "file-convert",
  "description": "CHANGE VERSION OF FILE FORMAT.\n\nYou may only specify one top-level option.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "workbench/file-convert"
    },
    "border-version-convert": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "@type": {
              "const": "border-version-convert"
            },
            "border-in": {
              "type": "string",
              "x-styx-type": "file",
              "description": "the input border file"
            },
            "out-version": {
              "type": "integer",
              "description": "the format version to write as, 1 or 3 (2 doesn't exist)"
            },
            "border-out": {
              "type": "string",
              "description": "output - the output border file"
            },
            "surface": {
              "anyOf": [
                {
                  "type": "string",
                  "x-styx-type": "file"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "description": "must be specified if the input is version 1\n\nuse this surface file for structure and number of vertices, ignore borders on other structures"
            }
          },
          "additionalProperties": false,
          "description": "write a border file with a different version",
          "required": [
            "border-in",
            "out-version",
            "border-out"
          ]
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "write a border file with a different version"
    },
    "nifti-version-convert": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "@type": {
              "const": "nifti-version-convert"
            },
            "input": {
              "type": "string",
              "description": "the input nifti file"
            },
            "version": {
              "type": "integer",
              "description": "the nifti version to write as"
            },
            "output": {
              "type": "string",
              "description": "output - the output nifti file"
            }
          },
          "additionalProperties": false,
          "description": "write a nifti file with a different version",
          "required": [
            "input",
            "version",
            "output"
          ]
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "write a nifti file with a different version"
    },
    "cifti-version-convert": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "@type": {
              "const": "cifti-version-convert"
            },
            "cifti-in": {
              "type": "string",
              "x-styx-type": "file",
              "description": "the input cifti file"
            },
            "version": {
              "type": "string",
              "description": "the cifti version to write as"
            },
            "cifti-out": {
              "type": "string",
              "description": "output - the output cifti file"
            }
          },
          "additionalProperties": false,
          "description": "write a cifti file with a different version",
          "required": [
            "cifti-in",
            "version",
            "cifti-out"
          ]
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "write a cifti file with a different version"
    }
  },
  "additionalProperties": false,
  "required": [
    "@type"
  ]
}