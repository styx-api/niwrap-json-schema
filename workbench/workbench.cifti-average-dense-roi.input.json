{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "cifti-average-dense-roi",
  "description": "AVERAGE CIFTI ROWS ACROSS SUBJECTS BY ROI.\n\nAverages rows for each map of the ROI(s), across all files.  ROI maps are treated as weighting functions, including negative values.  For efficiency, ensure that everything that is not intended to be used is zero in the ROI map.  If -cifti-roi is specified, -left-roi, -right-roi, -cerebellum-roi, and -vol-roi must not be specified.  If multiple non-cifti ROI files are specified, they must have the same number of columns.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "workbench/cifti-average-dense-roi"
    },
    "cifti-out": {
      "type": "string",
      "description": "output cifti dscalar file"
    },
    "cifti-roi": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "@type": {
              "const": "cifti-roi"
            },
            "roi-cifti": {
              "type": "string",
              "x-styx-type": "file",
              "description": "the roi cifti file"
            },
            "in-memory": {
              "type": "boolean",
              "default": false,
              "description": "cache the roi in memory so that it isn't re-read for each input cifti"
            }
          },
          "additionalProperties": false,
          "description": "cifti file containing combined weights",
          "required": [
            "roi-cifti"
          ]
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "cifti file containing combined weights"
    },
    "roi-metric": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "weights to use for cerebellum surface\n\nthe cerebellum roi as a metric file"
    },
    "roi-vol": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "voxel weights to use\n\nthe roi volume file"
    },
    "left-surf": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "specify the left surface for vertex area correction\n\nthe left surface file"
    },
    "right-surf": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "specify the right surface for vertex area correction\n\nthe right surface file"
    },
    "cerebellum-surf": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "specify the cerebellum surface for vertex area correction\n\nthe cerebellum surface file"
    },
    "cifti": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "@type": {
                "const": "cifti"
              },
              "cifti-in": {
                "type": "string",
                "x-styx-type": "file",
                "description": "a cifti file to average across"
              }
            },
            "additionalProperties": false,
            "description": "specify an input cifti file",
            "required": [
              "cifti-in"
            ]
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "specify an input cifti file"
    }
  },
  "additionalProperties": false,
  "required": [
    "cifti-out",
    "@type"
  ]
}