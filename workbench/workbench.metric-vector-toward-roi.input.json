{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "metric-vector-toward-roi",
  "description": "FIND IF VECTORS POINT TOWARD AN ROI.\n\nAt each vertex, compute the vector along the start of the shortest path to the ROI.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "workbench/metric-vector-toward-roi"
    },
    "surface": {
      "type": "string",
      "x-styx-type": "file",
      "description": "the surface to compute on"
    },
    "target-roi": {
      "type": "string",
      "x-styx-type": "file",
      "description": "the roi to find the shortest path to"
    },
    "metric-out": {
      "type": "string",
      "description": "the output metric"
    },
    "roi-metric": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "don't compute for vertices outside an roi\n\nthe region to compute inside, as a metric"
    }
  },
  "additionalProperties": false,
  "required": [
    "surface",
    "target-roi",
    "metric-out",
    "@type"
  ]
}