{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "surface-inflation",
  "description": "Surface inflation.\n\nInflate a surface by performing cycles that consist of smoothing  followed by inflation (to correct shrinkage caused by smoothing).",
  "type": "object",
  "properties": {
    "@type": {
      "const": "workbench/surface-inflation"
    },
    "anatomical_surface_in": {
      "type": "string",
      "x-styx-type": "file",
      "title": "anatomical_surface_in",
      "description": "the anatomical surface"
    },
    "surface_in": {
      "type": "string",
      "x-styx-type": "file",
      "title": "surface_in",
      "description": "the surface file to inflate"
    },
    "number_of_smoothing_cycles": {
      "type": "integer",
      "title": "number_of_smoothing_cycles",
      "description": "number of smoothing cycles"
    },
    "smoothing_strength": {
      "type": "number",
      "title": "smoothing_strength",
      "description": "smoothing strength (ranges [0.0 - 1.0])"
    },
    "smoothing_iterations": {
      "type": "integer",
      "title": "smoothing_iterations",
      "description": "smoothing iterations"
    },
    "inflation_factor": {
      "type": "number",
      "title": "inflation_factor",
      "description": "inflation factor"
    },
    "surface_out": {
      "type": "string",
      "title": "surface_out",
      "description": "output surface file"
    }
  },
  "additionalProperties": false,
  "required": [
    "anatomical_surface_in",
    "surface_in",
    "number_of_smoothing_cycles",
    "smoothing_strength",
    "smoothing_iterations",
    "inflation_factor",
    "surface_out"
  ]
}