{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "FSL tool to copy image geometry from one file to another.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "fslcpgeom"
    },
    "source_file": {
      "type": "string",
      "title": "Source file",
      "description": "Source image file (e.g. img1.nii.gz)"
    },
    "destination_file": {
      "type": "string",
      "title": "Destination file",
      "description": "Destination image file (e.g. img2.nii.gz)"
    },
    "dimensions_flag": {
      "type": "boolean",
      "default": false,
      "title": "Dimensions flag",
      "description": "Don't copy image dimensions"
    }
  },
  "additionalProperties": false,
  "required": [
    "source_file",
    "destination_file"
  ]
}