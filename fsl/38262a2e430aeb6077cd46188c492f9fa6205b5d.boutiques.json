{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "False Discovery Rate (FDR) correction tool from FSL",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.fdr"
    },
    "infile": {
      "type": "string",
      "title": "Input file",
      "description": "Input p-value image file"
    },
    "maskfile": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Mask file",
      "description": "Mask image file"
    },
    "qvalue": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Q-value threshold",
      "description": "Q-value (FDR) threshold"
    },
    "adjustedimage": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Adjusted output image",
      "description": "Output image with FDR-adjusted p-values"
    },
    "othresh_flag": {
      "type": "boolean",
      "default": false,
      "title": "Output thresholded image",
      "description": "Output a thresholded p-value image"
    },
    "order_flag": {
      "type": "boolean",
      "default": false,
      "title": "Output order values",
      "description": "Output image of order values"
    },
    "oneminusp_flag": {
      "type": "boolean",
      "default": false,
      "title": "One minus p-value flag",
      "description": "Treat input as 1-p (also save output like this)"
    },
    "positive_corr_flag": {
      "type": "boolean",
      "default": false,
      "title": "Positive correlation correction",
      "description": "Use FDR correction factor that assumes positive correlation"
    },
    "independent_flag": {
      "type": "boolean",
      "default": false,
      "title": "Assume independence",
      "description": "Use FDR correction factor that assumes independence"
    },
    "conservative_flag": {
      "type": "boolean",
      "default": false,
      "title": "Conservative correction",
      "description": "Use conservative FDR correction factor (allows for any correlation)"
    },
    "debug_flag": {
      "type": "boolean",
      "default": false,
      "title": "Debug flag",
      "description": "Switch on debugging output"
    },
    "verbose_flag": {
      "type": "boolean",
      "default": false,
      "title": "Verbose flag",
      "description": "Switch on diagnostic messages"
    }
  },
  "additionalProperties": false,
  "required": [
    "infile"
  ]
}