{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "fsl_histogram",
  "description": "Histogram plotting tool for FSL",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl/fsl_histogram"
    },
    "input_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input File",
      "description": "Input file name"
    },
    "input_file_duplicate": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input File (duplicate entry)",
      "description": "Input file name"
    },
    "output_file": {
      "type": "string",
      "title": "Output File",
      "description": "Output filename for the PNG file"
    },
    "output_file_duplicate": {
      "type": "string",
      "title": "Output File (duplicate entry)",
      "description": "Output filename for the PNG file"
    },
    "mask_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Mask File",
      "description": "Mask file name"
    },
    "mask_file_duplicate": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Mask File (duplicate entry)",
      "description": "Mask file name"
    },
    "gmmfit_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "GMM Fit File",
      "description": "File name of matrix with parameter estimates of Gaussian/Gamma mixture model (means, variances and proportions per row)"
    },
    "gmmfit_file_duplicate": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "GMM Fit File (duplicate entry)",
      "description": "File name of matrix with parameter estimates of Gaussian/Gamma mixture model (means, variances and proportions per row)"
    },
    "plot_title": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Plot Title",
      "description": "Plot title"
    },
    "plot_title_duplicate": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Plot Title (duplicate entry)",
      "description": "Plot title"
    },
    "legend_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Legend File",
      "description": "File name of ASCII text file, one row per legend entry"
    },
    "legend_file_duplicate": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Legend File (duplicate entry)",
      "description": "File name of ASCII text file, one row per legend entry"
    },
    "xlabel": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "X-axis Label",
      "description": "X-axis label"
    },
    "xlabel_duplicate": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "X-axis Label (duplicate entry)",
      "description": "X-axis label"
    },
    "ylabel": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Y-axis Label",
      "description": "Y-axis label"
    },
    "ylabel_duplicate": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Y-axis Label (duplicate entry)",
      "description": "Y-axis label"
    },
    "plot_height": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Plot Height",
      "description": "Plot height in pixels (default 400)"
    },
    "plot_height_duplicate": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Plot Height (duplicate entry)",
      "description": "Plot height in pixels (default 400)"
    },
    "plot_width": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Plot Width",
      "description": "Plot width in pixels (default 600)"
    },
    "plot_width_duplicate": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Plot Width (duplicate entry)",
      "description": "Plot width in pixels (default 600)"
    },
    "num_bins": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of Bins",
      "description": "Number of histogram bins"
    },
    "num_bins_duplicate": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of Bins (duplicate entry)",
      "description": "Number of histogram bins"
    },
    "zoom_factor": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Zoom Factor",
      "description": "Zoom factor for y-range (e.g. 2.0)"
    },
    "zoom_factor_duplicate": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Zoom Factor (duplicate entry)",
      "description": "Zoom factor for y-range (e.g. 2.0)"
    },
    "use_gmm_flag": {
      "type": "boolean",
      "default": false,
      "title": "Use Gaussian Mixture Model",
      "description": "Use Gaussian mixture model instead of Gaussian/Gamma mixture model"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_file",
    "input_file_duplicate",
    "output_file",
    "output_file_duplicate"
  ]
}