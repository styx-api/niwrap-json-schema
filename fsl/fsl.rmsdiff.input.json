{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "rmsdiff",
  "description": "Outputs RMS deviation between matrices (in mm)",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl/rmsdiff"
    },
    "matrixfile1": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Matrix file 1",
      "description": "First matrix file"
    },
    "matrixfile2": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Matrix file 2",
      "description": "Second matrix file"
    },
    "refvol": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Reference volume",
      "description": "Reference volume"
    },
    "mask": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Mask file",
      "description": "Optional mask"
    }
  },
  "additionalProperties": false,
  "required": [
    "matrixfile1",
    "matrixfile2",
    "refvol"
  ]
}