{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "GIF animation tool",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.whirlgif"
    },
    "outfile": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output file",
      "description": "Specify the output file"
    },
    "loop_count": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Loop count",
      "description": "Specify the loop count for the animation"
    },
    "delay_time": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Delay time",
      "description": "Specify the delay time between frames"
    },
    "disp_flag": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Disposal method",
      "description": "Specify the disposal method for frames"
    },
    "list_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "List file",
      "description": "Input list file containing names of images to be used for animation"
    },
    "input_files": {
      "type": "array",
      "items": {
        "type": "string",
        "x-styx-type": "file"
      },
      "title": "Input files",
      "description": "Input image files for the animation"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_files"
  ]
}