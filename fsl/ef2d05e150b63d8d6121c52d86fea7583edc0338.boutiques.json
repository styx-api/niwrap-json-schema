{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Variance calculator for BASIL",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.basil_var"
    },
    "results_dir": {
      "type": "string",
      "title": "Results directory",
      "description": "BASIL results directory"
    },
