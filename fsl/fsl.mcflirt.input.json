{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mcflirt",
  "description": "MCFLIRT is an intra-modal motion correction tool designed for use on fMRI time series and based on optimization and registration techniques used in FLIRT, a fully automated robust and accurate tool for linear (affine) inter- and inter-modal brain image registration.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.mcflirt"
    },
    "in_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "In file",
      "description": "Timeseries to motion-correct."
    },
    "bins": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Bins",
      "description": "Number of histogram bins."
    },
    "cost": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Cost",
      "description": "'mutualinfo' or 'woods' or 'corratio' or 'normcorr' or 'normmi' or 'leastsquares'. Cost function to optimize."
    },
    "dof": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Dof",
      "description": "Degrees of freedom for the transformation."
    },
    "init": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Init",
      "description": "Initial transformation matrix."
    },
    "interpolation": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Interpolation",
      "description": "'spline' or 'nn' or 'sinc'. Interpolation method for transformation."
    },
    "mean_vol": {
      "type": "boolean",
      "default": false,
      "title": "Mean vol",
      "description": "Register to mean volume."
    },
    "out_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Out file",
      "description": "File to write."
    },
    "ref_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Ref file",
      "description": "Target image for motion correction."
    },
    "ref_vol": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Ref vol",
      "description": "Volume to align frames to."
    },
    "rotation": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Rotation",
      "description": "Scaling factor for rotation tolerances."
    },
    "save_mats": {
      "type": "boolean",
      "default": false,
      "title": "Save mats",
      "description": "Save transformation matrices."
    },
    "save_plots": {
      "type": "boolean",
      "default": false,
      "title": "Save plots",
      "description": "Save transformation parameters."
    },
    "save_rmsabs": {
      "type": "boolean",
      "default": false,
      "title": "Save rmsabs",
      "description": "Save rms displacement parameters."
    },
    "save_rmsrel": {
      "type": "boolean",
      "default": false,
      "title": "Save rmsrel",
      "description": "Save relative rms displacement parameters."
    },
    "scaling": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Scaling",
      "description": "Scaling factor to use."
    },
    "smooth": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Smooth",
      "description": "Smoothing factor for the cost function."
    },
    "stages": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Stages",
      "description": "Stages (if 4, perform final search with sinc interpolation."
    },
    "stats_imgs": {
      "type": "boolean",
      "default": false,
      "title": "Stats imgs",
      "description": "Produce variance and std. dev. images."
    },
    "use_contour": {
      "type": "boolean",
      "default": false,
      "title": "Use contour",
      "description": "Run search on contour images."
    },
    "use_gradient": {
      "type": "boolean",
      "default": false,
      "title": "Use gradient",
      "description": "Run search on gradient images."
    }
  },
  "additionalProperties": false,
  "required": [
    "in_file"
  ]
}