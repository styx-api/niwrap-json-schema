{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "fslsize",
  "description": "Tool to output the size of an image file in FSL",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl/fslsize"
    },
    "input_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input File",
      "description": "Input image file"
    },
    "short_format_flag": {
      "type": "boolean",
      "default": false,
      "title": "Short Format Flag",
      "description": "Output using short format (one line)"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_file"
  ]
}