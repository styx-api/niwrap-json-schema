{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Automated brain ventricle quantification tool",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.viena_quant"
    },
    "input1": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input image 1",
      "description": "Input image 1 (e.g. img1.nii.gz)"
    },
    "input2": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input image 2",
      "description": "Input image 2 (e.g. img2.nii.gz)"
    },
    "ventricle_mask": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Ventricle mask",
      "description": "Ventricle mask (e.g. mask.nii.gz)"
    }
  },
  "additionalProperties": false,
  "required": [
    "input1",
    "input2",
    "ventricle_mask"
  ]
}