{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Phase Region Expanding Labeller for Unwrapping Discrete Estimates",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.prelude"
    },
    "output_unwrap": {
      "type": "string",
      "title": "Output unwrap file",
      "description": "Filename for saving the unwrapped phase output"
    },
    "output_unwrap_alias": {
      "type": "string",
      "title": "Output unwrap file (alias)",
      "description": "Filename for saving the unwrapped phase output"
    },
    "complex_phase": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Complex phase input",
      "description": "Filename of complex phase input volume"
    },
    "complex_phase_alias": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Complex phase input (alias)",
      "description": "Filename of complex phase input volume"
    },
    "absolute_volume": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Absolute input volume",
      "description": "Filename of absolute input volume"
    },
    "absolute_volume_alias": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Absolute input volume (alias)",
      "description": "Filename of absolute input volume"
    },
    "phase_volume": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Raw phase input volume",
      "description": "Filename of raw phase input volume"
    },
    "phase_volume_alias": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Raw phase input volume (alias)",
      "description": "Filename of raw phase input volume"
    },
    "num_phase_split": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of phase partitions",
      "description": "Number of phase partitions to use"
    },
    "label_slices": {
      "type": "boolean",
      "default": false,
      "title": "Label slices flag",
      "description": "Does label processing in 2D (slice at a time)"
    },
    "slice_processing": {
      "type": "boolean",
      "default": false,
      "title": "2D slice processing flag",
      "description": "Does all processing in 2D (slice at a time)"
    },
    "slice_processing_alias": {
      "type": "boolean",
      "default": false,
      "title": "2D slice processing flag (alias)",
      "description": "Does all processing in 2D (slice at a time)"
    },
    "force_3d": {
      "type": "boolean",
      "default": false,
      "title": "Force 3D processing flag",
      "description": "Forces all processing to be full 3D"
    },
    "force_3d_alias": {
      "type": "boolean",
      "default": false,
      "title": "Force 3D processing flag (alias)",
      "description": "Forces all processing to be full 3D"
    },
    "threshold": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Intensity threshold",
      "description": "Intensity threshold for masking"
    },
    "threshold_alias": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Intensity threshold (alias)",
      "description": "Intensity threshold for masking"
    },
    "mask_volume": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Mask input volume",
      "description": "Filename of mask input volume"
    },
    "mask_volume_alias": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Mask input volume (alias)",
      "description": "Filename of mask input volume"
    },
    "start_image": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Start image number",
      "description": "First image number to process (default 0)"
    },
    "end_image": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "End image number",
      "description": "Final image number to process (default Inf)"
    },
    "save_mask": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Save mask volume",
      "description": "Filename for saving the mask volume"
    },
    "save_raw_phase": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Save raw phase output",
      "description": "Filename for saving the raw phase output"
    },
    "save_raw_phase_alias": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Save raw phase output (alias)",
      "description": "Filename for saving the raw phase output"
    },
    "save_labels": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Save labels output",
      "description": "Filename for saving the area labels output"
    },
    "save_labels_alias": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Save labels output (alias)",
      "description": "Filename for saving the area labels output"
    },
    "remove_ramps": {
      "type": "boolean",
      "default": false,
      "title": "Remove phase ramps flag",
      "description": "Remove phase ramps during unwrapping"
    },
    "verbose": {
      "type": "boolean",
      "default": false,
      "title": "Verbose flag",
      "description": "Switch on diagnostic messages"
    },
    "verbose_alias": {
      "type": "boolean",
      "default": false,
      "title": "Verbose flag (alias)",
      "description": "Switch on diagnostic messages"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help flag",
      "description": "Display help message"
    },
    "help_alias": {
      "type": "boolean",
      "default": false,
      "title": "Help flag (alias)",
      "description": "Display help message"
    }
  },
  "additionalProperties": false,
  "required": [
    "output_unwrap",
    "output_unwrap_alias"
  ]
}