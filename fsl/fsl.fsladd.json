{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Tool for adding or averaging multiple input volumes.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.fsladd"
    },
    "output_file": {
      "type": "string",
      "title": "Output file",
      "description": "Output volume file"
    },
    "mean_flag": {
      "type": "boolean",
      "default": false,
      "title": "Mean flag",
      "description": "Calculate mean instead of sum"
    },
    "scale_flag": {
      "type": "boolean",
      "default": false,
      "title": "Scale flag",
      "description": "Scale each input image mean to 1000 before processing"
    },
    "volume_list": {
      "type": "array",
      "items": {
        "type": "string",
        "x-styx-type": "file"
      },
      "title": "Input volumes",
      "description": "List of input volumes"
    }
  },
  "additionalProperties": false,
  "required": [
    "output_file",
    "volume_list"
  ]
}