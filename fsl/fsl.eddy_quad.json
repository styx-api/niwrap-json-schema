{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "QUality Assessment for DMRI",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.eddy_quad"
    },
    "eddyBase": {
      "type": "string",
      "title": "Eddy base",
      "description": "Basename (including path) specified when running EDDY"
    },
    "eddyIndex": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Eddy index",
      "description": "File containing indices for all volumes into acquisition parameters"
    },
    "eddyParams": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Eddy parameters",
      "description": "File containing acquisition parameters"
    },
    "mask": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Binary mask file",
      "description": "Binary mask file"
    },
    "bvals": {
      "type": "string",
      "x-styx-type": "file",
      "title": "b-values file",
      "description": "b-values file"
    },
    "bvecs": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "b-vectors file",
      "description": "b-vectors file - only used when <eddyBase>.eddy_residuals file is present"
    },
    "output_dir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output directory",
      "description": "Output directory - default = '<eddyBase>.qc'"
    },
    "field": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Estimated field",
      "description": "TOPUP estimated field (in Hz)"
    },
    "slspec": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Slice/group acquisition specification",
      "description": "Text file specifying slice/group acquisition"
    },
    "verbose": {
      "type": "boolean",
      "default": false,
      "title": "Verbose",
      "description": "Display debug messages"
    }
  },
  "additionalProperties": false,
  "required": [
    "eddyBase",
    "eddyIndex",
    "eddyParams",
    "mask",
    "bvals"
  ]
}