{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Generate dyadic vectors from theta and phi volumes.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.make_dyadic_vectors"
    },
    "theta_vol": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Theta Volume File",
      "description": "Theta volume input file"
    },
    "phi_vol": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Phi Volume File",
      "description": "Phi volume input file"
    },
    "mask": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Mask File",
      "description": "Mask input file (optional)"
    },
    "output": {
      "type": "string",
      "title": "Output File",
      "description": "Output file"
    },
    "perc": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Percentage Angle",
      "description": "Percentage angle of the output cone of uncertainty (output will be in degrees)"
    }
  },
  "additionalProperties": false,
  "required": [
    "theta_vol",
    "phi_vol",
    "output"
  ]
}