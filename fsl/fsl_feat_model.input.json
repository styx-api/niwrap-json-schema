{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "feat_model",
  "description": "Generate design matrices for use by FEAT",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl/feat_model"
    },
    "design_name_root": {
      "type": "string",
      "title": "Design Name Root",
      "description": "Design name root"
    },
    "confound_matrix": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Confound Matrix",
      "description": "Confound matrix text file"
    }
  },
  "additionalProperties": false,
  "required": [
    "design_name_root"
  ]
}