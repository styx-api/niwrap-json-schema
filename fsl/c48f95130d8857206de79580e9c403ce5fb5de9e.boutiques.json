{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Split a 4D image into separate volumes or a 3D image into separate slices",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "fslsplit"
    },
    "infile": {
      "type": "string",
      "title": "Input file",
      "description": "Input image (e.g. img.nii.gz)"
    },
    "output_basename": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": "vol",
      "title": "Output basename",
      "description": "Output basename (default: vol)"
    },
    "separation_x": {
      "type": "boolean",
      "default": false,
      "title": "Separate images in the x direction",
      "description": "Separate images in the x direction"
    },
    "separation_y": {
      "type": "boolean",
      "default": false,
      "title": "Separate images in the y direction",
      "description": "Separate images in the y direction"
    },
    "separation_z": {
      "type": "boolean",
      "default": false,
      "title": "Separate images in the z direction",
      "description": "Separate images in the z direction"
    },
    "separation_time": {
      "type": "boolean",
      "default": false,
      "title": "Separate images in time",
      "description": "Separate images in time (default behaviour)"
    }
  },
  "additionalProperties": false,
  "required": [
    "infile"
  ]
}