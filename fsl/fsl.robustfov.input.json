{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "robustfov",
  "description": "Reduce FOV of image to remove lower head and neck.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.robustfov"
    },
    "input_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input file",
      "description": "Input image file"
    },
    "output_image": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output image",
      "description": "ROI volume output name"
    },
    "brain_size": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Brain size in z-dimension",
      "description": "Size of the brain in z-dimension (default 170mm)"
    },
    "matrix_output": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Matrix output name",
      "description": "Matrix output name (ROI to full FOV)"
    },
    "debug_flag": {
      "type": "boolean",
      "default": false,
      "title": "Debug flag",
      "description": "Turn on debugging output"
    },
    "verbose_flag": {
      "type": "boolean",
      "default": false,
      "title": "Verbose flag",
      "description": "Switch on diagnostic messages"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_file"
  ]
}