{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Tool to create a rotation matrix for a given angle and axis of rotation.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.makerot"
    },
    "axis": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Axis vector",
      "description": "Unnormalized axis vector (comma separated)"
    },
    "cov": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Center of volume image",
      "description": "Image filename used for center of volume"
    },
    "center": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Center of rotation",
      "description": "Center of rotation in mm (comma separated)"
    },
    "output_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output file",
      "description": "Output filename for matrix"
    },
    "verbose_flag": {
      "type": "boolean",
      "default": false,
      "title": "Verbose flag",
      "description": "Switch on diagnostic messages"
    },
    "help_flag": {
      "type": "boolean",
      "default": false,
      "title": "Help flag",
      "description": "Display help message"
    },
    "theta": {
      "type": "number",
      "title": "Rotation angle",
      "description": "Angle of rotation (in degrees)"
    }
  },
  "additionalProperties": false,
  "required": [
    "theta"
  ]
}