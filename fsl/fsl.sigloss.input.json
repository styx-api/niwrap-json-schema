{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "sigloss",
  "description": "Estimates signal loss from a field map (in rad/s)",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.sigloss"
    },
    "input_b0map": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input B0 map image",
      "description": "Input b0 map image filename (in rad/s)"
    },
    "output_sigloss": {
      "type": "string",
      "title": "Output signal loss image",
      "description": "Output signal loss image filename"
    },
    "input_mask": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Input mask image",
      "description": "Input mask filename"
    },
    "echo_time": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Echo time",
      "description": "Echo time (in seconds)"
    },
    "slice_direction": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Slice direction",
      "description": "Slice direction (either x, y or z)"
    },
    "verbose_flag": {
      "type": "boolean",
      "default": false,
      "title": "Verbose Flag",
      "description": "Switch on diagnostic messages"
    },
    "help_flag": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Display this help message"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_b0map",
    "output_sigloss"
  ]
}