{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "systemnoise",
  "description": "Tool for adding system noise to a given signal using FSL's utilities",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl/systemnoise"
    },
    "input_signal": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Signal",
      "description": "Input signal (possum output matrix)"
    },
    "output_signal": {
      "type": "string",
      "title": "Output Signal",
      "description": "Output signal (possum matrix form)"
    },
    "noise_standard_deviation": {
      "type": "number",
      "title": "Noise Standard Deviation",
      "description": "Set noise standard deviation (units of intensity)"
    },
    "seed": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Seed Value",
      "description": "Input seed value for the sequence"
    },
    "verbose_flag": {
      "type": "boolean",
      "default": false,
      "title": "Verbose Flag",
      "description": "Switch on diagnostic messages"
    },
    "help_flag": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Display help message"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_signal",
    "output_signal",
    "noise_standard_deviation"
  ]
}