{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Command for generating group mean contrasts for a two-sample t-test design.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "design_ttest2"
    },
    "design_files_rootname": {
      "type": "string",
      "title": "Design Files Root Name",
      "description": "Root name for design files"
    },
    "ngroupa": {
      "type": "number",
      "title": "Number of Group A Subjects",
      "description": "Number of subjects in group A"
    },
    "ngroupb": {
      "type": "number",
      "title": "Number of Group B Subjects",
      "description": "Number of subjects in group B"
    },
    "include_mean_contrasts": {
      "type": "boolean",
      "default": false,
      "title": "Include Mean Contrasts",
      "description": "Include individual group mean contrasts"
    }
  },
  "additionalProperties": false,
  "required": [
    "design_files_rootname",
    "ngroupa",
    "ngroupb"
  ]
}