{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "pairreg",
  "description": "Pairwise registration tool",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.pairreg"
    },
    "brain1": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Brain Image 1",
      "description": "Brain image 1 (used as -ref internally)"
    },
    "brain2": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Brain Image 2",
      "description": "Brain image 2"
    },
    "skull1": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Skull Image 1",
      "description": "Skull image 1 (used as -ref internally)"
    },
    "skull2": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Skull Image 2",
      "description": "Skull image 2"
    },
    "outputmatrix": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Output Matrix",
      "description": "Output transformation matrix file"
    },
    "extra_flirt_args": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Extra FLIRT Arguments",
      "description": "Extra arguments to pass to flirt"
    }
  },
  "additionalProperties": false,
  "required": [
    "brain1",
    "brain2",
    "skull1",
    "skull2",
    "outputmatrix"
  ]
}