{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "imrm",
  "description": "Remove specified image files.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.imrm"
    },
    "images_to_remove": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Images to remove",
      "description": "List of image names to remove. Filenames can be basenames or full names."
    }
  },
  "additionalProperties": false,
  "required": [
    "images_to_remove"
  ]
}