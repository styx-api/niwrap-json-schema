{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "halfcosbasis",
  "description": "Tool for handling half-cosine basis functions in FSL",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl/halfcosbasis"
    },
    "hrf_param_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "HRF Parameter File",
      "description": "Half cosine HRF parameter ranges file"
    },
    "hrf_param_file_hf": {
      "type": "string",
      "x-styx-type": "file",
      "title": "HRF Parameter File (hf)",
      "description": "Half cosine HRF parameter ranges file"
    },
    "verbose_flag": {
      "type": "boolean",
      "default": false,
      "title": "Verbose Flag",
      "description": "Switch on diagnostic messages"
    },
    "debug_level": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Debug Level",
      "description": "Set debug level"
    },
    "debug_level_debug": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Debug Level (debug)",
      "description": "Set debug level"
    },
    "debug_level_debuglevel": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Debug Level (debuglevel)",
      "description": "Set debug level"
    },
    "timing_on_flag": {
      "type": "boolean",
      "default": false,
      "title": "Timing On Flag",
      "description": "Turn timing on"
    },
    "log_dir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Log Directory",
      "description": "Log directory"
    },
    "log_dir_ld": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Log Directory (ld)",
      "description": "Log directory"
    },
    "log_dir_logdir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Log Directory (logdir)",
      "description": "Log directory"
    },
    "num_hrf_samples": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of HRF Samples",
      "description": "Number of HRF samples to use (default is 1000)"
    },
    "num_hrf_basis_funcs": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of HRF Basis Functions",
      "description": "Number of HRF basis functions to use (default is 3)"
    },
    "num_secs": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of Seconds",
      "description": "Number of seconds (default is 40)"
    },
    "num_secs_nsecs": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of Seconds (nsecs)",
      "description": "Number of seconds (default is 40)"
    },
    "temp_res": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Temporal Resolution",
      "description": "Temporal resolution (default is 0.05)"
    },
    "help_flag": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Display help message"
    },
    "help_flag_long": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag (long)",
      "description": "Display help message"
    }
  },
  "additionalProperties": false,
  "required": [
    "hrf_param_file",
    "hrf_param_file_hf"
  ]
}