{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "calc_grad_perc_dev",
  "description": "Compute the gradient percent deviation based on a full warp image from gradient_unwarp.py",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl/calc_grad_perc_dev"
    },
    "fullwarp_image": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Full warp image",
      "description": "Full warp image from gradient_unwarp.py"
    },
    "out_basename": {
      "type": "string",
      "title": "Output basename",
      "description": "Output basename"
    },
    "verbose_flag": {
      "type": "boolean",
      "default": false,
      "title": "Verbose Flag",
      "description": "Switch on diagnostic messages"
    },
    "help_flag": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Display the help message"
    }
  },
  "additionalProperties": false,
  "required": [
    "fullwarp_image",
    "out_basename",
    "@type"
  ]
}