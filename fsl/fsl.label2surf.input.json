{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "label2surf",
  "description": "Transform a group of labels into a surface",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl/label2surf"
    },
    "input_surface": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Surface File",
      "description": "Input surface file"
    },
    "output_surface": {
      "type": "string",
      "title": "Output Surface File",
      "description": "Output surface file"
    },
    "labels": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Label Files",
      "description": "ASCII list of label files"
    },
    "verbose_flag": {
      "type": "boolean",
      "default": false,
      "title": "Verbose Flag",
      "description": "Switch on diagnostic messages"
    },
    "help_flag": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Display help message"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_surface",
    "output_surface",
    "labels",
    "@type"
  ]
}