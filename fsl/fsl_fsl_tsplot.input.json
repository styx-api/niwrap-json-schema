{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "fsl_tsplot",
  "description": "Timeseries plotting tool from FSL",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl/fsl_tsplot"
    },
    "input_files": {
      "type": "string",
      "title": "Input Files",
      "description": "Comma-separated list of input file names (ASCII text matrix, one column per timecourse)"
    },
    "output_file": {
      "type": "string",
      "title": "Output File",
      "description": "Output filename for the PNG file"
    },
    "title": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Plot Title",
      "description": "Plot title"
    },
    "legend_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Legend File",
      "description": "File name of ASCII text file, one row per legend entry"
    },
    "labels": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Labels",
      "description": "Comma-separated list of labels"
    },
    "ymin": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Minimum Y-Value",
      "description": "Minimum y-value"
    },
    "ymax": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Maximum Y-Value",
      "description": "Maximum y-value"
    },
    "xlabel": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "X-Axis Label",
      "description": "X-axis label"
    },
    "ylabel": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Y-Axis Label",
      "description": "Y-axis label"
    },
    "height": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Plot Height",
      "description": "Plot height in pixels (default 150)"
    },
    "width": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Plot Width",
      "description": "Plot width in pixels (default 600)"
    },
    "unit": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "X-Axis Units",
      "description": "Scaling units for x-axis (default 1...length of infile)"
    },
    "precision": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "X-Axis Label Precision",
      "description": "Precision of x-axis labels"
    },
    "sci_flag": {
      "type": "boolean",
      "default": false,
      "title": "Scientific Notation Flag",
      "description": "Switch on scientific notation"
    },
    "start_col": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Start Column",
      "description": "Position of first column to plot"
    },
    "end_col": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "End Column",
      "description": "Position of final column to plot"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_files",
    "output_file"
  ]
}