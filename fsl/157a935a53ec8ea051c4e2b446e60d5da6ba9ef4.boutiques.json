{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Converts a z-score to a p-value.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "ztop"
    },
    "z_score": {
      "type": "number",
      "title": "Z-Score",
      "description": "Input z-score"
    },
    "tail_flag": {
      "type": "boolean",
      "default": false,
      "title": "Tail Conversion Flag",
      "description": "Use 2-tailed conversion (default is 1-tailed)"
    },
    "grf_flag": {
      "type": "boolean",
      "default": false,
      "title": "GRF Theory Flag",
      "description": "Use GRF maximum-height theory instead of Gaussian PDF"
    },
    "number_of_resels": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of Resels",
      "description": "Number of resels (resolution elements) for GRF correction"
    }
  },
  "additionalProperties": false,
  "required": [
    "z_score"
  ]
}