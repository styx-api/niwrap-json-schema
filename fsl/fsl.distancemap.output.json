{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "distancemap",
  "description": "A tool to calculate distance maps using FSL",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "root": {
      "type": "string",
      "title": "Root",
      "description": "Output root directory"
    },
    "output_distancemap": {
      "type": "string",
      "title": "Output Distance Map",
      "description": "Output distance map image"
    },
    "output_local_maxima": {
      "type": "string",
      "title": "Output Local Maxima Image",
      "description": "Output local maxima image"
    },
    "output_segmented_image": {
      "type": "string",
      "title": "Output Segmented Image",
      "description": "Output segmented distance map image"
    }
  }
}