{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "slices",
  "description": "Generate a set of slices from an image, possibly with some scaling and intensity range options, and save as a GIF.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl/slices"
    },
    "primary_input": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Primary Input File",
      "description": "Primary input image file (e.g. img1.nii.gz)"
    },
    "secondary_input": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Secondary Input File",
      "description": "Secondary input image file (e.g. img2.nii.gz)"
    },
    "scale_factor": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Scale Factor",
      "description": "Scale factor to apply to images."
    },
    "intensity_range": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Intensity Range",
      "description": "Intensity range to consider (minimum and maximum values)."
    },
    "output_gif": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output GIF File",
      "description": "Output GIF file."
    }
  },
  "additionalProperties": false,
  "required": [
    "primary_input",
    "@type"
  ]
}