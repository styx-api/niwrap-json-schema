{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "run_mesh_utils",
  "description": "A tool for various mesh operations as part of FSL.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl/run_mesh_utils"
    },
    "base_mesh": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Base Mesh",
      "description": "Filename of base mesh"
    },
    "output_image": {
      "type": "string",
      "title": "Output Image",
      "description": "Filename of output image"
    },
    "input_image": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Input Image",
      "description": "Filename of input image"
    },
    "second_input_image": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Second Input Image",
      "description": "Filename of second input image"
    },
    "weighting_image_force": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Weighting Image Force",
      "description": "Weighting image force"
    },
    "do_uncentre_model": {
      "type": "boolean",
      "default": false,
      "title": "Do UnCentre Model",
      "description": "Do UnCentre Model"
    },
    "do_subtract_constant_from_scalars": {
      "type": "boolean",
      "default": false,
      "title": "Do Subtract Constant From Scalars",
      "description": "Do Subtract Constant From Scalars"
    },
    "do_vertex_scalars_to_image_volume": {
      "type": "boolean",
      "default": false,
      "title": "Do Vertex Scalars To Image Volume",
      "description": "Do Vertex Scalars To Image Volume"
    },
    "base_mesh2": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Base Mesh 2",
      "description": "Filename of base mesh2"
    },
    "use_sc2": {
      "type": "boolean",
      "default": false,
      "title": "Use SC2",
      "description": "Use SC2"
    },
    "flirt_matrix": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Flirt Matrix",
      "description": "Filename of flirt matrix"
    },
    "do_mesh_reg": {
      "type": "boolean",
      "default": false,
      "title": "Do Mesh Registration",
      "description": "Do Mesh Registration"
    },
    "threshold": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Threshold",
      "description": "Threshold"
    },
    "degrees_of_freedom": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Degrees of Freedom",
      "description": "Degrees of freedom"
    },
    "inverse": {
      "type": "boolean",
      "default": false,
      "title": "Inverse Operation",
      "description": "Inverse Operation"
    },
    "verbose": {
      "type": "boolean",
      "default": false,
      "title": "Verbose",
      "description": "Switch on diagnostic messages"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help",
      "description": "Display help message"
    }
  },
  "additionalProperties": false,
  "required": [
    "base_mesh",
    "output_image",
    "@type"
  ]
}