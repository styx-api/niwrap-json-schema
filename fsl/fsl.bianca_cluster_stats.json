{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Calculate number of clusters and WMH volume in a BIANCA output map",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.bianca_cluster_stats"
    },
    "bianca_output_map": {
      "type": "string",
      "x-styx-type": "file",
      "title": "BIANCA output map",
      "description": "BIANCA output map file"
    },
    "threshold": {
      "type": "number",
      "title": "Threshold",
      "description": "Threshold value to apply"
    },
    "min_cluster_size": {
      "type": "number",
      "title": "Minimum Cluster Size",
      "description": "Minimum cluster size in voxels"
    },
    "mask": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Mask",
      "description": "Optional mask file (in the same space as the BIANCA output map)"
    }
  },
  "additionalProperties": false,
  "required": [
    "bianca_output_map",
    "threshold",
    "min_cluster_size"
  ]
}