{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "possum_sum",
  "description": "Sum of output signals from multiple possum processors",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl/possum_sum"
    },
    "input_signal": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input signal",
      "description": "Input signal for one processor (possum output matrix)"
    },
    "output_signal": {
      "type": "string",
      "title": "Output signal",
      "description": "Output signal: sum of all the processors (possum matrix form)"
    },
    "num_processors": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of processors",
      "description": "Number of processors"
    },
    "verbose_flag": {
      "type": "boolean",
      "default": false,
      "title": "Verbose Flag",
      "description": "Switch on diagnostic messages"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_signal",
    "output_signal"
  ]
}