{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Tool for creating boxplot images from ASCII text matrices",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "fsl_boxplot"
    },
    "input_files": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Input files",
      "description": "Comma-separated list of input file names (ASCII text matrices, one column per boxplot)"
    },
    "output_image": {
      "type": "string",
      "title": "Output image",
      "description": "Output filename for the PNG file"
    },
    "help_flag": {
      "type": "boolean",
      "default": false,
      "title": "Help flag",
      "description": "Display this help message"
    },
    "title": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Title",
      "description": "Plot title"
    },
    "legend_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Legend file",
      "description": "File name of ASCII text file, one row per legend entry"
    },
    "x_label": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "X-axis label",
      "description": "X-axis label"
    },
    "y_label": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Y-axis label",
      "description": "Y-axis label"
    },
    "plot_height": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": 450,
      "title": "Plot height",
      "description": "Plot height in pixels (default 450)"
    },
    "plot_width": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Plot width",
      "description": "Plot width in pixels (default 80*#boxplots)"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_files",
    "output_image"
  ]
}