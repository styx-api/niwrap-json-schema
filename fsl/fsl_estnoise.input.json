{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "estnoise",
  "description": "Estimate noise in 4D fMRI data.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl/estnoise"
    },
    "input_4d_data": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input 4D data",
      "description": "Input 4D fMRI data (e.g., fmri_data.nii.gz)"
    },
    "spatial_sigma": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Spatial Sigma",
      "description": "Spatial smoothing sigma"
    },
    "temp_hp_sigma": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Temporal HP Sigma",
      "description": "Temporal high-pass filter sigma"
    },
    "temp_lp_sigma": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Temporal LP Sigma",
      "description": "Temporal low-pass filter sigma"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_4d_data"
  ]
}