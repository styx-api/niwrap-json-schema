{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Vector Affine/NonLinear Transformation with Orientation Preservation",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.vecreg"
    },
    "input_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input File",
      "description": "Filename for input vector or tensor field"
    },
    "output_file": {
      "type": "string",
      "title": "Output File",
      "description": "Filename for output registered vector or tensor field"
    },
    "reference_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Reference Volume",
      "description": "Filename for reference (target) volume"
    },
    "transform_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Affine Transformation Matrix File",
      "description": "Filename for affine transformation matrix"
    },
    "verbose_flag": {
      "type": "boolean",
      "default": false,
      "title": "Verbose Flag",
      "description": "Switch on diagnostic messages"
    },
    "help_flag": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Display help message"
    },
    "secondary_affine": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Secondary Affine Matrix File",
      "description": "Filename for secondary affine matrix; if set, this will be used for the rotation of the vector/tensor field"
    },
    "secondary_warp": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Secondary Warp Field",
      "description": "Filename for secondary warp field; if set, this will be used for the rotation of the vector/tensor field"
    },
    "interp_method": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": "trilinear",
      "title": "Interpolation Method",
      "description": "Interpolation method (nearestneighbour, trilinear (default), sinc, or spline)"
    },
    "brain_mask": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Brain Mask",
      "description": "Brain mask in input space"
    },
    "ref_brain_mask": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Reference Brain Mask",
      "description": "Brain mask in output space (useful for speed up of nonlinear registration)"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_file",
    "output_file",
    "reference_volume"
  ]
}