{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Tool for manipulating complex-valued MR data",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.fslcomplex"
    },
    "input_file": {
      "type": "string",
      "title": "Input file",
      "description": "Input volume (e.g. complexvol.nii.gz)"
    },
    "output_file": {
      "type": "string",
      "title": "Output file",
      "description": "Output volume (e.g. absvol.nii.gz)"
    },
    "output_type": {
      "type": "string",
      "title": "Output type",
      "description": "Output type (determines the operation to perform)"
    },
    "start_vol": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Start volume",
      "description": "Start volume (optional)"
    },
    "end_vol": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "End volume",
      "description": "End volume (optional)"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_file",
    "output_file",
    "output_type"
  ]
}