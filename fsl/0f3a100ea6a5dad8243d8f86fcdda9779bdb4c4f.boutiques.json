{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Prepare 4D grey matter files for higher-level analysis in FEAT.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "feat_gm_prepare"
    },
    "gm_output": {
      "type": "string",
      "title": "4D-GM-output",
      "description": "4D grey matter output file"
    },
    "feat_dirs_list": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "List of FEAT output directories",
      "description": "List of first-level FEAT output directories"
    }
  },
  "additionalProperties": false,
  "required": [
    "gm_output",
    "feat_dirs_list"
  ]
}