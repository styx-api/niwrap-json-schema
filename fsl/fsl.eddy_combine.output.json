{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "eddy_combine",
  "description": "Combines diffusion data sets with opposite phase encoding directions for use with FSL's EDDY.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "root": {
      "type": "string",
      "title": "Root",
      "description": "Output root directory"
    },
    "combined_data": {
      "type": "string",
      "title": "Combined Data File",
      "description": "Combined positive and negative phase-encoded data"
    },
    "combined_bvals": {
      "type": "string",
      "title": "Combined B-values File",
      "description": "Combined b-values file"
    },
    "combined_bvecs": {
      "type": "string",
      "title": "Combined B-vectors File",
      "description": "Combined b-vectors file"
    }
  }
}