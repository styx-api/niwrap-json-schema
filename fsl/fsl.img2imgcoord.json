{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Tool for transforming coordinates between images",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.img2imgcoord"
    },
    "coordinates_file": {
      "type": "string",
      "title": "Coordinates File",
      "description": "Filename containing coordinates"
    },
    "source_image": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Source Image",
      "description": "Filename of source image"
    },
    "dest_image": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Destination Image",
      "description": "Filename of destination image"
    },
    "affine_transform": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Affine Transform",
      "description": "Filename of affine transform (e.g. source2dest.mat)"
    },
    "warp_field": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Warp Field",
      "description": "Filename of warpfield (e.g. intermediate2dest_warp.nii.gz)"
    },
    "pre_warp_affine": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Pre-warp Affine Transform",
      "description": "Filename of pre-warp affine transform (default=identity)"
    },
    "coords_in_voxels": {
      "type": "boolean",
      "default": false,
      "title": "Coordinates in Voxels",
      "description": "All coordinates in voxels (default)"
    },
    "coords_in_mm": {
      "type": "boolean",
      "default": false,
      "title": "Coordinates in MM",
      "description": "All coordinates in mm"
    },
    "verbose": {
      "type": "boolean",
      "default": false,
      "title": "Verbose",
      "description": "Verbose mode"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help",
      "description": "Display help message"
    }
  },
  "additionalProperties": false,
  "required": [
    "coordinates_file",
    "source_image",
    "dest_image",
    "affine_transform"
  ]
}