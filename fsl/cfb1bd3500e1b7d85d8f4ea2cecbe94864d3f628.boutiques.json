{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Cross-correlate two time-series, timepoint by timepoint",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "fslcc"
    },
    "first_input": {
      "type": "string",
      "title": "First Input File",
      "description": "First input time-series"
    },
    "second_input": {
      "type": "string",
      "title": "Second Input File",
      "description": "Second input time-series"
    },
    "mask": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Mask File",
      "description": "Mask file name"
    },
    "noabs_flag": {
      "type": "boolean",
      "default": false,
      "title": "No absolute values flag",
      "description": "Don't return absolute values (keep sign)"
    },
    "nodemean_flag": {
      "type": "boolean",
      "default": false,
      "title": "No demean flag",
      "description": "Don't demean the input files"
    },
    "threshold": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": 0.1,
      "title": "Threshold",
      "description": "Threshold (default 0.1)"
    },
    "decimal_places": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": 2,
      "title": "Decimal Places",
      "description": "Number of decimal places to display in output (default 2)"
    }
  },
  "additionalProperties": false,
  "required": [
    "first_input",
    "second_input"
  ]
}