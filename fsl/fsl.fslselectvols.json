{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Select volumes from a 4D time series and output a subset 4D volume",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.fslselectvols"
    },
    "input_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input File",
      "description": "Input file name (4D image)"
    },
    "output_file": {
      "type": "string",
      "title": "Output File",
      "description": "Output file name (4D image)"
    },
    "vols_list": {
      "type": "string",
      "title": "Volumes List",
      "description": "List of volumes to extract (comma-separated list or ascii file)"
    },
    "output_mean_flag": {
      "type": "boolean",
      "default": false,
      "title": "Output Mean Flag",
      "description": "Output mean instead of concatenation"
    },
    "output_variance_flag": {
      "type": "boolean",
      "default": false,
      "title": "Output Variance Flag",
      "description": "Output variance instead of concatenation"
    },
    "help_flag": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Display help text"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_file",
    "output_file",
    "vols_list"
  ]
}