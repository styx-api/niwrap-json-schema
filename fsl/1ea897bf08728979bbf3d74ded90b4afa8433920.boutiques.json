{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Retrieve the number of volumes in a 4D NIfTI file",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.fslnvols"
    },
    "infile": {
      "type": "string",
      "title": "Input file",
      "description": "Input NIfTI file (e.g., fmri.nii.gz)"
    }
  },
  "additionalProperties": false,
  "required": [
    "infile"
  ]
}