{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "surf_proj",
  "description": "Projects data onto a surface mesh using specified parameters.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl/surf_proj"
    },
    "data": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Data file",
      "description": "Data to project onto surface"
    },
    "surface": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Surface file",
      "description": "Surface file"
    },
    "output_file": {
      "type": "string",
      "title": "Output file",
      "description": "Output file"
    },
    "surface_reference": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Surface volume reference",
      "description": "Surface volume reference (default=same as data)"
    },
    "transform": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Transform file",
      "description": "Data to surface transform (default=Identity)"
    },
    "meshspace": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Mesh space",
      "description": "Mesh space (default='caret')"
    },
    "step_size": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Step size",
      "description": "Average over step (mm - default=1)"
    },
    "direction": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Direction",
      "description": "If >0 goes towards brain (default=0 i.e. both directions)"
    },
    "operation": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Operation",
      "description": "What to do with values: 'mean' (default), 'max', 'median', 'last'"
    },
    "surface_output": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Surface output file",
      "description": "Output surface file, not ASCII matrix (valid only for scalars)"
    }
  },
  "additionalProperties": false,
  "required": [
    "data",
    "surface",
    "output_file"
  ]
}