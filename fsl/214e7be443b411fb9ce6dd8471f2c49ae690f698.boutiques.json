{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Interleaves two input images slice-by-slice to produce an output image.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.fslinterleave"
    },
    "infile1": {
      "type": "string",
      "title": "Input file 1",
      "description": "First input image"
    },
    "infile2": {
      "type": "string",
      "title": "Input file 2",
      "description": "Second input image"
    },
    "outfile": {
      "type": "string",
      "title": "Output file",
      "description": "Output interleaved image"
    },
    "reverse_slice_order_flag": {
      "type": "boolean",
      "default": false,
      "title": "Reverse slice order flag",
      "description": "Reverse slice order"
    }
  },
  "additionalProperties": false,
  "required": [
    "infile1",
    "infile2",
    "outfile"
  ]
}