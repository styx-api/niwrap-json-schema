{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ftoz",
  "description": "Convert F-statistics to Z-scores.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.ftoz"
    },
    "input_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input F-statistics file",
      "description": "File containing F-statistics"
    },
    "dof1": {
      "type": "number",
      "title": "Degrees of Freedom 1",
      "description": "Degrees of freedom 1 for F-to-Z conversion"
    },
    "dof2": {
      "type": "number",
      "title": "Degrees of Freedom 2",
      "description": "Degrees of freedom 2 for F-to-Z conversion"
    },
    "output_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output file",
      "description": "Output file for Z-scores"
    },
    "help_flag": {
      "type": "boolean",
      "default": false,
      "title": "Help flag",
      "description": "Display this help and exit"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_file",
    "dof1",
    "dof2"
  ]
}