{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "maskdyads",
  "description": "Tool to mask dyads with threshold",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.maskdyads"
    },
    "dyads": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Dyads file",
      "description": "Input dyads file"
    },
    "fsamples": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Fsamples file",
      "description": "Input fsamples file"
    },
    "threshold": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Threshold",
      "description": "Threshold (default is 0.05)"
    }
  },
  "additionalProperties": false,
  "required": [
    "dyads",
    "fsamples"
  ]
}