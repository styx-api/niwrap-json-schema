{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Extracts a region of interest (ROI) from an image",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "fslroi"
    },
    "infile": {
      "type": "string",
      "title": "Input file",
      "description": "Input image file"
    },
    "outfile": {
      "type": "string",
      "title": "Output file",
      "description": "Output image file"
    },
    "xmin": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "X min",
      "description": "Minimum X coordinate for ROI (indexing starts at 0)"
    },
    "xsize": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "X size",
      "description": "Size of the ROI in X direction"
    },
    "ymin": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Y min",
      "description": "Minimum Y coordinate for ROI (indexing starts at 0)"
    },
    "ysize": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Y size",
      "description": "Size of the ROI in Y direction"
    },
    "zmin": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Z min",
      "description": "Minimum Z coordinate for ROI (indexing starts at 0)"
    },
    "zsize": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Z size",
      "description": "Size of the ROI in Z direction"
    },
    "tmin": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "T min",
      "description": "Minimum T coordinate for ROI (indexing starts at 0)"
    },
    "tsize": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "T size",
      "description": "Size of the ROI in T direction"
    }
  },
  "additionalProperties": false,
  "required": [
    "infile",
    "outfile"
  ]
}