{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "flirt_average",
  "description": "Averages multiple input images after linear registration (FLIRT).",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl/flirt_average"
    },
    "ninputs": {
      "type": "integer",
      "minimum": 2,
      "title": "Number of inputs",
      "description": "Number of input images"
    },
    "input1": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input file 1",
      "description": "First input image (e.g. rawT1_1.nii.gz)"
    },
    "input2": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input file 2",
      "description": "Second input image (e.g. rawT1_2.nii.gz)"
    },
    "input3": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Input file 3",
      "description": "Third input image (e.g. rawT1_3.nii.gz)"
    },
    "output_file": {
      "type": "string",
      "title": "Output file",
      "description": "Output image (e.g. averageT1.nii.gz)"
    },
    "reference_image": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Reference image",
      "description": "Reference image to use instead of first input"
    },
    "flirt_options": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "FLIRT options",
      "description": "Options to be passed to FLIRT"
    }
  },
  "additionalProperties": false,
  "required": [
    "ninputs",
    "input1",
    "input2",
    "output_file",
    "@type"
  ]
}