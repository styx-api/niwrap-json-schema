{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ccops",
  "description": "ccops - Clustering of Connectomes Using Probabilistic Tractography",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl/ccops"
    },
    "basename": {
      "type": "string",
      "title": "Basename",
      "description": "Output basename"
    },
    "infile": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Input file",
      "description": "Input matrix"
    },
    "tract_dir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Tractography Results Directory",
      "description": "Tractography Results Directory"
    },
    "exclusion_mask": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Exclusion Mask",
      "description": "Exclusion mask (in tract space)"
    },
    "reorder_seedspace": {
      "type": "boolean",
      "default": false,
      "title": "Reorder Seedspace",
      "description": "Do seedspace reordering (default no)"
    },
    "reorder_tractspace": {
      "type": "boolean",
      "default": false,
      "title": "Reorder Tractspace",
      "description": "Do tractspace reordering (default no)"
    },
    "tract_reord": {
      "type": "boolean",
      "default": false,
      "title": "Tract Reordering",
      "description": "Propagate seed reordering onto tract space"
    },
    "connexity_constraint": {
      "anyOf": [
        {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Connexity Constraint",
      "description": "Add connexity constraint - value between 0 and 1 (0 is no constraint). Default is 0"
    },
    "binarise_val": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Binarisation",
      "description": "Binarise at (default 0 - no binarisation)"
    },
    "matrix_power": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Matrix Power",
      "description": "Power to raise the correlation matrix to (default 1)"
    },
    "brain_mask": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Brain Mask",
      "description": "Brain mask used to output the clustered ROI mask (not necessary if --dir set)"
    },
    "scheme": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Reordering Algorithm",
      "description": "Reordering algorithm. Can be either spectral (default), kmeans or fuzzy"
    },
    "nclusters": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of Clusters",
      "description": "Number of clusters to be used in kmeans or fuzzy"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help",
      "description": "Display this help message"
    }
  },
  "additionalProperties": false,
  "required": [
    "basename"
  ]
}