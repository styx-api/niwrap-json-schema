{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "dtifit",
  "description": "DTIFIT - Fit a diffusion tensor model at each voxel",
  "type": "object",
  "properties": {
    "@type": {
      "const": "fsl.dtifit"
    },
    "data_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Data file",
      "description": "DTI data file"
    },
    "output_basename": {
      "type": "string",
      "title": "Output basename",
      "description": "Output basename"
    },
    "mask_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Mask file",
      "description": "Bet binary mask file"
    },
    "bvec_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "B vectors file",
      "description": "B vectors file"
    },
    "bval_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "B values file",
      "description": "B values file"
    },
    "verbose_flag": {
      "type": "boolean",
      "default": false,
      "title": "Verbose flag",
      "description": "Switch on diagnostic messages"
    },
    "sse_flag": {
      "type": "boolean",
      "default": false,
      "title": "SSE flag",
      "description": "Output sum of squared errors"
    },
    "wls_flag": {
      "type": "boolean",
      "default": false,
      "title": "WLS flag",
      "description": "Fit the tensor with weighted least squares"
    },
    "kurt_flag": {
      "type": "boolean",
      "default": false,
      "title": "Kurt flag",
      "description": "Output mean kurtosis map (for multi-shell data)"
    },
    "kurtdir_flag": {
      "type": "boolean",
      "default": false,
      "title": "Kurt direction flag",
      "description": "Output maps of kurtosis along each eigenvector: K1, K2, and K3 (for multi-shell data)"
    },
    "littlebit_flag": {
      "type": "boolean",
      "default": false,
      "title": "Little bit flag",
      "description": "Only process small area of brain"
    },
    "save_tensor_flag": {
      "type": "boolean",
      "default": false,
      "title": "Save tensor flag",
      "description": "Save the elements of the tensor"
    },
    "zmin": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Minimum z",
      "description": "Minimum z"
    },
    "zmax": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Maximum z",
      "description": "Maximum z"
    },
    "ymin": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Minimum y",
      "description": "Minimum y"
    },
    "ymax": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Maximum y",
      "description": "Maximum y"
    },
    "xmin": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Minimum x",
      "description": "Minimum x"
    },
    "xmax": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Maximum x",
      "description": "Maximum x"
    },
    "gradnonlin_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Gradient nonlinearity tensor file",
      "description": "Gradient Nonlinearity Tensor file"
    },
    "confound_regressors": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Confound regressors file",
      "description": "Input confound regressors"
    }
  },
  "additionalProperties": false,
  "required": [
    "data_file",
    "output_basename",
    "mask_file",
    "bvec_file",
    "bval_file"
  ]
}