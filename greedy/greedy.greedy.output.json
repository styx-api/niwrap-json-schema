{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "greedy",
  "description": "Paul's greedy diffeomorphic registration implementation",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "root": {
      "type": "string",
      "title": "Root",
      "description": "Output root directory"
    },
    "output_file": {
      "type": "string",
      "title": "Output File",
      "description": "Output file from affine or deformable registration"
    },
    "greedy": {
      "anyOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "root": {
              "type": "string",
              "title": "Root",
              "description": "Output root directory"
            },
            "jacobian_mesh": {
              "type": "string",
              "title": "Jacobian Mesh",
              "description": "The output mesh with computed Jacobian determinants"
            }
          }
        },
        {
          "type": "null"
        }
      ]
    }
  }
}