{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "c4d",
  "description": "C4D is a command-line tool for medical image processing.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "root": {
      "type": "string",
      "title": "Root",
      "description": "Output root directory"
    },
    "c4d": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "root": {
            "type": "string",
            "title": "Root",
            "description": "Output root directory"
          },
          "operations": {
            "anyOf": [
              {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "root": {
                    "type": "string",
                    "title": "Root",
                    "description": "Output root directory"
                  },
                  "output": {
                    "type": "string",
                    "title": "Output",
                    "description": "The output"
                  }
                }
              }
            ]
          }
        }
      }
    }
  }
}