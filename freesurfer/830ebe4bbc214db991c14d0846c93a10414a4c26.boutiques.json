{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "View FSFAST version 5 retinotopy data using the color wheel. This is a front-end for tksurfer, setting up the environment for using the color wheel.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "rtview"
    },
    "subject": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subject",
      "description": "Subject to use as display"
    },
    "hemi": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Hemisphere",
      "description": "Hemisphere to display: 'lh' for left hemisphere or 'rh' for right hemisphere"
    },
    "left_hemi": {
      "type": "boolean",
      "default": false,
      "title": "Left Hemisphere Flag",
      "description": "Display left hemisphere"
    },
    "right_hemi": {
      "type": "boolean",
      "default": false,
      "title": "Right Hemisphere Flag",
      "description": "Display right hemisphere"
    },
    "eccen": {
      "type": "boolean",
      "default": false,
      "title": "Eccentricity Flag",
      "description": "Display eccentricity data"
    },
    "polar": {
      "type": "boolean",
      "default": false,
      "title": "Polar Flag",
      "description": "Display polar data"
    },
    "real_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Real File",
      "description": "File containing real (cosine) values"
    },
    "imag_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Imaginary File",
      "description": "File containing imaginary (sine) values"
    },
    "fsig_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "FSIG File",
      "description": "File containing significance values"
    },
    "reg_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Registration File",
      "description": "Registration file for when real/imag/fsig are volumes"
    },
    "flat_display": {
      "type": "boolean",
      "default": false,
      "title": "Flat Display Flag",
      "description": "Display on occip.patch.flat"
    },
    "patch": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Patch Name",
      "description": "Display on specified patchname"
    },
    "tcl_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "TCL Command File",
      "description": "Use your own TCL command file"
    },
    "no_cleanup": {
      "type": "boolean",
      "default": false,
      "title": "No Cleanup Flag",
      "description": "Don't delete temporary directory"
    }
  },
  "additionalProperties": false
}