{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Tool for comparing TAL databases",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "tal_compare"
    },
    "ref_file": {
      "type": "string",
      "title": "Reference File",
      "description": "Reference TAL database file."
    },
    "moving_file": {
      "type": "string",
      "title": "Moving File",
      "description": "Moving TAL database file to compare against the reference."
    },
    "output_file": {
      "type": "string",
      "title": "Output File",
      "description": "Output file to store comparison results."
    },
    "verbose": {
      "type": "boolean",
      "default": false,
      "title": "Verbose Flag",
      "description": "Enable verbose output."
    }
  },
  "additionalProperties": false,
  "required": [
    "ref_file",
    "moving_file",
    "output_file"
  ]
}