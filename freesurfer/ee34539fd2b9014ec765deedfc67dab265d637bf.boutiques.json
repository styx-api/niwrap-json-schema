{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Converts surface defect labels into a segmentation volume and pointsets",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.defect2seg"
    },
    "output_seg": {
      "type": "string",
      "title": "Output Segmentation",
      "description": "Output segmentation volume"
    },
    "template": {
      "type": "string",
      "title": "Template",
      "description": "Template for segmentation"
    },
    "left_hemisphere": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          },
          "maxItems": 4
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Left Hemisphere Inputs",
      "description": "Left hemisphere inputs: surface, defect labels, pointset, and offset"
    },
    "right_hemisphere": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          },
          "maxItems": 4
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Right Hemisphere Inputs",
      "description": "Right hemisphere inputs: surface, defect labels, pointset, and offset"
    },
    "subject": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subject",
      "description": "Subject identifier, sets default values for other parameters"
    },
    "lh_only": {
      "type": "boolean",
      "default": false,
      "title": "Left Hemisphere Only",
      "description": "Consider only left hemisphere defects"
    },
    "rh_only": {
      "type": "boolean",
      "default": false,
      "title": "Right Hemisphere Only",
      "description": "Consider only right hemisphere defects"
    },
    "cortex": {
      "type": "boolean",
      "default": false,
      "title": "Cortex Constraint",
      "description": "Constrain defects to within cortex"
    },
    "no_cortex": {
      "type": "boolean",
      "default": false,
      "title": "No Cortex Constraint",
      "description": "Allow defects outside of cortex"
    }
  },
  "additionalProperties": false,
  "required": [
    "output_seg",
    "template"
  ]
}