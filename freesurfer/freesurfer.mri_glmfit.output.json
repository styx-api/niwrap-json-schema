{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_glmfit",
  "description": "Performs general linear model (GLM) analysis in the volume or the surface.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "root": {
      "type": "string",
      "title": "Root",
      "description": "Output root directory"
    },
    "regression_coefs": {
      "type": "string",
      "title": "Regression coefficients",
      "description": "All regression coefficients (B)."
    },
    "residual_error": {
      "type": "string",
      "title": "Residual error file",
      "description": "Residual error."
    },
    "residual_variance": {
      "type": "string",
      "title": "Residual variance file",
      "description": "Residual error variance."
    },
    "residual_stddev": {
      "type": "string",
      "title": "Residual standard deviation",
      "description": "Residual error standard deviation."
    },
    "fsgd_output": {
      "type": "string",
      "title": "Output FSGD file",
      "description": "FSGD file if one was input."
    },
    "normalized_weights": {
      "type": "string",
      "title": "Normalized weights file",
      "description": "Normalized weights with --w or --wls."
    },
    "signal_estimate": {
      "type": "string",
      "title": "Signal estimate file",
      "description": "Signal estimate with --save-yhat."
    },
    "final_mask": {
      "type": "string",
      "title": "Final mask file",
      "description": "Final mask when a mask is used."
    },
    "design_condition": {
      "type": "string",
      "title": "Design matrix condition file",
      "description": "Design matrix condition at each voxel with --save-cond."
    },
    "contrast_output_dir": {
      "type": "string",
      "title": "Contrast output directory",
      "description": "Directory for each contrast output files."
    }
  }
}