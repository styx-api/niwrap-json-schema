{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_sample_label",
  "description": "This tool samples a label onto a surface model.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mris_sample_label"
    },
    "input_label_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Label File",
      "description": "Input label file"
    },
    "input_surface_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Surface File",
      "description": "Input surface file"
    },
    "output_label_file": {
      "type": "string",
      "title": "Output Label File",
      "description": "Output label file"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_label_file",
    "input_surface_file",
    "output_label_file"
  ]
}