{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Positions the tessellation of the cortical surface at the white matter surface, then the gray matter surface, generating surface files along with a curvature file and a surface file for cortical thickness.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "mris_make_surfaces"
    },
    "subject_name": {
      "type": "string",
      "title": "Subject Name",
      "description": "Name of the subject"
    },
    "hemisphere": {
      "type": "string",
      "title": "Hemisphere",
      "description": "Brain hemisphere (r or l)"
    },
    "white": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "White Surface Name",
      "description": "Output name for white surface (default is 'white'). Set to NOWHITE to generate but not save white surface."
    },
    "pial": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Pial Surface Name",
      "description": "Output name for pial surface (default is 'pial')."
    },
    "whiteonly": {
      "type": "boolean",
      "default": false,
      "title": "White-only Flag",
      "description": "Only generate white matter surface."
    },
    "nowhite": {
      "type": "boolean",
      "default": false,
      "title": "No-White Flag",
      "description": "Only generate pial surface."
    },
    "orig_white": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Original White Surface",
      "description": "Specify a white surface to start with."
    },
    "orig_pial": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Original Pial Surface",
      "description": "Specify a pial surface to start with."
    },
    "q": {
      "type": "boolean",
      "default": false,
      "title": "Q Flag",
      "description": "Omit self-intersection and only generate gray/white surface."
    },
    "max_gray_scale": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Maximum Gray Scale",
      "description": "Set maximum gray scale value."
    },
    "c": {
      "type": "boolean",
      "default": false,
      "title": "C Flag",
      "description": "Do not create curvature and area files from white matter surface."
    },
    "cortex": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Cortex Flag",
      "description": "Set to 0 to turn off creation of cortex label file."
    },
    "w": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "W Argument",
      "description": "Unused argument"
    },
    "first_wm_peak": {
      "type": "boolean",
      "default": false,
      "title": "First WM Peak Flag",
      "description": "Settle WM surface at first peak in intensity profile instead of highest."
    },
    "a_avgs": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Average Curvature",
      "description": "Average curvature values a number of times (default=10)."
    },
    "pa_avgs": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Average Pial Curvature",
      "description": "Average pial curvature values a max of a number of times (default=16)."
    },
    "wa_avgs": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Average White Curvature",
      "description": "Average white curvature values a max of a number of times (default=4)."
    },
    "t1_vol": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "T1 Volume",
      "description": "Specify T1 volume (default is brain)."
    },
    "w_vol": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "White Volume",
      "description": "Specify white volume and <hires> option."
    },
    "long": {
      "type": "boolean",
      "default": false,
      "title": "Longitudinal Flag",
      "description": "Run longitudinal analysis."
    },
    "dura_thresh": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Dura Threshold",
      "description": "Set a threshold for the multi-echo mprage dura avoidance."
    },
    "sdir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subjects Directory",
      "description": "Specify SUBJECTS_DIR."
    },
    "erase_cerebellum": {
      "type": "boolean",
      "default": false,
      "title": "Erase Cerebellum Flag",
      "description": "Erase cerebellar labeled voxels if aseg is loaded."
    },
    "wm_weight": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "WM Weight",
      "description": "Weighting of WM mean in calculating T2 threshold of disallowed GM values, default=3."
    },
    "nsigma_above": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Sigma Above",
      "description": "# of sigmas above the mean to allow gray matter T2 intensities."
    },
    "nsigma_below": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Sigma Below",
      "description": "# of sigmas below the mean to allow gray matter T2 intensities."
    },
    "t2_min_inside": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Min T2 Inside",
      "description": "Specify threshold for min T2 value allowed to be interior to the cortical ribbon."
    },
    "t2_max_inside": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Max T2 Inside",
      "description": "Specify threshold for max T2 value allowed to be interior to the cortical ribbon."
    },
    "t2_outside_min": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Min T2 Outside",
      "description": "Specify threshold for min T2 value outside of pial surface that will cause surface to deform outwards."
    },
    "t2_outside_max": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Max T2 Outside",
      "description": "Specify threshold for max T2 value outside of pial surface that will cause surface to deform outwards."
    },
    "min_peak_pct": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Min Peak %",
      "description": "Specify the pct of the histo peak in the local gm histogram to use as threshold for finding the local inside and outside gm thresholds."
    },
    "border_vals_hires": {
      "type": "boolean",
      "default": false,
      "title": "Border Vals Hires",
      "description": "Turn on hires options in MRIScomputeBorderValues_new(). May not be helpful."
    },
    "no_unitize": {
      "type": "boolean",
      "default": false,
      "title": "No Unitize",
      "description": "Turn off face normal unitization."
    },
    "intensity": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Intensity Cost",
      "description": "Set weight of intensity cost."
    },
    "curv": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Curvature Cost",
      "description": "Set weight of curvature cost."
    },
    "tspring": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Tangential Spring Cost",
      "description": "Set weight of tangential spring cost."
    },
    "nspring": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Normal Spring Cost",
      "description": "Set weight of normal spring cost."
    },
    "repulse": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Repulsion Cost",
      "description": "Set weight of repulsion force."
    },
    "save_target": {
      "type": "boolean",
      "default": false,
      "title": "Save Target",
      "description": "Save target surface for debugging."
    },
    "save_res": {
      "type": "boolean",
      "default": false,
      "title": "Save Residual",
      "description": "Save residual for debugging."
    },
    "v_vertexno": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Vertex Number",
      "description": "Set Gdiag_no to vertex number."
    },
    "diag_vertex": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Diagnostic Vertex",
      "description": "Set Gdiag_no to vertex number and turn off writing of cortex label or curvature files."
    },
    "rip": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Rip File",
      "description": "Save ripflag as overlay. Specify full path including hemi, suffix, etc."
    },
    "sigma_white": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Sigma White File",
      "description": "Save white surface sigma as overlay. Specify full path including hemi, suffix, etc."
    },
    "sigma_pial": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Sigma Pial File",
      "description": "Save pial surface sigma as overlay. Specify full path including hemi, suffix, etc."
    },
    "output": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output Suffix",
      "description": "Append suffix to all outputs to prevent over-writing."
    },
    "min_border_white": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Min Border White",
      "description": "Minimum border white."
    },
    "max_border_white": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Max Border White",
      "description": "Maximum border white."
    },
    "min_gray_white_border": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Min Gray at White Border",
      "description": "Minimum gray at white border."
    },
    "max_gray": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Max Gray",
      "description": "Maximum gray value."
    },
    "max_gray_csf_border": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Max Gray at CSF Border",
      "description": "Maximum gray at CSF border."
    },
    "min_gray_csf_border": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Min Gray at CSF Border",
      "description": "Minimum gray at CSF border."
    },
    "max_csf": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Max CSF",
      "description": "Maximum CSF value."
    }
  },
  "additionalProperties": false,
  "required": [
    "subject_name",
    "hemisphere"
  ]
}