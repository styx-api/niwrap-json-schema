{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A program that performs False Discovery Rate correction.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri_fdr"
    },
    "input_files": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "title": "Input source",
      "description": "Input source volume or surface overlay. Specify mask, output, and frame as needed."
    },
    "fdr_value": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "title": "FDR value",
      "description": "FDR value between 0 and 1, typically .05"
    },
    "default_frame": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Default frame",
      "description": "Use input frame when not specifying frame in --i"
    },
    "positive_only": {
      "type": "boolean",
      "default": false,
      "title": "Positive voxels only",
      "description": "Only consider positive voxels"
    },
    "negative_only": {
      "type": "boolean",
      "default": false,
      "title": "Negative voxels only",
      "description": "Only consider negative voxels"
    },
    "all_voxels": {
      "type": "boolean",
      "default": false,
      "title": "All voxels",
      "description": "Consider all voxels regardless of sign (default)"
    },
    "raw_p_values": {
      "type": "boolean",
      "default": false,
      "title": "Raw p-values",
      "description": "Input is raw p-values, not -log10(p)"
    },
    "threshold_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Threshold file",
      "description": "Write threshold to text file"
    },
    "debug": {
      "type": "boolean",
      "default": false,
      "title": "Debug",
      "description": "Turn on debugging"
    },
    "check_options": {
      "type": "boolean",
      "default": false,
      "title": "Check options",
      "description": "Don't run anything, just check options and exit"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_files",
    "fdr_value"
  ]
}