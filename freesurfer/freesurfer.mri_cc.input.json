{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_cc",
  "description": "Segments the corpus callosum into five separate labels in the subcortical segmentation volume.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mri_cc"
    },
    "subject_name": {
      "type": "string",
      "title": "Subject Name",
      "description": "Subject name used in processing"
    },
    "output_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output File",
      "description": "Write aseg including CC to SDIR/mri/<fname>"
    },
    "aseg_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Aseg File",
      "description": "Read aseg from SDIR/mri/<fname>"
    },
    "norm_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Norm File",
      "description": "Read norm from SDIR/mri/<fname>"
    },
    "sdir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subjects Directory",
      "description": "Set SUBJECTS_DIR to <dname>"
    },
    "rotation_lta": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Rotation LTA File",
      "description": "Write rotation lta to global <fname>"
    },
    "force_flag": {
      "type": "boolean",
      "default": false,
      "title": "Force Flag",
      "description": "Process regardless of existing CC in input"
    },
    "include_fornix": {
      "type": "boolean",
      "default": false,
      "title": "Include Fornix",
      "description": "Include fornix in segmentation"
    },
    "compartments": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Compartments",
      "description": "Subdivide into <int> compartments"
    },
    "thickness": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "CC Thickness",
      "description": "Setting CC thickness to <int> mm"
    },
    "skip_voxels": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Skip Voxels",
      "description": "Skipping <int> voxels in rotational align"
    },
    "max_rotation": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Max Rotation",
      "description": "Set max of rotations to be searched (default=7deg)"
    }
  },
  "additionalProperties": false,
  "required": [
    "subject_name"
  ]
}