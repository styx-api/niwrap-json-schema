{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Segments cerebellar white matter into gyral and core components using geometrical constraints.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "cblumwmgyri"
    },
    "subject": {
      "type": "string",
      "title": "Subject",
      "description": "Subject identifier"
    },
    "source_seg": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Source segmentation",
      "description": "Source segmentation file (default: aparc+aseg.mgz)"
    },
    "n_erodes_dilates": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": 2,
      "title": "Erosions/Dilations",
      "description": "Number of erosions/dilations (default: 2)"
    },
    "out_seg": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": "sourceseg+cblumwmgyri.mgz",
      "title": "Output segmentation",
      "description": "Output segmentation file (default: sourceseg+cblumwmgyri.mgz)"
    },
    "no_segstats": {
      "type": "boolean",
      "default": false,
      "title": "No Segstats",
      "description": "Do not compute segmentation statistics"
    },
    "subjects_dir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subjects Directory",
      "description": "Subjects directory"
    }
  },
  "additionalProperties": false,
  "required": [
    "subject"
  ]
}