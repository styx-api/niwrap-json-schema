{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Front-end for MINC's mritotal to compute the Talairach transform mapping the input volume to the MNI305.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.talairach"
    },
    "input_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Volume",
      "description": "Input volume."
    },
    "output_transform": {
      "type": "string",
      "title": "Output Transform File",
      "description": "Output transform file (xfm)."
    },
    "log_flag": {
      "type": "boolean",
      "default": false,
      "title": "Log Flag",
      "description": "Specify log file. Default is outdir/talarach.log."
    },
    "debug_flag": {
      "type": "boolean",
      "default": false,
      "title": "Debug Flag",
      "description": "Turn on debugging."
    }
  },
  "additionalProperties": false,
  "required": [
    "input_volume",
    "output_transform"
  ]
}