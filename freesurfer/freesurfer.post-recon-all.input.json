{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "post-recon-all",
  "description": "Post-processing script typically run after recon-all in FreeSurfer",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/post-recon-all"
    },
    "subject": {
      "type": "string",
      "title": "Subject",
      "description": "Subject identifier to be processed"
    },
    "subfields": {
      "type": "boolean",
      "default": false,
      "title": "Subfields flag",
      "description": "Run subfields extraction (default behavior)"
    },
    "no_subfields": {
      "type": "boolean",
      "default": false,
      "title": "No subfields flag",
      "description": "Do not run subfields extraction"
    },
    "subregions": {
      "type": "boolean",
      "default": false,
      "title": "Subregions flag",
      "description": "Run subregions extraction (default behavior)"
    },
    "no_subregions": {
      "type": "boolean",
      "default": false,
      "title": "No subregions flag",
      "description": "Do not run subregions extraction"
    },
    "cvs": {
      "type": "boolean",
      "default": false,
      "title": "CVS flag",
      "description": "Run CVS processing"
    },
    "no_cvs": {
      "type": "boolean",
      "default": false,
      "title": "No CVS flag",
      "description": "Do not run CVS processing (default behavior)"
    },
    "qcache": {
      "type": "boolean",
      "default": false,
      "title": "Qcache flag",
      "description": "Run qcache processing (default behavior)"
    },
    "no_qcache": {
      "type": "boolean",
      "default": false,
      "title": "No qcache flag",
      "description": "Do not run qcache processing"
    },
    "no_sclimbic": {
      "type": "boolean",
      "default": false,
      "title": "No sclimbic flag",
      "description": "Do not run sclimbic processing"
    },
    "no_hthsu": {
      "type": "boolean",
      "default": false,
      "title": "No hypothalamic subunits flag",
      "description": "Do not run hypothalamic subunits processing"
    },
    "no_synthstrip": {
      "type": "boolean",
      "default": false,
      "title": "No synthstrip flag",
      "description": "Do not run synthstrip processing"
    },
    "no_synthseg": {
      "type": "boolean",
      "default": false,
      "title": "No synthseg flag",
      "description": "Do not run synthseg processing"
    },
    "no_qastats": {
      "type": "boolean",
      "default": false,
      "title": "No qastats flag",
      "description": "Do not run qastats processing"
    },
    "no_samseg": {
      "type": "boolean",
      "default": false,
      "title": "No samseg flag",
      "description": "Do not run samseg processing"
    },
    "no_xhemi": {
      "type": "boolean",
      "default": false,
      "title": "No xhemi flag",
      "description": "Do not run xhemi processing"
    },
    "no_cos7": {
      "type": "boolean",
      "default": false,
      "title": "No Cos7 flag",
      "description": "Do not run commands from CentOS7 container"
    },
    "threads": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Threads",
      "description": "Number of threads to be used"
    },
    "force": {
      "type": "boolean",
      "default": false,
      "title": "Force rerun flag",
      "description": "Force rerunning even if output is newer than input"
    },
    "exit_on_error": {
      "type": "boolean",
      "default": false,
      "title": "Exit on error flag",
      "description": "Exit immediately if an error occurs"
    }
  },
  "additionalProperties": false,
  "required": [
    "subject",
    "@type"
  ]
}