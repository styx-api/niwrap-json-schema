{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Paints output onto a subject's left hemisphere using FreeSurfer.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.map_all_labels-lh"
    },
    "which": {
      "type": "string",
      "title": "Data Type",
      "description": "Which type of data to process. Options are: coords, label, vals, curv, area."
    },
    "fname": {
      "type": "string",
      "title": "File Name",
      "description": "The file name to process."
    },
    "hemi": {
      "type": "string",
      "title": "Hemisphere",
      "description": "The hemisphere to process (usually 'lh' for left hemisphere)."
    },
    "spherical_surf": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Spherical Surface",
      "description": "The spherical surface file."
    },
    "subjects": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Subjects",
      "description": "List of subjects to process."
    },
    "output": {
      "type": "string",
      "title": "Output",
      "description": "Output file."
    }
  },
  "additionalProperties": false,
  "required": [
    "which",
    "fname",
    "hemi",
    "spherical_surf",
    "subjects",
    "output"
  ]
}