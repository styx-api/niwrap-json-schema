{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "cor_to_minc",
  "description": "Converts a directory of COR files to a MINC file.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/cor_to_minc"
    },
    "cor_directory": {
      "type": "string",
      "title": "COR Directory",
      "description": "Directory containing COR files"
    },
    "minc_file": {
      "type": "string",
      "title": "MINC File Name",
      "description": "Output MINC file name"
    }
  },
  "additionalProperties": false,
  "required": [
    "cor_directory",
    "minc_file"
  ]
}