{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Morphological analysis tool for left hemisphere in Freesurfer",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.morph_tables-lh"
    },
    "input_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input file for morph_tables-lh",
      "description": "Input file for morphological analysis"
    },
    "some_flag": {
      "type": "boolean",
      "default": false,
      "title": "Example Flag",
      "description": "Example flag (replace with actual options from tool if known)"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_file"
  ]
}