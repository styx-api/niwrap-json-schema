{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "MRI vessel segmentation tool",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri_vessel_segment"
    },
    "t1_image": {
      "type": "string",
      "x-styx-type": "file",
      "title": "T1 Image",
      "description": "T1-weighted input image"
    },
    "t2_image": {
      "type": "string",
      "x-styx-type": "file",
      "title": "T2 Image",
      "description": "T2-weighted input image"
    },
    "aseg_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "ASEG File",
      "description": "Anatomical segmentation file"
    },
    "output_file": {
      "type": "string",
      "title": "Output File",
      "description": "Output file"
    },
    "shape_flag": {
      "type": "boolean",
      "default": false,
      "title": "Shape Flag",
      "description": "Use shape constraints during segmentation"
    }
  },
  "additionalProperties": false,
  "required": [
    "t1_image",
    "t2_image",
    "aseg_file",
    "output_file"
  ]
}