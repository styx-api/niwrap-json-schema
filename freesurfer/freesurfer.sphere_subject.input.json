{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "sphere_subject",
  "description": "A FreeSurfer tool for processing subject data.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.sphere_subject"
    },
    "input_dir": {
      "type": "string",
      "title": "Input Directory",
      "description": "Input subject directory"
    },
    "output_file": {
      "type": "string",
      "title": "Output File",
      "description": "Output file for results"
    },
    "license_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": "/usr/local/freesurfer/.license",
      "title": "License File",
      "description": "Path to FreeSurfer license file"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_dir",
    "output_file"
  ]
}