{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_transmantle_dysplasia_paths",
  "description": "Tool for transmantle dysplasia path computation",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_transmantle_dysplasia_paths"
    },
    "surface": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Surface",
      "description": "Surface file"
    },
    "aseg_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "ASEG Volume",
      "description": "ASEG volume file"
    },
    "intensity_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Intensity Volume",
      "description": "Intensity volume file"
    },
    "xform": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Transformation",
      "description": "Transformation file"
    },
    "output_volume": {
      "type": "string",
      "title": "Output Volume",
      "description": "Output volume file"
    },
    "filter": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Filter Low High",
      "description": "Apply specified filter with low and high values (not implemented yet)"
    },
    "noise_sensitivity": {
      "type": "boolean",
      "default": false,
      "title": "Noise Sensitivity",
      "description": "Noise-sensitivity normalize inverse (default=1)"
    }
  },
  "additionalProperties": false,
  "required": [
    "surface",
    "aseg_volume",
    "intensity_volume",
    "xform",
    "output_volume"
  ]
}