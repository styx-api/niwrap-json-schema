{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_synthseg",
  "description": "SynthSeg is a tool for brain image segmentation.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "root": {
      "type": "string",
      "title": "Root",
      "description": "Output root directory"
    },
    "output_segmentation_file": {
      "type": "string",
      "title": "Output segmentation file",
      "description": "Segmentation output(s)"
    },
    "output_volume_csv": {
      "type": "string",
      "title": "Output volume CSV",
      "description": "CSV file with volumes for all structures and subjects"
    },
    "output_qc_csv": {
      "type": "string",
      "title": "Output QC CSV",
      "description": "CSV file with QC scores for all subjects"
    },
    "output_posteriors_file": {
      "type": "string",
      "title": "Output posteriors file",
      "description": "Posteriors output(s)"
    },
    "resampled_images_file": {
      "type": "string",
      "title": "Resampled images file",
      "description": "Resampled image(s)"
    }
  }
}