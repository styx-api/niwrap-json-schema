{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_convert",
  "description": "A general purpose utility for converting between different file formats supported by FreeSurfer",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri_convert"
    },
    "inp_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Volume",
      "description": "The input volume file"
    },
    "out_volume": {
      "type": "string",
      "title": "Output Volume",
      "description": "The output volume file"
    },
    "read_only": {
      "type": "boolean",
      "default": false,
      "title": "Read Only",
      "description": "Open in read-only mode"
    },
    "no_write": {
      "type": "boolean",
      "default": false,
      "title": "No Write",
      "description": "Do not write output"
    },
    "in_info": {
      "type": "boolean",
      "default": false,
      "title": "Input Volume Information",
      "description": "Print input volume information"
    },
    "out_info": {
      "type": "boolean",
      "default": false,
      "title": "Output Volume Information",
      "description": "Print output volume information"
    },
    "in_stats": {
      "type": "boolean",
      "default": false,
      "title": "Input Statistics",
      "description": "Print statistics on input volume"
    },
    "out_stats": {
      "type": "boolean",
      "default": false,
      "title": "Output Statistics",
      "description": "Print statistics on output volume"
    },
    "upsample": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Upsample factor",
      "description": "Reduce voxel size by a factor in all dimensions"
    },
    "force_ras_good": {
      "type": "boolean",
      "default": false,
      "title": "Force RAS Good",
      "description": "Use default when orientation info absent"
    },
    "apply_transform": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Apply Transform",
      "description": "Apply transform given by xfm or m3z file"
    },
    "apply_inverse_transform": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Apply Inverse Transform",
      "description": "Apply inverse of transform given by xfm or m3z file"
    },
    "in_type": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Input Type",
      "description": "Specify input file type"
    },
    "out_type": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output Type",
      "description": "Specify output file type"
    },
    "in_orientation": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Input Orientation",
      "description": "Specify input orientation"
    },
    "out_orientation": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output Orientation",
      "description": "Specify output orientation"
    },
    "scale_factor": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Scale Factor",
      "description": "Input intensity scale factor"
    },
    "bfile_little_endian": {
      "type": "boolean",
      "default": false,
      "title": "Bfile Little Endian",
      "description": "Write out bshort/bfloat files in little endian"
    },
    "sphinx": {
      "type": "boolean",
      "default": false,
      "title": "Sphinx Orientation",
      "description": "Reorient to sphinx position"
    }
  },
  "additionalProperties": false,
  "required": [
    "inp_volume",
    "out_volume"
  ]
}