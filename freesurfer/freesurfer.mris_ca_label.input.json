{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_ca_label",
  "description": "Produces an annotation file in which each cortical surface vertex is assigned a neuroanatomical label using a previously-prepared atlas file.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_ca_label"
    },
    "subject": {
      "type": "string",
      "title": "Subject ID",
      "description": "Subject ID for labeling"
    },
    "hemi": {
      "type": "string",
      "title": "Hemisphere",
      "description": "Hemisphere (rh or lh)"
    },
    "canonsurf": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Canonical Surface File",
      "description": "Name of the spherical surface file that describes the registration of a subject's vertices to the average surface"
    },
    "classifier": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Classifier Array Input File",
      "description": "Specify classifier array input file"
    },
    "outputfile": {
      "type": "string",
      "title": "Annotated Surface Output File",
      "description": "Output annotated surface file listing the region label for each vertex"
    },
    "seed": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Seed",
      "description": "Specify the seed for the random number generator"
    },
    "sdir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subjects Directory",
      "description": "Specify a subjects directory (default=$SUBJECTS_DIR)"
    },
    "orig": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Original Surface Filename",
      "description": "Specify filename of original surface (default=smoothwm)"
    },
    "long_flag": {
      "type": "boolean",
      "default": false,
      "title": "Longitudinal Refinement Flag",
      "description": "Refines the initial labeling read-in from -r (default: disabled)"
    },
    "r": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Precomputed Parcellation File",
      "description": "File containing precomputed parcellation"
    },
    "novar_flag": {
      "type": "boolean",
      "default": false,
      "title": "No Variance Flag",
      "description": "Sets all covariance matrices to the identity (default: disabled)"
    },
    "nbrs": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Neighborhood Size",
      "description": "Neighborhood size (default=2)"
    },
    "f": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Mode Filter Applications",
      "description": "Applies mode filter <number> times before writing output (default=10)"
    },
    "t": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Parcellation Table Input File",
      "description": "Specify parcellation table input file (default: none)"
    },
    "p": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Label Probability Output File",
      "description": "Output file containing label probability for each vertex."
    },
    "v": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Diagnostic Level",
      "description": "Diagnostic level (default=0)"
    },
    "w": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Gibbs Process Snapshots",
      "description": "Writes-out snapshots of gibbs process every <number> iterations to <filename> (default=disabled)"
    },
    "help_flag": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Print help information"
    },
    "version_flag": {
      "type": "boolean",
      "default": false,
      "title": "Version Flag",
      "description": "Print version information"
    }
  },
  "additionalProperties": false,
  "required": [
    "subject",
    "hemi",
    "canonsurf",
    "classifier",
    "outputfile"
  ]
}