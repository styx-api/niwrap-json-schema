{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "histo_synthesize",
  "description": "Tool for synthesizing histology-like volumes from MRI data.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.histo_synthesize"
    },
    "mri_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "MRI Volume",
      "description": "Input MRI volume file."
    },
    "histo_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "HISTO Volume",
      "description": "Input HISTO volume file."
    },
    "synthetic_histo": {
      "type": "string",
      "title": "Synthetic HISTO",
      "description": "Output synthetic histo volume file."
    }
  },
  "additionalProperties": false,
  "required": [
    "mri_volume",
    "histo_volume",
    "synthetic_histo"
  ]
}