{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "samseg-long",
  "description": "Longitudinal analysis tool using SAMSEG in FreeSurfer",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/samseg-long"
    },
    "output_dir": {
      "type": "string",
      "title": "Output directory",
      "description": "Output directory."
    },
    "input_files": {
      "type": "array",
      "items": {
        "type": "string",
        "x-styx-type": "file"
      },
      "title": "Input files",
      "description": "Input image files. All inputs must be a single modality."
    },
    "align_mc": {
      "type": "boolean",
      "default": false,
      "title": "Align using robust register (MC)",
      "description": "Align all inputs using robust register."
    },
    "align_no_mc": {
      "type": "boolean",
      "default": false,
      "title": "Do not align",
      "description": "Do not align inputs using robust register."
    },
    "threads": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Threads",
      "description": "Number of threads to use."
    },
    "save_posteriors": {
      "type": "boolean",
      "default": false,
      "title": "Save posteriors flag",
      "description": "Save posterior probabilities."
    },
    "force_update": {
      "type": "boolean",
      "default": false,
      "title": "Force update flag",
      "description": "Force update of outputs."
    }
  },
  "additionalProperties": false,
  "required": [
    "output_dir",
    "input_files",
    "@type"
  ]
}