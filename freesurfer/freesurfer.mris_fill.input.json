{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_fill",
  "description": "A tool that floodfills the interior of a surface and writes the results into a volume of specified resolution.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_fill"
    },
    "resolution": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Resolution",
      "description": "Set the resolution of the output volume (default = 0.250 mm/voxel)"
    },
    "conform": {
      "type": "boolean",
      "default": false,
      "title": "Conform Flag",
      "description": "Conform the volume before writing"
    },
    "input_surface": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Surface",
      "description": "Input surface file"
    },
    "output_volume": {
      "type": "string",
      "title": "Output Volume",
      "description": "Output volume file"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_surface",
    "output_volume"
  ]
}