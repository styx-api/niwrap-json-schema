{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_image2vtk",
  "description": "Convert image to VTK format with specified thresholds and smoothing parameters",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mris_image2vtk"
    },
    "input_filename": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input File",
      "description": "Input image file name"
    },
    "output_filename": {
      "type": "string",
      "title": "Output File",
      "description": "Output VTK file name"
    },
    "lower_threshold": {
      "type": "number",
      "title": "Lower Threshold",
      "description": "Lower threshold for image conversion"
    },
    "upper_threshold": {
      "type": "number",
      "title": "Upper Threshold",
      "description": "Upper threshold for image conversion"
    },
    "vtk_smoothing_iters": {
      "type": "number",
      "title": "VTK Smoothing Iterations",
      "description": "Number of VTK smoothing iterations"
    },
    "image_smoothing_size": {
      "type": "number",
      "title": "Image Smoothing Size",
      "description": "Image smoothing size"
    },
    "reduction_percent": {
      "type": "number",
      "title": "Reduction Percentage",
      "description": "Reduction percentage for the conversion"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_filename",
    "output_filename",
    "lower_threshold",
    "upper_threshold",
    "vtk_smoothing_iters",
    "image_smoothing_size",
    "reduction_percent",
    "@type"
  ]
}