{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_label2annot",
  "description": "Converts a set of surface labels to an annotation file.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mris_label2annot"
    },
    "subject": {
      "type": "string",
      "title": "Subject",
      "description": "FreeSurfer subject"
    },
    "hemi": {
      "type": "string",
      "title": "Hemisphere",
      "description": "Hemisphere (lh or rh)"
    },
    "ctabfile": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Colortable File",
      "description": "Colortable file (like FreeSurferColorLUT.txt)"
    },
    "annotname": {
      "type": "string",
      "title": "Annotation Name",
      "description": "Output annotation name"
    },
    "index_offset": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Index Offset",
      "description": "Add to label number to get CTAB index"
    },
    "label_files": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string",
            "x-styx-type": "file"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Label Files",
      "description": "Label file(s)"
    },
    "annot_path": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Annotation File Path",
      "description": "Full name/path of annotation file"
    },
    "labeldir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Label Directory",
      "description": "Directory with label files when not using --l"
    },
    "ldir_default": {
      "type": "boolean",
      "default": false,
      "title": "Use Default Label Directory",
      "description": "Use subject/labels as label directory"
    },
    "no_unknown": {
      "type": "boolean",
      "default": false,
      "title": "No Unknown Labels",
      "description": "Do not map unhit labels to index 0"
    },
    "thresh": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Threshold",
      "description": "Threshold label by stats field"
    },
    "maxstatwinner": {
      "type": "boolean",
      "default": false,
      "title": "Maximum Stat Winner",
      "description": "Keep label with highest 'stat' value"
    },
    "surf": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Surface Name",
      "description": "Surface name, default is orig"
    },
    "subjects_dir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subjects Directory",
      "description": "Subjects Directory"
    }
  },
  "additionalProperties": false,
  "required": [
    "subject",
    "hemi",
    "ctabfile",
    "annotname",
    "@type"
  ]
}