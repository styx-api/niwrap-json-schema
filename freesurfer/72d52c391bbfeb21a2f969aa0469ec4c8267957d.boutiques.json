{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Resolve symbolic links in a path.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "fsrealpath"
    },
    "path": {
      "type": "string",
      "title": "Path",
      "description": "The path to resolve"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help flag",
      "description": "Show this help message and exit"
    }
  },
  "additionalProperties": false,
  "required": [
    "path"
  ]
}