{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_make_face_parcellation",
  "description": "Generates a parcellation based on which icosahedral face each vertex maps to.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_make_face_parcellation"
    },
    "input_surface": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Surface",
      "description": "Input surface file (e.g. lh.sphere or lh.sphere.reg)"
    },
    "ico_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "ICO File",
      "description": "Icosahedron file (e.g. ic3.tri)"
    },
    "output_annot": {
      "type": "string",
      "title": "Output Annotation",
      "description": "Output annotation file (e.g. lh.ic3.annot)"
    },
    "colortable": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Color Table File",
      "description": "Color table file (e.g. colortable.txt)"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_surface",
    "ico_file",
    "output_annot"
  ]
}