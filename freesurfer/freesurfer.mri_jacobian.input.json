{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_jacobian",
  "description": "Compute the Jacobian of a morph with FreeSurfer",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mri_jacobian"
    },
    "morph_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "3D Morph File",
      "description": "3D morph input file"
    },
    "template_vol": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Template Volume File",
      "description": "Template volume file"
    },
    "output_vol": {
      "type": "string",
      "title": "Output Volume File",
      "description": "Output volume file"
    },
    "atlas_coord": {
      "type": "boolean",
      "default": false,
      "title": "Atlas Coordinate System Flag",
      "description": "Output is written in atlas coordinate system"
    },
    "write_area_vols": {
      "type": "boolean",
      "default": false,
      "title": "Write Area Volumes Flag",
      "description": "Writing area volumes"
    },
    "log_jacobian": {
      "type": "boolean",
      "default": false,
      "title": "Log Jacobian Flag",
      "description": "Taking log of Jacobian values before saving"
    },
    "smooth_sigma": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Smoothing Sigma",
      "description": "Smoothing Jacobian volume with sigma"
    },
    "zero_mean_log": {
      "type": "boolean",
      "default": false,
      "title": "Zero Mean Log Flag",
      "description": "Make log Jacobian zero mean"
    },
    "tm3d": {
      "type": "boolean",
      "default": false,
      "title": "TM3D Originated Flag",
      "description": "The input morph (m3z) originated from tm3d (mri_cvs_register)"
    },
    "help1": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag 1",
      "description": "Writing out help"
    },
    "help2": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag 2",
      "description": "Writing out help"
    },
    "dt": {
      "type": "boolean",
      "default": false,
      "title": "DT Flag",
      "description": "DT option (description not provided in help text)"
    },
    "debug_voxel": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 3,
          "maxItems": 3
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Debug Voxel Coordinates",
      "description": "Debug voxel with specified Gx, Gy, Gz coordinates"
    },
    "remove": {
      "type": "boolean",
      "default": false,
      "title": "Remove Flag",
      "description": "Remove option (description not provided in help text)"
    }
  },
  "additionalProperties": false,
  "required": [
    "morph_file",
    "template_vol",
    "output_vol",
    "@type"
  ]
}