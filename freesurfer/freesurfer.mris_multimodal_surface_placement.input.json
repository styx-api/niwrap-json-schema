{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_multimodal_surface_placement",
  "description": "FreeSurfer command for multimodal surface placement",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mris_multimodal_surface_placement"
    },
    "input_surface": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Surface",
      "description": "Input surface file"
    },
    "output_surface": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Output Surface",
      "description": "Output surface file"
    },
    "sphere_surface": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Sphere Surface",
      "description": "Sphere surface file"
    },
    "normals": {
      "type": "string",
      "title": "Normals VTK",
      "description": "Normals file in VTK format"
    },
    "values": {
      "type": "string",
      "title": "Values VTK",
      "description": "Values file in VTK format"
    },
    "debug_vertex": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Debug Vertex",
      "description": "Debug vertex index"
    },
    "step_size": {
      "type": "number",
      "title": "Step Size",
      "description": "Step size"
    },
    "number_of_steps": {
      "type": "number",
      "title": "Number of Steps",
      "description": "Number of steps"
    },
    "gradient_sigma": {
      "type": "number",
      "title": "Gradient Sigma",
      "description": "Gradient sigma value"
    },
    "aseg_aparc": {
      "type": "string",
      "x-styx-type": "file",
      "title": "ASEG APARC",
      "description": "ASEG APARC image file"
    },
    "white_surface": {
      "type": "string",
      "x-styx-type": "file",
      "title": "White Surface",
      "description": "White surface file"
    },
    "prob_of_csf": {
      "type": "number",
      "title": "Probability of CSF",
      "description": "Probability of CSF"
    },
    "t1_image": {
      "type": "string",
      "x-styx-type": "file",
      "title": "T1 Image",
      "description": "T1-weighted image file"
    },
    "t2_image": {
      "type": "string",
      "x-styx-type": "file",
      "title": "T2 Image",
      "description": "T2-weighted image file"
    },
    "flair_image": {
      "type": "string",
      "x-styx-type": "file",
      "title": "FLAIR Image",
      "description": "FLAIR image file"
    },
    "min_max": {
      "type": "boolean",
      "default": false,
      "title": "Min/Max Flag",
      "description": "Toggle between min or max operation"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_surface",
    "output_surface",
    "sphere_surface",
    "normals",
    "values",
    "step_size",
    "number_of_steps",
    "gradient_sigma",
    "aseg_aparc",
    "white_surface",
    "prob_of_csf",
    "t1_image",
    "t2_image",
    "flair_image",
    "@type"
  ]
}