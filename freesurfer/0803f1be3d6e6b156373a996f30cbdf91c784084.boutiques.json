{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Tool from FreeSurfer to calculate surface-to-volume distances",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "mris_surface_to_vol_distances"
    },
    "average_subject": {
      "type": "string",
      "title": "Average Subject",
      "description": "The average subject."
    },
    "hemisphere": {
      "type": "string",
      "title": "Hemisphere",
      "description": "Hemisphere identifier (e.g., lh or rh)."
    },
    "subjects": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Subjects",
      "description": "List of subjects for distance calculation."
    },
    "output_prefix": {
      "type": "string",
      "title": "Output Prefix",
      "description": "Prefix for output files."
    }
  },
  "additionalProperties": false,
  "required": [
    "average_subject",
    "hemisphere",
    "subjects",
    "output_prefix"
  ]
}