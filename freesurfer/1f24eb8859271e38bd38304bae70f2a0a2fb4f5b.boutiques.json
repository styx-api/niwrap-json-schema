{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "tkregister2 is a tool from FreeSurfer used for registration of MRI images.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.tkregister2"
    },
    "fixed_volume": {
      "type": "string",
      "title": "Fixed Volume",
      "description": "Fixed volume (e.g., anatomical image)"
    },
    "moving_volume": {
      "type": "string",
      "title": "Moving Volume",
      "description": "Moving volume (e.g., functional image)"
    },
    "reg_file": {
      "type": "string",
      "title": "Registration File",
      "description": "Registration file to be saved or loaded"
    },
    "noedit": {
      "type": "boolean",
      "default": false,
      "title": "No Edit Mode",
      "description": "Run in no-edit mode, useful for scripting."
    },
    "lta": {
      "type": "boolean",
      "default": false,
      "title": "LTA Format",
      "description": "Use LTA format for registration file."
    },
    "surf_reg": {
      "type": "boolean",
      "default": false,
      "title": "Surface Registration",
      "description": "Use surface registration."
    },
    "reg_only": {
      "type": "boolean",
      "default": false,
      "title": "Registration Only",
      "description": "Don't show GUI, just save registration."
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Display help information."
    }
  },
  "additionalProperties": false,
  "required": [
    "fixed_volume",
    "moving_volume",
    "reg_file"
  ]
}