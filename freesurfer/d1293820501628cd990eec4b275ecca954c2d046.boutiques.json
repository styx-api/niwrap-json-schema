{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Applies a bounding box to a label, copying only the label points within the specified box to the output.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.bblabel"
    },
    "labelfile": {
      "type": "string",
      "title": "Label file",
      "description": "Input label file."
    },
    "xmin": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "X minimum",
      "description": "Minimum x-coordinate for bounding box."
    },
    "xmax": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "X maximum",
      "description": "Maximum x-coordinate for bounding box."
    },
    "ymin": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Y minimum",
      "description": "Minimum y-coordinate for bounding box."
    },
    "ymax": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Y maximum",
      "description": "Maximum y-coordinate for bounding box."
    },
    "zmin": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Z minimum",
      "description": "Minimum z-coordinate for bounding box."
    },
    "zmax": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Z maximum",
      "description": "Maximum z-coordinate for bounding box."
    },
    "outlabelfile": {
      "type": "string",
      "title": "Output label file",
      "description": "Output label file."
    },
    "debug": {
      "type": "boolean",
      "default": false,
      "title": "Debug flag",
      "description": "Enable debug mode."
    },
    "umask": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Umask",
      "description": "Set Unix file permission mask."
    }
  },
  "additionalProperties": false,
  "required": [
    "labelfile",
    "outlabelfile"
  ]
}