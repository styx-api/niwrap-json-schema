{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Reposition a surface based on the given control points (in JSON format)",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_reposition_surface"
    },
    "surf": {
      "type": "string",
      "title": "Input surface",
      "description": "Input surface"
    },
    "volume": {
      "type": "string",
      "title": "Input volume",
      "description": "Input volume"
    },
    "points": {
      "type": "string",
      "title": "Input points",
      "description": "Input points"
    },
    "output": {
      "type": "string",
      "title": "Output surface",
      "description": "Output surface filename"
    },
    "size": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": 1,
      "title": "Size",
      "description": "Size parameter for repositioning. Default is 1."
    },
    "sigma": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": 2.0,
      "title": "Sigma",
      "description": "Sigma. Default is 2.0."
    },
    "iterations": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": 1,
      "title": "Iterations",
      "description": "Number of iterations. Default is 1."
    }
  },
  "additionalProperties": false,
  "required": [
    "surf",
    "volume",
    "points",
    "output"
  ]
}