{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_target_pos",
  "description": "Tool for setting target positions of a surface using input imaging data and other parameters.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_target_pos"
    },
    "input_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input volume",
      "description": "Input volume file"
    },
    "input_surface": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input surface",
      "description": "Input surface file"
    },
    "output_surface": {
      "type": "string",
      "title": "Output surface",
      "description": "Output surface file"
    },
    "adgws_file": {
      "type": "string",
      "title": "ADGWS file",
      "description": "ADGWS file"
    },
    "threshold_values": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Threshold values",
      "description": "Threshold values for inward and outward target positions"
    },
    "label": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Label",
      "description": "Label for processing"
    },
    "interpolation_method": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Interpolation method",
      "description": "Interpolation method name"
    },
    "debug_vertex": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Debug vertex",
      "description": "Vertex number for debugging"
    },
    "cbv_flag": {
      "type": "boolean",
      "default": false,
      "title": "CBV flag",
      "description": "CBV flag"
    },
    "debug_flag": {
      "type": "boolean",
      "default": false,
      "title": "Debug flag",
      "description": "Turn on debugging"
    },
    "check_options": {
      "type": "boolean",
      "default": false,
      "title": "Check options flag",
      "description": "Check options without running the program"
    },
    "help_flag": {
      "type": "boolean",
      "default": false,
      "title": "Help flag",
      "description": "Display help information"
    },
    "version_flag": {
      "type": "boolean",
      "default": false,
      "title": "Version flag",
      "description": "Display version information and exit"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_volume",
    "input_surface",
    "output_surface",
    "adgws_file"
  ]
}