{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Rigid registration tool for MRI volumes",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri_rigid_register"
    },
    "source_volume": {
      "type": "string",
      "title": "Source Volume",
      "description": "Source volume file for registration"
    },
    "target_volume": {
      "type": "string",
      "title": "Target Volume",
      "description": "Target volume file for registration"
    },
    "transform_output": {
      "type": "string",
      "title": "Transform Output",
      "description": "Output file name for the transform"
    }
  },
  "additionalProperties": false,
  "required": [
    "source_volume",
    "target_volume",
    "transform_output"
  ]
}