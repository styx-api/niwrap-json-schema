{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "This program will add a template into an average surface.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_label_mode"
    },
    "input_curv_file": {
      "type": "string",
      "title": "Input Curvature File",
      "description": "Input curvature file"
    },
    "hemi": {
      "type": "string",
      "title": "Hemisphere",
      "description": "Hemisphere"
    },
    "surface": {
      "type": "string",
      "title": "Surface",
      "description": "Surface name"
    },
    "subject": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Subject",
      "description": "Subject name(s)"
    },
    "output_curv_file": {
      "type": "string",
      "title": "Output Curvature File",
      "description": "Output curvature file"
    },
    "summary_statistics": {
      "type": "boolean",
      "default": false,
      "title": "Summary Statistics Flag",
      "description": "Generate summary statistics"
    },
    "statistics_cond": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Statistics Condition Number",
      "description": "Condition number for summary statistics"
    },
    "output_directory": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output Directory",
      "description": "Override the last subject as the output surface"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_curv_file",
    "hemi",
    "surface",
    "subject",
    "output_curv_file"
  ]
}