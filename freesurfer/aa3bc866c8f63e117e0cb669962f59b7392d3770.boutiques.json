{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Tool for relabeling hypointensities in FreeSurfer's aseg files.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "mri_relabel_hypointensities"
    },
    "input_aseg": {
      "type": "string",
      "title": "Input aseg",
      "description": "Input aseg file"
    },
    "surface_directory": {
      "type": "string",
      "title": "Surface directory",
      "description": "Directory containing surfaces"
    },
    "output_aseg": {
      "type": "string",
      "title": "Output aseg",
      "description": "Output aseg file"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_aseg",
    "surface_directory",
    "output_aseg"
  ]
}