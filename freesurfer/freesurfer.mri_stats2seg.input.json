{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_stats2seg",
  "description": "A command-line tool for converting MRI statistical maps to segmented volume.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mri_stats2seg"
    },
    "stat_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Stat File",
      "description": "Stat file in an MRI format."
    },
    "segmentation_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Segmentation Volume",
      "description": "Segmentation volume file."
    },
    "output_file": {
      "type": "string",
      "title": "Output File",
      "description": "Output file."
    },
    "debug": {
      "type": "boolean",
      "default": false,
      "title": "Debug Flag",
      "description": "Turn on debugging."
    },
    "check_opts": {
      "type": "boolean",
      "default": false,
      "title": "Check Options Flag",
      "description": "Don't run anything, just check options and exit."
    }
  },
  "additionalProperties": false,
  "required": [
    "stat_file",
    "segmentation_volume",
    "output_file",
    "@type"
  ]
}