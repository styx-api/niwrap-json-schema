{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A tool to nudge vertex positions on a surface using a volume.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_nudge"
    },
    "input_surface": {
      "type": "string",
      "title": "Input Surface",
      "description": "Input surface file for nudging"
    },
    "input_volume": {
      "type": "string",
      "title": "Input Volume",
      "description": "Input volume file"
    },
    "vertex": {
      "type": "integer",
      "title": "Vertex",
      "description": "Vertex to nudge"
    },
    "target_val": {
      "type": "number",
      "title": "Target Value",
      "description": "Target value for nudging"
    },
    "nbhd": {
      "type": "integer",
      "title": "Neighborhood",
      "description": "Neighborhood size for nudge operation"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_surface",
    "input_volume",
    "vertex",
    "target_val",
    "nbhd"
  ]
}