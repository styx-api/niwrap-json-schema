{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri-funcvits",
  "description": "Tool for functional volume to surface conversion in neuroimaging analysis",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri-funcvits"
    },
    "stem": {
      "type": "string",
      "title": "Template Stem",
      "description": "Template stem"
    },
    "outdir": {
      "type": "string",
      "title": "Output Directory",
      "description": "Output directory"
    },
    "reg": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Registration File",
      "description": "Registration file"
    },
    "paintsurf": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": "white",
      "title": "Paint Surface",
      "description": "Surface upon which to paint"
    },
    "sphere": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": "sphere",
      "title": "Spherical Surface",
      "description": "Spherical surface"
    },
    "icosize": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": 10242,
      "title": "Icosahedron Size",
      "description": "Icosahedron size"
    },
    "hemi": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Hemifields",
      "description": "Hemifield(s)"
    },
    "svitdir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "SVIT Directory",
      "description": "SVIT directory"
    },
    "icodir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": "/usr/local/freesurfer/lib/bem",
      "title": "ICO Directory",
      "description": "ICO directory"
    },
    "umask": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Umask",
      "description": "New umask"
    },
    "mail": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Mail",
      "description": "User email for notifications"
    },
    "noforce": {
      "type": "boolean",
      "default": false,
      "title": "No Force Flag",
      "description": "Do not create if output already exists"
    }
  },
  "additionalProperties": false,
  "required": [
    "stem",
    "outdir"
  ]
}