{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "List subject IDs in SUBJECT_DIR",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "listsubj"
    },
    "subject_dir": {
      "type": "string",
      "title": "Subject Directory",
      "description": "Directory where subjects are stored"
    },
    "cross": {
      "type": "boolean",
      "default": false,
      "title": "Cross-sectional stream",
      "description": "Only cross-sectional stream"
    },
    "base": {
      "type": "boolean",
      "default": false,
      "title": "Base stream",
      "description": "Only base stream"
    },
    "long": {
      "type": "boolean",
      "default": false,
      "title": "Longitudinal stream",
      "description": "Only longitudinal stream"
    },
    "done": {
      "type": "boolean",
      "default": false,
      "title": "Completed scripts",
      "description": "Only subject IDs with scripts/recon-all.done"
    },
    "error": {
      "type": "boolean",
      "default": false,
      "title": "Error in scripts",
      "description": "Only subject IDs with scripts/recon-all.error"
    },
    "running": {
      "type": "boolean",
      "default": false,
      "title": "Running scripts",
      "description": "Only subject IDs with scripts/IsRunning.?h"
    },
    "full_path": {
      "type": "boolean",
      "default": false,
      "title": "Full Path",
      "description": "Prepend full absolute path"
    },
    "count": {
      "type": "boolean",
      "default": false,
      "title": "Count Subjects",
      "description": "Print number of subjects found"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help",
      "description": "Show this help text"
    }
  },
  "additionalProperties": false,
  "required": [
    "subject_dir"
  ]
}