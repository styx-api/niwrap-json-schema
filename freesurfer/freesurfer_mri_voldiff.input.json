{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_voldiff",
  "description": "Determines whether two volumes are different in terms of pixel data, dimension, precision, resolution, or geometry.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mri_voldiff"
    },
    "volume1": {
      "type": "string",
      "x-styx-type": "file",
      "title": "First Volume",
      "description": "First input volume"
    },
    "volume2": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Second Volume",
      "description": "Second input volume"
    },
    "vox2ras_thresh": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Vox2RAS Threshold",
      "description": "Vox2RAS threshold value"
    },
    "pix_thresh": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Pixel Threshold",
      "description": "Pixel threshold value"
    },
    "allow_precision": {
      "type": "boolean",
      "default": false,
      "title": "Allow Precision Differences",
      "description": "Allow differences in precision"
    },
    "allow_resolution": {
      "type": "boolean",
      "default": false,
      "title": "Allow Resolution Differences",
      "description": "Allow differences in resolution"
    },
    "allow_vox2ras": {
      "type": "boolean",
      "default": false,
      "title": "Allow Vox2RAS Differences",
      "description": "Allow differences in Vox2RAS"
    },
    "debug": {
      "type": "boolean",
      "default": false,
      "title": "Debug Flag",
      "description": "Turn on debugging"
    },
    "checkopts": {
      "type": "boolean",
      "default": false,
      "title": "Check Options Flag",
      "description": "Don't run anything, just check options and exit"
    }
  },
  "additionalProperties": false,
  "required": [
    "volume1",
    "volume2"
  ]
}