{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_register_label_map",
  "description": "Tool for registering label maps in Freesurfer.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mris_register_label_map"
    },
    "subjects_list": {
      "type": "string",
      "title": "Subjects list",
      "description": "List of training subjects"
    },
    "target_subject": {
      "type": "string",
      "title": "Target subject",
      "description": "Name of target subject"
    },
    "prior": {
      "type": "string",
      "title": "Prior",
      "description": "Name of prior surface overlay"
    },
    "label": {
      "type": "string",
      "title": "Label",
      "description": "Name of label for each subject"
    },
    "template_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Template volume",
      "description": "Template volume file"
    },
    "debug": {
      "type": "boolean",
      "default": false,
      "title": "Debug flag",
      "description": "Turn on debugging"
    },
    "check_opts": {
      "type": "boolean",
      "default": false,
      "title": "Check options flag",
      "description": "Don't run anything, just check options and exit"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help flag",
      "description": "Print out information on how to use this program"
    },
    "subjects_dir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subjects directory",
      "description": "SUBJECTS_DIR"
    },
    "version": {
      "type": "boolean",
      "default": false,
      "title": "Version flag",
      "description": "Print out version and exit"
    },
    "vno": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Vertex number",
      "description": "Debug this vertex"
    }
  },
  "additionalProperties": false,
  "required": [
    "subjects_list",
    "target_subject",
    "prior",
    "label",
    "template_volume"
  ]
}