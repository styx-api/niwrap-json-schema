{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_and",
  "description": "Performs a logical voxel-wise AND on a series of volumes",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mri_and"
    },
    "input_files": {
      "type": "array",
      "items": {
        "type": "string",
        "x-styx-type": "file"
      },
      "title": "Input files",
      "description": "Input volume files"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_files",
    "@type"
  ]
}