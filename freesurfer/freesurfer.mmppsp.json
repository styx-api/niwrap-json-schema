{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "MultiModal Posterior Probability Surface Placement",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mmppsp"
    },
    "samseg_dir": {
      "type": "string",
      "title": "Samseg Directory",
      "description": "Directory containing Samseg output"
    },
    "outdir": {
      "type": "string",
      "title": "Output Directory",
      "description": "Output directory for the results"
    },
    "lh_flag": {
      "type": "boolean",
      "default": false,
      "title": "Left Hemisphere Flag",
      "description": "Process left hemisphere"
    },
    "rh_flag": {
      "type": "boolean",
      "default": false,
      "title": "Right Hemisphere Flag",
      "description": "Process right hemisphere"
    },
    "likelihood_flag": {
      "type": "boolean",
      "default": false,
      "title": "Likelihood Flag",
      "description": "Use likelihood for surface placement"
    },
    "posterior_flag": {
      "type": "boolean",
      "default": false,
      "title": "Posterior Flag",
      "description": "Use posteriors instead of likelihood for surface placement"
    },
    "force_update_flag": {
      "type": "boolean",
      "default": false,
      "title": "Force Update Flag",
      "description": "Force update the surface placement"
    },
    "threads": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Threads",
      "description": "Number of threads to use"
    },
    "no_initsphreg_flag": {
      "type": "boolean",
      "default": false,
      "title": "No Init Spherical Registration Flag",
      "description": "Do not use talairach.lta to initialize rotation"
    },
    "stop_after": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Stop After Step",
      "description": "Stop the processing after a specified step"
    },
    "wexpanddist": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "White Expansion Distance",
      "description": "Distance to expand white surface to initialize pial (in mm)"
    }
  },
  "additionalProperties": false,
  "required": [
    "samseg_dir",
    "outdir"
  ]
}