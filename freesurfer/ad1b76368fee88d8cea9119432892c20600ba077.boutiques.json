{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Computes the center of mass for individual structures in a segmentation.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "mri_segcentroids"
    },
    "input_segmentation": {
      "type": "string",
      "title": "Input Segmentation",
      "description": "Input segmentation volume file."
    },
    "output_file": {
      "type": "string",
      "title": "Output Text File",
      "description": "Output text file for centroids."
    },
    "pointset_flag": {
      "type": "boolean",
      "default": false,
      "title": "Pointset Flag",
      "description": "Save centroids as a Freeview pointset (json)."
    },
    "registration_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Linear Registration File",
      "description": "Apply a linear registration (lta)."
    },
    "weights_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Voxel Weights File",
      "description": "Compute weighted centroids with provided voxel weights."
    },
    "lut_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Label Lookup Table File",
      "description": "Specify label lookup table."
    },
    "default_lut_flag": {
      "type": "boolean",
      "default": false,
      "title": "Default LUT Flag",
      "description": "Use default FreeSurferColorLUT.txt for lookup table."
    }
  },
  "additionalProperties": false,
  "required": [
    "input_segmentation",
    "output_file"
  ]
}