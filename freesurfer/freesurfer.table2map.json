{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A tool to map data from a table onto an output map, optionally using segmentation or parcellation files.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.table2map"
    },
    "input_table": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Table",
      "description": "Input table."
    },
    "output_map": {
      "type": "string",
      "title": "Output Map",
      "description": "Output map."
    },
    "segmentation": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Segmentation File",
      "description": "Segmentation to map to."
    },
    "parcellation": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Parcellation File",
      "description": "Parcellation to map to."
    },
    "columns": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Table Columns",
      "description": "Table columns to map. All are included by default."
    },
    "lookup_table": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Lookup Table File",
      "description": "Alternative lookup table."
    }
  },
  "additionalProperties": false,
  "required": [
    "input_table",
    "output_map"
  ]
}