{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "AnatomiCuts tool for DTI fibers segmentation",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "dmri_AnatomiCuts"
    },
    "segmentation_file": {
      "type": "string",
      "title": "Segmentation File",
      "description": "Segmentation file"
    },
    "fiber_file": {
      "type": "string",
      "title": "Fiber File",
      "description": "VTK fiber file"
    },
    "clusters": {
      "type": "number",
      "title": "Clusters",
      "description": "Number of clusters"
    },
    "points": {
      "type": "number",
      "title": "Points",
      "description": "Number of points"
    },
    "fibers_eigen": {
      "type": "number",
      "title": "Fibers Eigen",
      "description": "Number of fibers for eigen decomposition"
    },
    "output_folder": {
      "type": "string",
      "title": "Output Folder",
      "description": "Output folder"
    },
    "direction_flag": {
      "type": "string",
      "title": "Direction Flag",
      "description": "Direction flag: 's' for straight, 'd' for diagonal, 'a' for all, 'o' for none"
    }
  },
  "additionalProperties": false,
  "required": [
    "segmentation_file",
    "fiber_file",
    "clusters",
    "points",
    "fibers_eigen",
    "output_folder",
    "direction_flag"
  ]
}