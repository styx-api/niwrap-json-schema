{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A tool used in FreeSurfer to process labeling and patch files.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.label2flat"
    },
    "subject_name": {
      "type": "string",
      "title": "Subject Name",
      "description": "The name of the subject."
    },
    "label_file": {
      "type": "string",
      "title": "Label File",
      "description": "The label file path."
    },
    "patch_file": {
      "type": "string",
      "title": "Patch File",
      "description": "The patch file path."
    },
    "output_file": {
      "type": "string",
      "title": "Output File",
      "description": "The output file path."
    }
  },
  "additionalProperties": false,
  "required": [
    "subject_name",
    "label_file",
    "patch_file",
    "output_file"
  ]
}