{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "tksurferfv",
  "description": "A script that runs freeview with arguments similar to tksurfer.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/tksurferfv"
    },
    "subject": {
      "type": "string",
      "title": "Subject",
      "description": "Subject identifier."
    },
    "hemi": {
      "type": "string",
      "title": "Hemisphere",
      "description": "Hemisphere (e.g., lh or rh)."
    },
    "surface": {
      "type": "string",
      "title": "Surface",
      "description": "Surface type."
    },
    "tksurfer": {
      "type": "boolean",
      "default": false,
      "title": "Tksurfer Flag",
      "description": "Use tksurfer instead of freeview."
    },
    "all_surfaces": {
      "type": "boolean",
      "default": false,
      "title": "All Surfaces Flag",
      "description": "Load white, pial, and inflated surfaces."
    },
    "vgl": {
      "type": "boolean",
      "default": false,
      "title": "VGL Flag",
      "description": "Run freeview with /usr/pubsw/bin/vglrun."
    },
    "no_vgl": {
      "type": "boolean",
      "default": false,
      "title": "No VGL Flag",
      "description": "Do not run freeview with /usr/pubsw/bin/vglrun."
    },
    "no_outline": {
      "type": "boolean",
      "default": false,
      "title": "No Outline Flag",
      "description": "Do not show annotations as outlines."
    },
    "neuro_orientation": {
      "type": "boolean",
      "default": false,
      "title": "Neuro Orientation Flag",
      "description": "Use neurological orientation instead of radiological."
    },
    "rotate_around_cursor": {
      "type": "boolean",
      "default": false,
      "title": "Rotate Around Cursor Flag",
      "description": "Rotate around cursor in 3D view."
    },
    "heat_scale": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Heat Scale",
      "description": "Overlay heat scale (options: linear, linearopaque, piecewise, min_to_max)."
    }
  },
  "additionalProperties": false,
  "required": [
    "subject",
    "hemi",
    "surface"
  ]
}