{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_distance_transform",
  "description": "Tool to compute distance transforms on MRI volumes",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mri_distance_transform"
    },
    "input_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Volume",
      "description": "Input volume file"
    },
    "label": {
      "type": "integer",
      "title": "Label",
      "description": "Label value for distance transform calculation"
    },
    "max_distance": {
      "type": "integer",
      "title": "Max Distance",
      "description": "Maximum distance for the transform"
    },
    "mode": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Mode",
      "description": "Mode of the distance transform: 1 = outside, 2 = inside, 3 = both, 4 = both unsigned"
    },
    "output_volume": {
      "type": "string",
      "title": "Output Volume",
      "description": "Output volume file"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_volume",
    "label",
    "max_distance",
    "output_volume",
    "@type"
  ]
}