{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_mcsim",
  "description": "Monte Carlo simulation tool for surface-based multiple comparisons",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mri_mcsim"
    },
    "top_output_dir": {
      "type": "string",
      "title": "Top Output Directory",
      "description": "Top output directory"
    },
    "base_name": {
      "type": "string",
      "title": "Base Name",
      "description": "Base name for CSD files"
    },
    "surface": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 2,
      "maxItems": 2,
      "title": "Surface Subject and Hemisphere",
      "description": "Subject name and hemisphere for the surface (e.g., subjectname lh)"
    },
    "num_repetitions": {
      "type": "number",
      "title": "Number of Repetitions",
      "description": "Number of repetitions for the simulation"
    },
    "fwhm_values": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "FWHM Values",
      "description": "Full Width at Half Maximum values for smoothing"
    },
    "fwhm_max": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "FWHM Max",
      "description": "Maximum FWHM for simulation (default 30)"
    },
    "avg_vertex_area": {
      "type": "boolean",
      "default": false,
      "title": "Average Vertex Area Flag",
      "description": "Report cluster area based on average vertex area"
    },
    "random_seed": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Random Seed",
      "description": "Random seed value (default is based on Time of Day)"
    },
    "label_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Label File",
      "description": "Label file for masking (default is ?h.cortex.label)"
    },
    "mask_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Mask File",
      "description": "Mask file instead of label"
    },
    "no_label": {
      "type": "boolean",
      "default": false,
      "title": "No Label Flag",
      "description": "Do not use a label to mask"
    },
    "no_save_mask": {
      "type": "boolean",
      "default": false,
      "title": "No Save Mask Flag",
      "description": "Do not save mask to output"
    },
    "surface_name": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Surface Name",
      "description": "Surface name (default is white)"
    },
    "log_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Log File",
      "description": "Log file for the output"
    },
    "done_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Done File",
      "description": "Done file to create when finished"
    },
    "stop_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Stop File",
      "description": "Stop file (default is ourdir/mri_mcsim.stop)"
    },
    "save_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Save File",
      "description": "Save file (default is ourdir/mri_mcsim.save)"
    },
    "save_iter": {
      "type": "boolean",
      "default": false,
      "title": "Save Iterations Flag",
      "description": "Save output after each iteration"
    },
    "subjects_dir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subjects Directory",
      "description": "Subjects directory"
    },
    "debug": {
      "type": "boolean",
      "default": false,
      "title": "Debug Flag",
      "description": "Turn on debugging"
    },
    "check_opts": {
      "type": "boolean",
      "default": false,
      "title": "Check Options Flag",
      "description": "Check options do not run"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Display help message"
    },
    "version": {
      "type": "boolean",
      "default": false,
      "title": "Version Flag",
      "description": "Display version and exit"
    }
  },
  "additionalProperties": false,
  "required": [
    "top_output_dir",
    "base_name",
    "surface",
    "num_repetitions"
  ]
}