{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "This program registers a surface to an average surface template.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_register"
    },
    "surf_fname": {
      "type": "string",
      "title": "Surface file name",
      "description": "Surface to register, often {hemi}.sphere"
    },
    "target": {
      "type": "string",
      "title": "Target",
      "description": "The data to register to. A template file for average surface or a single-subject's surface."
    },
    "out_fname": {
      "type": "string",
      "title": "Output file name",
      "description": "Output surface file to capture registration. Example: {hemi}.sphere.reg"
    },
    "one_flag": {
      "type": "boolean",
      "default": false,
      "title": "Single subject target",
      "description": "Treats target argument as a single subject's surface not a template file."
    },
    "addframe": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Add frame values",
      "description": "Add field with location in the atlas."
    },
    "annot_name": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Annotation",
      "description": "Zeroes medial wall using annotation."
    },
    "curvature_fname": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Curvature file",
      "description": "Curvature file name."
    },
    "canonical_name": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Canonical name",
      "description": "Use surface for canonical properties."
    },
    "inflated": {
      "type": "boolean",
      "default": false,
      "title": "Inflated initial alignment flag",
      "description": "Use inflated surface for initial alignment."
    },
    "inflated_name": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Inflated surface name",
      "description": "Uses this name for inflated surface for initial alignment."
    },
    "label_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Label file",
      "description": "Specify a manual label to align with atlas label."
    },
    "orig_name": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Original name",
      "description": "Use this for original properties."
    },
    "overlay_values": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Overlay values",
      "description": "Adds a variable to the atlas from overlay file, smoothing it specified number of times."
    },
    "overlay_dir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Overlay directory",
      "description": "Changes overlay path."
    },
    "starting_reg_fname": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Starting registration file",
      "description": "Start registration with coordinates from file."
    },
    "jacobian_fname": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Jacobian output file",
      "description": "Write out jacobian of mapping to the specified file."
    },
    "n_averages": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of averages",
      "description": "Set the number of averages."
    },
    "adaptive": {
      "type": "boolean",
      "default": false,
      "title": "Adaptive flag",
      "description": "Use adaptive time step integration."
    },
    "l_area": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Area",
      "description": "Sets l_area parameter."
    },
    "l_corr": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Correlation",
      "description": "Sets the l_corr parameter."
    },
    "curvature_flag": {
      "type": "boolean",
      "default": false,
      "title": "Curvature flag",
      "description": "Use smoothwm curvature for final alignment."
    },
    "l_dist": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Distance term",
      "description": "Specify distance term."
    },
    "dt_value": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Time step",
      "description": "Sets momentum with specified dt."
    },
    "dt_decrease": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Dt decrease",
      "description": "Set decrease for dt."
    },
    "dt_increase": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Dt increase",
      "description": "Set increase for dt."
    },
    "l_external": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "External parameter",
      "description": "Sets l_external parameter."
    },
    "error_ratio": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Error ratio",
      "description": "Sets error ratio."
    },
    "initial_flag": {
      "type": "boolean",
      "default": false,
      "title": "Initial flag",
      "description": "Use initial registration."
    },
    "l_laplacian": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Laplacian",
      "description": "Sets l_laplacian."
    },
    "line_min": {
      "type": "boolean",
      "default": false,
      "title": "Line minimization flag",
      "description": "Integrate using line minimization."
    },
    "momentum": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Momentum",
      "description": "Chooses integration_type = INTEGRATE_MOMENTUM and sets momentum value."
    },
    "max_degrees": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Max degrees",
      "description": "Set max angle for search."
    },
    "median": {
      "type": "boolean",
      "default": false,
      "title": "Median normalization flag",
      "description": "Uses median normalization (instead of mean)."
    },
    "min_degrees": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Min degrees",
      "description": "Set min angle for search."
    },
    "multi_scale": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Multi scale",
      "description": "Use multi_scale scales for morphing."
    },
    "n_iterations": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of iterations",
      "description": "Sets number of iterations."
    },
    "n_angles": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of angles per scale",
      "description": "Set number of angles/search per scale."
    },
    "neighborhood_size": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Neighborhood size",
      "description": "Use neighborhood size specified."
    },
    "l_nlarea": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "NL Area",
      "description": "Sets l_nlarea parameter."
    },
    "no_curv": {
      "type": "boolean",
      "default": false,
      "title": "No curvature flag",
      "description": "Do not use smoothwm curvature for final alignment."
    },
    "no_normalization": {
      "type": "boolean",
      "default": false,
      "title": "No normalization flag",
      "description": "Disables normalization."
    },
    "no_rotation": {
      "type": "boolean",
      "default": false,
      "title": "No rotation flag",
      "description": "Disables initial rigid alignment."
    },
    "no_sulc": {
      "type": "boolean",
      "default": false,
      "title": "No sulc alignment flag",
      "description": "Disables initial sulc alignment."
    },
    "num_surfaces": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of surfaces",
      "description": "Use specified number of surfaces/curvatures for alignment."
    },
    "overlay_corr": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Overlay correlation",
      "description": "Sets overlay correlation coefficient."
    },
    "max_passes": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Max passes",
      "description": "Limit unfolding to specified passes."
    },
    "l_parea": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "P Area",
      "description": "Sets l_parea parameter."
    },
    "remove_negative": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Remove negative",
      "description": "Remove negative triangles with iterative smoothing if non-zero."
    },
    "reverse": {
      "type": "boolean",
      "default": false,
      "title": "Reverse flag",
      "description": "Mirror image reverse brain before morphing."
    },
    "rotate_values": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Rotation values",
      "description": "Rotates brain by specified angles."
    },
    "registration_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Registration file",
      "description": "Extract rotational components from registration file."
    },
    "scale": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Scale",
      "description": "Scales distances by the specified value."
    },
    "search_flag": {
      "type": "boolean",
      "default": false,
      "title": "Search flag",
      "description": "Integrate with binary search line minimization."
    },
    "spring_value": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Spring",
      "description": "Sets the spring parameter."
    },
    "tolerance": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Tolerance",
      "description": "Specifies tolerance."
    },
    "topology_flag": {
      "type": "boolean",
      "default": false,
      "title": "Topology flag",
      "description": "Preserves the topology of positive area triangles."
    },
    "vnum": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Vnum distance values",
      "description": "Set neighborhood parameters."
    },
    "vsmooth": {
      "type": "boolean",
      "default": false,
      "title": "Smoothness flag",
      "description": "Use space/time varying smoothness weighting."
    },
    "write_iterations": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Write iterations",
      "description": "Set number of write iterations."
    },
    "gdiag_no": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Vertex number",
      "description": "Supplies a vertex number for diagnostics."
    },
    "vector_flag": {
      "type": "boolean",
      "default": false,
      "title": "Vector flag",
      "description": "Prints help for Multiframe mode, listing field names and numbers."
    },
    "threads": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "OMP threads",
      "description": "Set number of OMP threads."
    },
    "version_flag": {
      "type": "boolean",
      "default": false,
      "title": "Version flag",
      "description": "Print the version number."
    }
  },
  "additionalProperties": false,
  "required": [
    "surf_fname",
    "target",
    "out_fname"
  ]
}