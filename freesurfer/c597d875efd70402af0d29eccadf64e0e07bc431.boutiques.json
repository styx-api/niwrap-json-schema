{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Command-line tool to quantify thalamic nuclei using FreeSurfer.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.quantifyThalamicNuclei.sh"
    },
    "output_file": {
      "type": "string",
      "title": "Output File",
      "description": "Output file for the results."
    },
    "analysis_id": {
      "type": "string",
      "title": "Analysis ID",
      "description": "Analysis ID for specificity."
    },
    "subjects_directory": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subjects Directory",
      "description": "Directory containing subject data."
    }
  },
  "additionalProperties": false,
  "required": [
    "output_file",
    "analysis_id"
  ]
}