{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_exvivo_norm",
  "description": "MRI Ex Vivo Normalization Tool",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mri_exvivo_norm"
    },
    "input_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Volume",
      "description": "Input MRI volume"
    },
    "output_volume": {
      "type": "string",
      "title": "Output Volume",
      "description": "Output MRI volume"
    },
    "hemi": {
      "type": "string",
      "title": "Hemisphere",
      "description": "Hemi to process"
    },
    "prediction_volume": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Prediction Volume",
      "description": "Write prediction volume"
    },
    "normalized_volume": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Normalized Volume",
      "description": "Write normalized volume"
    },
    "freeview": {
      "type": "boolean",
      "default": false,
      "title": "Freeview Flag",
      "description": "Bring up freeview to show results"
    },
    "normalize_output_mean": {
      "type": "boolean",
      "default": false,
      "title": "Normalize Output Mean Flag",
      "description": "Normalize output mean to match input mean"
    },
    "write_normalization_rounds": {
      "type": "boolean",
      "default": false,
      "title": "Write Normalization Rounds Flag",
      "description": "Write normalization results after each round"
    },
    "upper_threshold": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Upper Threshold",
      "description": "Specify threshold to erase above"
    },
    "bias_field_sigma": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Bias Field Sigma",
      "description": "Sigma to smooth bias field"
    },
    "normalization_rounds": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Normalization Rounds",
      "description": "Number of rounds of iterative normalization to apply"
    },
    "multichannel": {
      "type": "boolean",
      "default": false,
      "title": "Multichannel Flag",
      "description": "Specify that data has multiple channels"
    },
    "model_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Model File",
      "description": "Use alternative model file"
    },
    "weights_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Weights File",
      "description": "Alternative weights filename"
    },
    "gpu_number": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "GPU Number",
      "description": "GPU number - if not supplied, CPU is used"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_volume",
    "output_volume",
    "hemi"
  ]
}