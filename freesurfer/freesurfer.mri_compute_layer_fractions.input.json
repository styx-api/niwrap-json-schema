{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_compute_layer_fractions",
  "description": "This program computes volumetric partial volume fractions from laminar surfaces using FreeSurfer.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri_compute_layer_fractions"
    },
    "reg_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Registration file",
      "description": "Input registration file"
    },
    "input_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input volume",
      "description": "Input volume file"
    },
    "output_stem": {
      "type": "string",
      "title": "Output stem",
      "description": "Output stem for generated files"
    },
    "output_directory": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subjects Directory",
      "description": "Output directory specified by SUBJECTS_DIR"
    },
    "aseg_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "ASEG file",
      "description": "Input ASEG file for synthesis"
    },
    "target_volume": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Target volume",
      "description": "Target volume for analysis"
    },
    "hemi_flag": {
      "type": "boolean",
      "default": false,
      "title": "Hemi flag",
      "description": "Specify hemisphere processing"
    },
    "fs_names_flag": {
      "type": "boolean",
      "default": false,
      "title": "FS names flag",
      "description": "Flag to use FreeSurfer names"
    },
    "subject_id": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subject ID",
      "description": "Subject ID for processing"
    },
    "n_layers": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of layers",
      "description": "Number of layers for volume fraction computation"
    },
    "synth_flag": {
      "type": "boolean",
      "default": false,
      "title": "Synthesis flag",
      "description": "Flag to combine with the ASEG for a single segmentation volume"
    },
    "thickness": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Cortical thickness fraction",
      "description": "Specify cortical thickness fraction"
    },
    "random_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Random file",
      "description": "Specify random volume file"
    },
    "identity_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Identity file",
      "description": "Specify identity file"
    }
  },
  "additionalProperties": false,
  "required": [
    "reg_file",
    "input_volume",
    "output_stem"
  ]
}