{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Tool to convert surface curvature data to an image using FreeSurfer.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "mris_curvature2image"
    },
    "surface": {
      "type": "string",
      "title": "Surface File",
      "description": "Input surface file."
    },
    "mask": {
      "type": "string",
      "title": "Mask File",
      "description": "Input mask file."
    },
    "output_overlay": {
      "type": "string",
      "title": "Output Overlay Image",
      "description": "Output overlay image file."
    },
    "output_distance": {
      "type": "string",
      "title": "Output Distance Image",
      "description": "Output distance image file."
    },
    "overlay": {
      "type": "string",
      "title": "Overlay File",
      "description": "Overlay file."
    },
    "label": {
      "type": "string",
      "title": "Label File",
      "description": "Label file."
    },
    "invert_flag": {
      "type": "boolean",
      "default": false,
      "title": "Invert Flag",
      "description": "Flag to invert the curvature values."
    },
    "radius": {
      "type": "number",
      "title": "Radius",
      "description": "Radius value for processing."
    }
  },
  "additionalProperties": false,
  "required": [
    "surface",
    "mask",
    "output_overlay",
    "output_distance",
    "overlay",
    "label",
    "radius"
  ]
}