{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Replaces the stat values in a label file with the single stat value supplied on the command-line.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "setlabelstat"
    },
    "inlabelfile": {
      "type": "string",
      "title": "Input Label File",
      "description": "Input label file."
    },
    "outlabelfile": {
      "type": "string",
      "title": "Output Label File",
      "description": "Output label file."
    },
    "statval": {
      "type": "number",
      "title": "Stat Value",
      "description": "Stat value to replace in the label file."
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Displays help information."
    }
  },
  "additionalProperties": false,
  "required": [
    "inlabelfile",
    "outlabelfile",
    "statval"
  ]
}