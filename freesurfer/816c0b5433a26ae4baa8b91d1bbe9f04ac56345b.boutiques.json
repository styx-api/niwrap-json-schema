{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Tool for removing neck from MRI volumes.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri_remove_neck"
    },
    "input_volume": {
      "type": "string",
      "title": "Input Volume",
      "description": "Input MRI volume."
    },
    "transform": {
      "type": "string",
      "title": "Transform",
      "description": "Transformation matrix to register the volume."
    },
    "gca": {
      "type": "string",
      "title": "GCA",
      "description": "GCA file needed for processing."
    },
    "output_volume": {
      "type": "string",
      "title": "Output Volume",
      "description": "Output MRI volume with the neck removed."
    }
  },
  "additionalProperties": false,
  "required": [
    "input_volume",
    "transform",
    "gca",
    "output_volume"
  ]
}