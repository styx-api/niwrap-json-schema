{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_hausdorff_dist",
  "description": "This program computes the Hausdorff distance between two labels on a surface.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mris_hausdorff_dist"
    },
    "surface": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Surface file",
      "description": "Surface file on which the labels exist"
    },
    "label1": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Label 1 file",
      "description": "First label file"
    },
    "label2": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Label 2 file",
      "description": "Second label file"
    },
    "annot_name": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Annotation name",
      "description": "Compute pairwise Hausdorff Distance (HD) between all annotations with the given name"
    }
  },
  "additionalProperties": false,
  "required": [
    "surface",
    "label1",
    "label2"
  ]
}