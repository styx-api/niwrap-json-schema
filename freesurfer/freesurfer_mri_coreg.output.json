{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_coreg",
  "description": "mri_coreg performs a linear registration between two volumes using the method compatible with spm_coreg.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "root": {
      "type": "string",
      "title": "Root",
      "description": "Output root directory"
    },
    "out_registration": {
      "type": "string",
      "title": "Output Registration",
      "description": "Output registration (LTA format)"
    },
    "out_params": {
      "type": "string",
      "title": "Output Parameters",
      "description": "File with output parameters"
    },
    "out_cost": {
      "type": "string",
      "title": "Output Cost",
      "description": "Final cost value file"
    },
    "saved_init_reg": {
      "type": "string",
      "title": "Saved Initial Registration",
      "description": "Saved initial registration"
    },
    "saved_init_reg_only": {
      "type": "string",
      "title": "Saved Initial Registration Only",
      "description": "Saved initial registration (exit after save)"
    },
    "movout_volume": {
      "type": "string",
      "title": "Preprocessed Mov Volume",
      "description": "Preprocessed moving volume"
    },
    "mov_idither_volume": {
      "type": "string",
      "title": "Intensity Dither Volume",
      "description": "Moving intensity dither volume"
    }
  }
}