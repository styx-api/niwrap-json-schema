{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "thickdiffmap",
  "description": "Compute and analyze cortical thickness difference maps",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/thickdiffmap"
    },
    "subjscan1": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Subject Scan 1",
      "description": "First scan of a subject"
    },
    "subjscan2": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Subject Scan 2",
      "description": "Second (later) scan of the same subject"
    },
    "commonsubj": {
      "type": "string",
      "title": "Common Subject",
      "description": "Subject to use as the common template"
    },
    "hemi": {
      "type": "string",
      "title": "Hemisphere",
      "description": "Hemisphere to process"
    },
    "steps": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Processing Steps",
      "description": "Stages of processing"
    }
  },
  "additionalProperties": false,
  "required": [
    "subjscan1",
    "subjscan2",
    "commonsubj",
    "hemi"
  ]
}