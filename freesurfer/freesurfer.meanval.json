{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Tool to calculate the mean value of an image within a mask",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.meanval"
    },
    "input_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input file",
      "description": "Input volume file"
    },
    "mask_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Mask file",
      "description": "Mask file"
    },
    "output_file": {
      "type": "string",
      "title": "Output file",
      "description": "Output file where mean value will be stored"
    },
    "avgwf_flag": {
      "type": "boolean",
      "default": false,
      "title": "Average waveform flag",
      "description": "Flag to calculate the average waveform"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_file",
    "mask_file",
    "output_file"
  ]
}