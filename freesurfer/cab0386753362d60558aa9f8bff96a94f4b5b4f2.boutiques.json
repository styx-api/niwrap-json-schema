{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A tool for calculating motion measures from DWI scans.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.dmri_motion"
    },
    "outfile": {
      "type": "string",
      "title": "Output File",
      "description": "Output text file of motion measures"
    },
    "outf": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output Frame-by-Frame File",
      "description": "Output text file of frame-by-frame motion measures"
    },
    "mat": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Transformation Matrix File",
      "description": "Input text file of volume-to-baseline affine transformations"
    },
    "dwi": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "DWI Scans",
      "description": "Input DWI scan(s), unprocessed"
    },
    "bval": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "B-Value Tables",
      "description": "Input b-value table(s), one per scan"
    },
    "threshold": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": 100,
      "title": "Image Intensity Threshold",
      "description": "Low-b image intensity threshold"
    },
    "diffusivity": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": 0.001,
      "title": "Nominal Diffusivity",
      "description": "Nominal diffusivity"
    },
    "debug": {
      "type": "boolean",
      "default": false,
      "title": "Debug",
      "description": "Turn on debugging"
    },
    "checkopts": {
      "type": "boolean",
      "default": false,
      "title": "Check Options",
      "description": "Don't run anything, just check options and exit"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help",
      "description": "Print out information on how to use this program"
    },
    "version": {
      "type": "boolean",
      "default": false,
      "title": "Version",
      "description": "Print out version and exit"
    }
  },
  "additionalProperties": false,
  "required": [
    "outfile"
  ]
}