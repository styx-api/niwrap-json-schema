{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A tool to compute distances between source and target images",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri_compute_distances"
    },
    "source": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Source file",
      "description": "Input source image file"
    },
    "target": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Target file",
      "description": "Input target image file"
    },
    "output_xform": {
      "type": "string",
      "title": "Output transform file",
      "description": "Output transformation file containing the computed distances"
    }
  },
  "additionalProperties": false,
  "required": [
    "source",
    "target",
    "output_xform"
  ]
}