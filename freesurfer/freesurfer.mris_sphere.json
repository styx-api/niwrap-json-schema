{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "This program will add a template into an average surface.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_sphere"
    },
    "surface_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Surface file",
      "description": "Input surface file."
    },
    "patch_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Patch file",
      "description": "Input patch file name."
    },
    "output_patch": {
      "type": "string",
      "title": "Output patch",
      "description": "Output patch file name."
    }
  },
  "additionalProperties": false,
  "required": [
    "surface_file",
    "patch_file",
    "output_patch"
  ]
}