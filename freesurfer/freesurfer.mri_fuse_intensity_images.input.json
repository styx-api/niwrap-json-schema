{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_fuse_intensity_images",
  "description": "Fuses intensity images based on given transforms",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mri_fuse_intensity_images"
    },
    "longitudinal_time_point_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Longitudinal Time Point File",
      "description": "File containing the longitudinal time points"
    },
    "input_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Volume",
      "description": "Input volume to be fused"
    },
    "transform_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Transform File",
      "description": "File containing the transforms"
    },
    "output_volume": {
      "type": "string",
      "title": "Output Volume",
      "description": "Output fused volume"
    }
  },
  "additionalProperties": false,
  "required": [
    "longitudinal_time_point_file",
    "input_volume",
    "transform_file",
    "output_volume"
  ]
}