{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_fix_topology",
  "description": "Computes a mapping from the unit sphere onto the cortical surface, ensuring a topologically correct surface.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_fix_topology"
    },
    "subject_name": {
      "type": "string",
      "title": "Subject Name",
      "description": "Subject name"
    },
    "hemisphere": {
      "type": "string",
      "title": "Hemisphere",
      "description": "Hemisphere"
    },
    "orig_name": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Orig Name",
      "description": "Input orig name (default is orig.nofix)"
    },
    "sphere_name": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Sphere Name",
      "description": "Sphere name (default is qsphere.nofix)"
    },
    "inflated_name": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Inflated Name",
      "description": "Inflated name (default is inflated.nofix)"
    },
    "output_name": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output Name",
      "description": "Output name (default is orig)"
    },
    "defect_base_name": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Defect Base Name",
      "description": "Defect basename (default is defect)"
    },
    "write_fixed_inflated": {
      "type": "boolean",
      "default": false,
      "title": "Write Fixed Inflated Flag",
      "description": "Write fixed inflated"
    },
    "verbose": {
      "type": "boolean",
      "default": false,
      "title": "Verbose Flag",
      "description": "Increase verbosity"
    },
    "verbose_low": {
      "type": "boolean",
      "default": false,
      "title": "Verbose Low Flag",
      "description": "Low verbosity"
    },
    "warnings": {
      "type": "boolean",
      "default": false,
      "title": "Warnings Flag",
      "description": "Show warnings"
    },
    "errors": {
      "type": "boolean",
      "default": false,
      "title": "Errors Flag",
      "description": "Show errors"
    },
    "movies": {
      "type": "boolean",
      "default": false,
      "title": "Movies Flag",
      "description": "Generate movies"
    },
    "intersect": {
      "type": "boolean",
      "default": false,
      "title": "Intersect Flag",
      "description": "Check if the final surface self-intersects"
    },
    "mappings": {
      "type": "boolean",
      "default": false,
      "title": "Mappings Flag",
      "description": "Generate several different mappings"
    },
    "correct_defect": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Correct Defect Number",
      "description": "Correct specific defect number"
    },
    "niters": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Genetic Algorithm Iterations",
      "description": "Number of iterations for genetic algorithm"
    },
    "genetic": {
      "type": "boolean",
      "default": false,
      "title": "Genetic Search Flag",
      "description": "Use genetic search"
    },
    "optimize": {
      "type": "boolean",
      "default": false,
      "title": "Optimize Genetic Search Flag",
      "description": "Optimize genetic search"
    },
    "random": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Random Search Iterations",
      "description": "Use random search with specified iterations"
    },
    "seed": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Random Seed",
      "description": "Set random number generator seed"
    },
    "diag": {
      "type": "boolean",
      "default": false,
      "title": "Diagnostic Flag",
      "description": "Sets DIAG_SAVE_DIAGS"
    },
    "mgz": {
      "type": "boolean",
      "default": false,
      "title": "MGZ Format Flag",
      "description": "Assume volumes are in mgz format"
    },
    "smooth": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Smoothing Iterations",
      "description": "Smooth corrected surface by N iterations"
    },
    "diagnostic_level": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Diagnostic Level",
      "description": "Set diagnostic level"
    },
    "threads": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of Threads",
      "description": "Set number of OpenMP threads"
    }
  },
  "additionalProperties": false,
  "required": [
    "subject_name",
    "hemisphere"
  ]
}