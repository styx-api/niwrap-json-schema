{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "This program segments an input val file into connected components",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "mris_segment_vals"
    },
    "input_surface": {
      "type": "string",
      "title": "Input Surface",
      "description": "Input surface file"
    },
    "input_curv_file": {
      "type": "string",
      "title": "Input Curv File",
      "description": "Input w/curv file"
    },
    "output_curv_file": {
      "type": "string",
      "title": "Output Curv File",
      "description": "Output w/curv file"
    },
    "threshold": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Threshold",
      "description": "Threshold for segmentation (default is 0)"
    },
    "area_thresh": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Area Threshold",
      "description": "Ignore segments smaller than <area thresh> mm (default 0)"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_surface",
    "input_curv_file",
    "output_curv_file"
  ]
}