{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "tkmeditfv",
  "description": "A wrapper script to run Freeview with arguments similar to tkmedit, providing both functionalities.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/tkmeditfv"
    },
    "subject": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subject",
      "description": "Subject's name"
    },
    "mainvol": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Main volume",
      "description": "Main volume file path"
    },
    "aux_volume": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Auxiliary volume",
      "description": "Auxiliary volume file path"
    },
    "seg_volume": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Segmentation volume",
      "description": "Segmentation volume file path"
    },
    "overlay": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Overlay volume",
      "description": "Overlay volume file path"
    },
    "timecourse": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Timecourse",
      "description": "Timecourse for overlay"
    },
    "overlay_registration": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Overlay registration",
      "description": "Overlay timecourse registration file"
    },
    "surface": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Surface",
      "description": "Load surface with optional color"
    },
    "extra_volumes": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string",
            "x-styx-type": "file"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Extra volumes",
      "description": "Load extra volume(s)"
    },
    "crs_location": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 3,
          "maxItems": 3
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Cursor location",
      "description": "Place cursor at given (col, row, slice) location"
    },
    "zoom_level": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Zoom level",
      "description": "Set zoom level"
    },
    "additional_segments": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string",
            "x-styx-type": "file"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Additional segments",
      "description": "Add additional segmentations"
    },
    "load_white": {
      "type": "boolean",
      "default": false,
      "title": "Load white surfaces",
      "description": "Load lh and rh.white surfaces"
    },
    "load_pial": {
      "type": "boolean",
      "default": false,
      "title": "Load pial surfaces",
      "description": "Load lh and rh.pial surfaces"
    },
    "load_orig": {
      "type": "boolean",
      "default": false,
      "title": "Load orig surfaces",
      "description": "Load lh and rh.orig surfaces"
    },
    "load_orig_nofix": {
      "type": "boolean",
      "default": false,
      "title": "Load orig nofix surfaces",
      "description": "Load lh and rh.orig.nofix surfaces"
    },
    "load_smoothwm_nofix": {
      "type": "boolean",
      "default": false,
      "title": "Load smoothwm nofix surfaces",
      "description": "Load lh and rh.smoothwm.nofix surfaces"
    },
    "load_white_preaparc": {
      "type": "boolean",
      "default": false,
      "title": "Load white preaparc surfaces",
      "description": "Load lh and rh.white.preaparc surfaces"
    },
    "load_inflated": {
      "type": "boolean",
      "default": false,
      "title": "Load inflated surfaces",
      "description": "Load lh and rh.inflated surfaces"
    },
    "annot": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Annotation",
      "description": "Load annotation file"
    },
    "load_aparc": {
      "type": "boolean",
      "default": false,
      "title": "Load aparc",
      "description": "Load aparc annotation"
    },
    "surfext": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Surface extension",
      "description": "Add extension to the name of the surface"
    },
    "seg_outline": {
      "type": "boolean",
      "default": false,
      "title": "Segmentation outline mode",
      "description": "Enable segmentation outline mode"
    },
    "intensity_minmax": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Intensity min max",
      "description": "Set intensity min and max on first volume"
    },
    "load_defects": {
      "type": "boolean",
      "default": false,
      "title": "Load defects",
      "description": "Load info needed to evaluate defects"
    },
    "load_defect_pointset": {
      "type": "boolean",
      "default": false,
      "title": "Load defect pointset",
      "description": "Load defect pointset"
    },
    "trilin_interpolation": {
      "type": "boolean",
      "default": false,
      "title": "Trilinear interpolation",
      "description": "Use trilinear interpolation for volume overlays"
    },
    "neurological_orientation": {
      "type": "boolean",
      "default": false,
      "title": "Neurological orientation",
      "description": "Use neurological orientation instead of radiological"
    },
    "rotate_around_cursor": {
      "type": "boolean",
      "default": false,
      "title": "Rotate around cursor",
      "description": "Rotate around cursor in 3D view"
    },
    "vgl_display": {
      "type": "boolean",
      "default": false,
      "title": "VGL display",
      "description": "Set VGL_DISPLAY and run with vglrun"
    },
    "use_tkmedit": {
      "type": "boolean",
      "default": false,
      "title": "Use tkmedit",
      "description": "Use tkmedit instead of freeview"
    },
    "load_aparc_aseg": {
      "type": "boolean",
      "default": false,
      "title": "Load aparc+aseg",
      "description": "Load aparc+aseg"
    }
  },
  "additionalProperties": false,
  "required": [
    "mainvol",
    "@type"
  ]
}