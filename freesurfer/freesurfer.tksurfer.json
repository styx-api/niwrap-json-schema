{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "3D visualization tool for cortical surface models (part of FreeSurfer)",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.tksurfer"
    },
    "subject_id": {
      "type": "string",
      "title": "Subject ID",
      "description": "Subject identifier"
    },
    "hemisphere": {
      "type": "string",
      "title": "Hemisphere",
      "description": "Cortical hemisphere (e.g., lh or rh)"
    },
    "surface_name": {
      "type": "string",
      "title": "Surface Name",
      "description": "Surface name (e.g., inflated, sphere, white)"
    },
    "options": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Options",
      "description": "Optional flags and parameters"
    }
  },
  "additionalProperties": false,
  "required": [
    "subject_id",
    "hemisphere",
    "surface_name"
  ]
}