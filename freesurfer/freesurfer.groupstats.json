{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A script for comprehensive group analysis on both maps and ROI results within FreeSurfer.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.groupstats"
    },
    "outdir": {
      "type": "string",
      "title": "Output directory",
      "description": "Output folder"
    },
    "group_fsgd": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Group FSGD file",
      "description": "Specify the FSGD file for the group"
    },
    "subjectfile": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subject file",
      "description": "Subject list file"
    },
    "fwhm": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "FWHM smoothing levels",
      "description": "Specify smoothing level(s)"
    },
    "subject_dir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subjects directory",
      "description": "Subject directory"
    },
    "mapname": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Map name",
      "description": "Use the given map name"
    },
    "srcsurfreg": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Source surface registration",
      "description": "Source surface registration (default is sphere.reg)"
    },
    "no_maps": {
      "type": "boolean",
      "default": false,
      "title": "No maps option",
      "description": "Only analyze ROI data"
    },
    "lh_only": {
      "type": "boolean",
      "default": false,
      "title": "Left hemisphere only",
      "description": "Only analyze left hemisphere"
    },
    "rh_only": {
      "type": "boolean",
      "default": false,
      "title": "Right hemisphere only",
      "description": "Only analyze right hemisphere"
    },
    "no_aparcstats": {
      "type": "boolean",
      "default": false,
      "title": "No aparcstats",
      "description": "Do not compute aparcstats"
    },
    "no_asegstats": {
      "type": "boolean",
      "default": false,
      "title": "No asegstats",
      "description": "Do not compute asegstats"
    },
    "no_wparcstats": {
      "type": "boolean",
      "default": false,
      "title": "No wmparcstats",
      "description": "Do not compute wmparcstats"
    },
    "no_stats": {
      "type": "boolean",
      "default": false,
      "title": "No ROI stats",
      "description": "Do not perform any ROI stats"
    },
    "new": {
      "type": "boolean",
      "default": false,
      "title": "New map names",
      "description": "Append .new.mris_make_surfaces to map names"
    },
    "base": {
      "type": "boolean",
      "default": false,
      "title": "Base measures option",
      "description": "Sets measure thickness area volume curvature sulcus (excludes white-gray percentage)"
    },
    "keep53": {
      "type": "boolean",
      "default": false,
      "title": "Keep 5.3 aseg names",
      "description": "Keep 5.3 aseg names (e.g., Thalamus-Proper)"
    }
  },
  "additionalProperties": false,
  "required": [
    "outdir"
  ]
}