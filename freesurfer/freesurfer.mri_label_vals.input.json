{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_label_vals",
  "description": "Extract values at label coordinates from a volume",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mri_label_vals"
    },
    "volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Volume file",
      "description": "Input volume file"
    },
    "label_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Label file",
      "description": "Input label file"
    },
    "cras_flag": {
      "type": "boolean",
      "default": false,
      "title": "CRAS Flag",
      "description": "Use this option if the label was created where c_(r,a,s) != 0"
    },
    "help_flag": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Print help"
    }
  },
  "additionalProperties": false,
  "required": [
    "volume",
    "label_file"
  ]
}