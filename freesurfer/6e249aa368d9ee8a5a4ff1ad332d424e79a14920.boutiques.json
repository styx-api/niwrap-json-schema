{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A tool to parcellate brain connectivity using surface and correlation data.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_parcellate_connectivity"
    },
    "smooth_iterations": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Smoothing Iterations",
      "description": "Number of averaging iterations for smoothing correlation matrix."
    },
    "input_surface": {
      "type": "string",
      "title": "Input Surface",
      "description": "Input surface file."
    },
    "input_correlations": {
      "type": "string",
      "title": "Input Correlations",
      "description": "Input correlations file."
    },
    "output_parcellation": {
      "type": "string",
      "title": "Output Parcellation",
      "description": "Output parcellation file."
    }
  },
  "additionalProperties": false,
  "required": [
    "input_surface",
    "input_correlations",
    "output_parcellation"
  ]
}