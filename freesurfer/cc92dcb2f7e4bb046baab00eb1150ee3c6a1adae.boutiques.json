{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Front-end for MINCs mritotal for computing the talairach transform that maps the input volume to the MNI305.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "segment_subject_old_skull_strip"
    },
    "input_volume": {
      "type": "string",
      "title": "Input Volume",
      "description": "Input volume file"
    },
    "output_xfm": {
      "type": "string",
      "title": "Output XFM File",
      "description": "Output xfm file"
    },
    "log_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Log File",
      "description": "Log file. Default is outdir/talarach.log"
    },
    "help_flag": {
      "type": "boolean",
      "default": false,
      "title": "Help",
      "description": "Print help and exit"
    },
    "debug_flag": {
      "type": "boolean",
      "default": false,
      "title": "Debug",
      "description": "Turn on debugging"
    },
    "version_flag": {
      "type": "boolean",
      "default": false,
      "title": "Version",
      "description": "Print version and exit"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_volume",
    "output_xfm"
  ]
}