{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "This program removes the linear component of the variance accounted for by one curvature vector from another.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_remove_variance"
    },
    "input_surface_file": {
      "type": "string",
      "title": "Input Surface File",
      "description": "The input surface file."
    },
    "curvature_file": {
      "type": "string",
      "title": "Curvature File",
      "description": "The curvature file."
    },
    "curvature_file_to_remove": {
      "type": "string",
      "title": "Curvature File to Remove",
      "description": "The curvature file to remove from the input curvature."
    },
    "output_curvature_file": {
      "type": "string",
      "title": "Output Curvature File",
      "description": "The output curvature file."
    }
  },
  "additionalProperties": false,
  "required": [
    "input_surface_file",
    "curvature_file",
    "curvature_file_to_remove",
    "output_curvature_file"
  ]
}