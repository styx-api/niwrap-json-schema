{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_volcluster",
  "description": "A tool for finding clusters in a volume, useful for analyzing MRI data.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "root": {
      "type": "string",
      "title": "Root",
      "description": "Output root directory"
    },
    "output_volume": {
      "type": "string",
      "title": "Output Volume",
      "description": "Output volume after clustering."
    },
    "output_cluster_number_volume": {
      "type": "string",
      "title": "Output Cluster Number Volume",
      "description": "Output cluster number volume."
    },
    "output_binary_mask": {
      "type": "string",
      "title": "Output Binary Mask",
      "description": "Final binary mask output."
    },
    "output_label_file": {
      "type": "string",
      "title": "Output Label File",
      "description": "Saved cluster as label file."
    }
  }
}