{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "trk_tools",
  "description": "Tool for processing TRK files",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "root": {
      "type": "string",
      "title": "Root",
      "description": "Output root directory"
    },
    "trk_output_file": {
      "type": "string",
      "title": "TRK Output File",
      "description": "The processed output TRK file"
    },
    "image_output_file": {
      "type": "string",
      "title": "Image Output File",
      "description": "Image exported from TRK file"
    },
    "vtk_output_file": {
      "type": "string",
      "title": "VTK Output File",
      "description": "VTK file containing streamlines"
    }
  }
}