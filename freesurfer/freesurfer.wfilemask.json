{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Zero-out regions of a surface value file (.w file) using a label.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.wfilemask"
    },
    "w_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input W file",
      "description": "Input w file"
    },
    "label_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Label File",
      "description": "Label file to use as a mask"
    },
    "output_file": {
      "type": "string",
      "title": "Output W file",
      "description": "Output w file"
    },
    "permission_mask": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Permission Mask",
      "description": "Set Unix file permission mask"
    },
    "help_flag": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Display help message and exit"
    },
    "version_flag": {
      "type": "boolean",
      "default": false,
      "title": "Version Flag",
      "description": "Print version and exit"
    }
  },
  "additionalProperties": false,
  "required": [
    "w_file",
    "label_file",
    "output_file"
  ]
}