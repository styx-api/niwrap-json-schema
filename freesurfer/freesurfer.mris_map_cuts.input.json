  "title": "mris_map_cuts",
  "description": "Tool for mapping cortical surface data onto cuts.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mris_map_cuts"
    },
    "input_patch": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Patch",
      "description": "Input patch file"
    },
    "output_patch": {
      "type": "string",
      "title": "Output Patch",
      "description": "Output patch file"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_patch",
    "output_patch",
    "@type"
  ]
}