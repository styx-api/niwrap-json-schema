{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_diff",
  "description": "A tool for comparing differences between surface files in FreeSurfer.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mris_diff"
    },
    "surface1": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Surface 1",
      "description": "First surface file"
    },
    "surface2": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Surface 2",
      "description": "Second surface file"
    },
    "subject1": {
      "type": "string",
      "title": "Subject 1",
      "description": "Subject 1 name"
    },
    "subject2": {
      "type": "string",
      "title": "Subject 2",
      "description": "Subject 2 name"
    },
    "subj_dir1": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subject Directory 1",
      "description": "Directory for Subject 1 (default is SUBJECTS_DIR)"
    },
    "subj_dir2": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subject Directory 2",
      "description": "Directory for Subject 2 (default is SUBJECTS_DIR)"
    },
    "hemisphere": {
      "type": "string",
      "title": "Hemisphere",
      "description": "Hemisphere (rh or lh)"
    },
    "surf": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Surface",
      "description": "Compare surface"
    },
    "curv": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Curvature",
      "description": "Compare curvature"
    },
    "aparc": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Aparc",
      "description": "Compare aparc annotation"
    },
    "aparc2": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Aparc2",
      "description": "Optional different name to compare to aparc"
    },
    "simple": {
      "type": "boolean",
      "default": false,
      "title": "Simple Comparison",
      "description": "Simple comparison of two surfaces to just report differences"
    },
    "simple_patch": {
      "type": "boolean",
      "default": false,
      "title": "Simple Patch Comparison",
      "description": "Simple comparison of two patches"
    },
    "thresh": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Threshold",
      "description": "Threshold (default=0) [Note: Not currently implemented!]"
    },
    "maxerrs": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Max Errors",
      "description": "Stop looping after N errors (default=10)"
    },
    "renumbered": {
      "type": "boolean",
      "default": false,
      "title": "Renumbered",
      "description": "Vertices or faces may have been renumbered and a few deleted"
    },
    "worst_bucket": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Worst Bucket",
      "description": "Compute the worst histogram bucket each vertex is in"
    },
    "grid": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Grid",
      "description": "Label the vertices of edges that span a grid based on the provided spacing float"
    },
    "no_check_xyz": {
      "type": "boolean",
      "default": false,
      "title": "No Check XYZ",
      "description": "Do not check vertex xyz"
    },
    "no_check_nxyz": {
      "type": "boolean",
      "default": false,
      "title": "No Check NXYZ",
      "description": "Do not check vertex normals"
    },
    "xyz_rms": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "XYZ RMS",
      "description": "Compute and save RMS diff between xyz"
    },
    "angle_rms": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Angle RMS",
      "description": "Compute angle on sphere between xyz"
    },
    "seed": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Seed",
      "description": "Set random seed for degenerate normals"
    },
    "min_dist": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Minimum Distance",
      "description": "Compute vertex-by-vertex RMS distance between surfaces"
    },
    "debug": {
      "type": "boolean",
      "default": false,
      "title": "Debug",
      "description": "Enable debugging output"
    },
    "gdiag_no": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Gdiag No",
      "description": "Specify Gdiag_no"
    },
    "check_opts": {
      "type": "boolean",
      "default": false,
      "title": "Check Options",
      "description": "Only check options and exit"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help",
      "description": "Display help information"
    },
    "version": {
      "type": "boolean",
      "default": false,
      "title": "Version",
      "description": "Display version information"
    }
  },
  "additionalProperties": false,
  "required": [
    "surface1",
    "surface2",
    "subject1",
    "subject2",
    "hemisphere"
  ]
}