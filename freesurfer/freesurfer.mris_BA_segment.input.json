{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_BA_segment",
  "description": "Segments a Brodmann area (MT currently) from a laminar intensity profile overlay.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_BA_segment"
    },
    "surface": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Surface file",
      "description": "Input surface file"
    },
    "profiles": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Profiles file",
      "description": "Input profiles file"
    },
    "prior_label": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Prior label file",
      "description": "Input prior label file"
    },
    "output_label": {
      "type": "string",
      "title": "Output label",
      "description": "Output label file"
    }
  },
  "additionalProperties": false,
  "required": [
    "surface",
    "profiles",
    "prior_label",
    "output_label"
  ]
}