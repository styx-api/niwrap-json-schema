{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_robust_template",
  "description": "Constructs an unbiased robust template for longitudinal volumes using an iterative method.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "root": {
      "type": "string",
      "title": "Root",
      "description": "Output root directory"
    },
    "output_template": {
      "type": "string",
      "title": "Output template",
      "description": "Output template volume (final mean/median image)."
    },
    "output_lta_transform": {
      "type": "string",
      "title": "Output transform",
      "description": "Output transform file."
    },
    "output_mapped_image": {
      "type": "string",
      "title": "Mapped image",
      "description": "Output mapped and resampled image."
    },
    "output_weights_map": {
      "type": "string",
      "title": "Weights map",
      "description": "Output weights map (outliers)."
    }
  }
}