{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Computes the bias field by dividing the (unconformed) orig.mgz by the norm.mgz.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.biasfield"
    },
    "subject": {
      "type": "string",
      "title": "Subject",
      "description": "Subject identifier"
    },
    "tmpdir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Temporary Directory",
      "description": "Temporary directory"
    },
    "no_cleanup": {
      "type": "boolean",
      "default": false,
      "title": "No Cleanup Flag",
      "description": "Prevent cleanup of temporary files"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Display help information"
    },
    "debug": {
      "type": "boolean",
      "default": false,
      "title": "Debug Flag",
      "description": "Enable debugging mode"
    },
    "version": {
      "type": "boolean",
      "default": false,
      "title": "Version Flag",
      "description": "Display script version info"
    }
  },
  "additionalProperties": false,
  "required": [
    "subject"
  ]
}