{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "inflate_subject-lh",
  "description": "A tool to process and inflate left hemisphere subject data in FreeSurfer",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.inflate_subject-lh"
    },
    "input_folder": {
      "type": "string",
      "title": "Input Folder",
      "description": "Input folder containing subject data"
    },
    "hostname_flag": {
      "type": "boolean",
      "default": false,
      "title": "Hostname Flag",
      "description": "Flag to check hostname"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_folder"
  ]
}