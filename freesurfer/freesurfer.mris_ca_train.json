{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Creates a cortical parcellation atlas file based on one or more annotated subjects using probabilistic information.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_ca_train"
    },
    "hemi": {
      "type": "string",
      "title": "Hemisphere",
      "description": "Hemisphere: rh or lh"
    },
    "canonsurf": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Canonical Surface",
      "description": "Canonical surface filename"
    },
    "annot_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Annotation File",
      "description": "Annotation filename"
    },
    "subjects": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Subject IDs",
      "description": "List of subject ids"
    },
    "output_file": {
      "type": "string",
      "title": "Output File",
      "description": "Classifier array output file"
    },
    "sdir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subjects Directory",
      "description": "Directory as subjects directory (default: $SUBJECTS_DIR)"
    },
    "nbrs": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Neighborhood Size",
      "description": "Neighborhood size (default=2)"
    },
    "orig": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Original Surface File",
      "description": "Filename of original surface (default=smoothwm)"
    },
    "norm1": {
      "type": "boolean",
      "default": false,
      "title": "Normalize Input 1",
      "description": "GCSA normalize input #1 after reading (default: disabled)"
    },
    "norm2": {
      "type": "boolean",
      "default": false,
      "title": "Normalize Input 2",
      "description": "GCSA normalize input #2 after reading (default: disabled)"
    },
    "norm3": {
      "type": "boolean",
      "default": false,
      "title": "Normalize Input 3",
      "description": "GCSA normalize input #3 after reading (default: disabled)"
    },
    "ic": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Classifier Parameters",
      "description": "Parameters passed to the classifier routine (default: -ic 7 4)"
    },
    "sulc": {
      "type": "boolean",
      "default": false,
      "title": "Sulcus Only",
      "description": "Specify sulc as only input (default: sulcus and curvature)"
    },
    "sulconly": {
      "type": "boolean",
      "default": false,
      "title": "Sulcus Only Flag",
      "description": "Same as -sulc"
    },
    "a": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Smoothing Iterations",
      "description": "Number of nearest neighbor smoothing iterations to apply to input 1 (default=5)"
    },
    "parcellation_table": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Parcellation Table",
      "description": "Parcellation table input file (default: none)"
    },
    "n": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of Inputs",
      "description": "Number of inputs (default=1,max=3)"
    },
    "verbose": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Verbose Level",
      "description": "Diagnostic level (default=0)"
    },
    "debug_vertex": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Debug Vertex",
      "description": "Debug diagnostic level for a specific vertex (default=0)"
    },
    "gcs_means": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "GCS Means",
      "description": "Extract likelihood means for all classes for given input"
    },
    "gcs_priors": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "GCS Priors",
      "description": "Extract priors for all classes for given input"
    },
    "gcs_diff": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "GCS Difference",
      "description": "Determine whether GCSAs are different"
    },
    "nfill": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Max Fill Iterations",
      "description": "Set the max number of iterations for filling empty vertices"
    },
    "no_fill": {
      "type": "boolean",
      "default": false,
      "title": "No Fill Flag",
      "description": "Do not fill at all"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Print help info"
    },
    "version": {
      "type": "boolean",
      "default": false,
      "title": "Version Flag",
      "description": "Print version info"
    }
  },
  "additionalProperties": false,
  "required": [
    "hemi",
    "canonsurf",
    "annot_file",
    "subjects",
    "output_file"
  ]
}