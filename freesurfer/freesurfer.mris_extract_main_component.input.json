{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_extract_main_component",
  "description": "Tool for extracting the main component from a surface input.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mris_extract_main_component"
    },
    "input_surface": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Surface",
      "description": "Input surface file (e.g. lh.white)"
    },
    "output_surface": {
      "type": "string",
      "title": "Output Surface",
      "description": "Output surface file (e.g. lh.white.main)"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_surface",
    "output_surface",
    "@type"
  ]
}