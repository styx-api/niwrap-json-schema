{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A FreeSurfer tool for processing multimodal surface data.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "mris_multimodal"
    },
    "input_surface": {
      "type": "string",
      "title": "Input Surface",
      "description": "Input surface file."
    },
    "target_surface": {
      "type": "string",
      "title": "Target Surface",
      "description": "Target surface file."
    },
    "output_surface": {
      "type": "string",
      "title": "Output Surface",
      "description": "Output surface file."
    },
    "fill_holes": {
      "type": "boolean",
      "default": false,
      "title": "Fill Holes Flag",
      "description": "Flag to fill holes in the surface."
    },
    "curvature": {
      "type": "boolean",
      "default": false,
      "title": "Curvature Flag",
      "description": "Flag to process curvature data."
    },
    "thickness": {
      "type": "boolean",
      "default": false,
      "title": "Thickness Flag",
      "description": "Flag to process thickness data."
    },
    "annotation_output": {
      "type": "string",
      "title": "Annotation Output",
      "description": "Output file for annotation data."
    },
    "overlay_output": {
      "type": "string",
      "title": "Overlay Output",
      "description": "Output file for overlay data."
    },
    "csv_output": {
      "type": "string",
      "title": "CSV Output",
      "description": "Output CSV file."
    },
    "vtk_output": {
      "type": "boolean",
      "default": false,
      "title": "VTK Output Flag",
      "description": "Flag to output VTK file format."
    }
  },
  "additionalProperties": false,
  "required": [
    "input_surface",
    "target_surface",
    "output_surface",
    "annotation_output",
    "overlay_output",
    "csv_output"
  ]
}