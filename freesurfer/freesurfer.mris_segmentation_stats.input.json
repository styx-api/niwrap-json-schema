{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_segmentation_stats",
  "description": "Tool for calculating segmentation statistics",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_segmentation_stats"
    },
    "overlay_name": {
      "type": "string",
      "title": "Overlay Name",
      "description": "Overlay name for segmentation"
    },
    "segmentation_label_name": {
      "type": "string",
      "title": "Segmentation Label Name",
      "description": "Segmentation label name"
    },
    "subjects": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Subjects",
      "description": "List of subjects to process"
    },
    "roc_file": {
      "type": "string",
      "title": "ROC File",
      "description": "File for ROC curve output"
    }
  },
  "additionalProperties": false,
  "required": [
    "overlay_name",
    "segmentation_label_name",
    "subjects",
    "roc_file"
  ]
}