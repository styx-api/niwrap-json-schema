{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_linear_align",
  "description": "MRI Linear Alignment Tool for Freesurfer",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri_linear_align"
    },
    "source": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Source Image",
      "description": "Source image file for alignment"
    },
    "target": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Target Image",
      "description": "Target image file for alignment"
    },
    "output_xform": {
      "type": "string",
      "title": "Output Transform",
      "description": "Output transformation file"
    }
  },
  "additionalProperties": false,
  "required": [
    "source",
    "target",
    "output_xform"
  ]
}