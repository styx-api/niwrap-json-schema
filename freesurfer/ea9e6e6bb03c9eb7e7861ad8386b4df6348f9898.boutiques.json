{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A command-line tool for generating filled ex vivo brain images.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.make_exvivo_filled"
    },
    "subject_name": {
      "type": "string",
      "title": "Subject Name",
      "description": "Name of the subject."
    },
    "input_samseg": {
      "type": "string",
      "title": "Input SAMSEG",
      "description": "Input SAMSEG (Segmentation Analysis of MRI brain images)."
    },
    "input_intensity_vol": {
      "type": "string",
      "title": "Input Intensity Volume",
      "description": "Input intensity volume."
    },
    "hemi_both": {
      "type": "string",
      "title": "Hemisphere or Both",
      "description": "Specify hemisphere or both."
    }
  },
  "additionalProperties": false,
  "required": [
    "subject_name",
    "input_samseg",
    "input_intensity_vol",
    "hemi_both"
  ]
}