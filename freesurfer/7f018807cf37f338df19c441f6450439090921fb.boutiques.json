{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A tool to strip subject information from MRI data files",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "mri_strip_subject_info"
    },
    "input_files": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Input Files",
      "description": "Input file(s) containing MRI data"
    },
    "output_directory": {
      "type": "string",
      "title": "Output Directory",
      "description": "Directory where stripped files will be saved"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_files",
    "output_directory"
  ]
}