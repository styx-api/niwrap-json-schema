{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Tool for training with MRI data in FreeSurfer.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri_train"
    },
    "training_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Training File",
      "description": "Input training file name"
    },
    "output_file": {
      "type": "string",
      "title": "Output File",
      "description": "Output file"
    }
  },
  "additionalProperties": false,
  "required": [
    "training_file",
    "output_file"
  ]
}