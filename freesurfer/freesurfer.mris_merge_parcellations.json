{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "This program computes the Hausdorff distance between two labels on the surface.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_merge_parcellations"
    },
    "surface": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Surface",
      "description": "Surface file to analyze"
    },
    "label1": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Label 1",
      "description": "First label file"
    },
    "label2": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Label 2",
      "description": "Second label file"
    },
    "annot_name": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Annotation Name",
      "description": "Compute pairwise Hausdorff distance between all annotations"
    }
  },
  "additionalProperties": false,
  "required": [
    "surface",
    "label1",
    "label2"
  ]
}