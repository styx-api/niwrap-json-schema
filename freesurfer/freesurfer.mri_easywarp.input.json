{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_easywarp",
  "description": "EasyReg: deep learning registration simple and easy",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mri_easywarp"
    },
    "input_image": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input image",
      "description": "Input image"
    },
    "output_image": {
      "type": "string",
      "title": "Output image",
      "description": "Output (deformed) image"
    },
    "deformation_field": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Deformation field",
      "description": "Deformation field"
    },
    "nearest_neighbor": {
      "type": "boolean",
      "default": false,
      "title": "Nearest neighbor flag",
      "description": "Use nearest neighbor (rather than linear) interpolation"
    },
    "num_threads": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Threads",
      "description": "Number of cores to be used. Default is 1. You can use -1 to use all available cores"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_image",
    "output_image",
    "@type"
  ]
}