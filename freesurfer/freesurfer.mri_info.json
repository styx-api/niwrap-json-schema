{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Tool to extract metadata from MRI volumes",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri_info"
    },
    "input1": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input file 1",
      "description": "Primary input file"
    },
    "input2": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Input file 2",
      "description": "Secondary input file (optional)"
    },
    "conformed": {
      "type": "boolean",
      "default": false,
      "title": "Conformed flag",
      "description": "Print whether a volume is conformed"
    },
    "conformed_to_min": {
      "type": "boolean",
      "default": false,
      "title": "Conformed to min flag",
      "description": "Print whether a volume is conformed-to-min"
    },
    "is_1mm_iso": {
      "type": "boolean",
      "default": false,
      "title": "1mm isometric voxel size flag",
      "description": "Print whether the voxel size is 1mm isotropic"
    },
    "type": {
      "type": "boolean",
      "default": false,
      "title": "Voxel type flag",
      "description": "Print the voxel type/precision"
    },
    "tr": {
      "type": "boolean",
      "default": false,
      "title": "TR flag",
      "description": "Print TR"
    },
    "te": {
      "type": "boolean",
      "default": false,
      "title": "TE flag",
      "description": "Print TE"
    },
    "ti": {
      "type": "boolean",
      "default": false,
      "title": "TI flag",
      "description": "Print TI"
    },
    "fa": {
      "type": "boolean",
      "default": false,
      "title": "Flip angle flag",
      "description": "Print flip angle"
    },
    "pedir": {
      "type": "boolean",
      "default": false,
      "title": "Phase encode direction flag",
      "description": "Print phase encode direction"
    },
    "res": {
      "type": "boolean",
      "default": false,
      "title": "Resolution flag",
      "description": "Print column, row, slice, and frame resolution"
    },
    "cres": {
      "type": "boolean",
      "default": false,
      "title": "Column voxel size flag",
      "description": "Print column voxel size"
    },
    "rres": {
      "type": "boolean",
      "default": false,
      "title": "Row voxel size flag",
      "description": "Print row voxel size"
    },
    "sres": {
      "type": "boolean",
      "default": false,
      "title": "Slice voxel size flag",
      "description": "Print slice voxel size"
    },
    "voxvol": {
      "type": "boolean",
      "default": false,
      "title": "Voxel volume flag",
      "description": "Print voxel volume"
    },
    "voxvolsum": {
      "type": "boolean",
      "default": false,
      "title": "Voxel volume sum flag",
      "description": "Compute sum of all voxels times the voxel volume"
    },
    "ncols": {
      "type": "boolean",
      "default": false,
      "title": "Number of columns flag",
      "description": "Print number of columns"
    },
    "nrows": {
      "type": "boolean",
      "default": false,
      "title": "Number of rows flag",
      "description": "Print number of rows"
    },
    "nslices": {
      "type": "boolean",
      "default": false,
      "title": "Number of slices flag",
      "description": "Print number of slices"
    },
    "dim": {
      "type": "boolean",
      "default": false,
      "title": "Dimensions flag",
      "description": "Print number of columns, rows, slices, and frames"
    },
    "cdc": {
      "type": "boolean",
      "default": false,
      "title": "Column direction cosine flag",
      "description": "Print column direction cosine (x_{r,a,s})"
    },
    "rdc": {
      "type": "boolean",
      "default": false,
      "title": "Row direction cosine flag",
      "description": "Print row direction cosine (y_{r,a,s})"
    },
    "sdc": {
      "type": "boolean",
      "default": false,
      "title": "Slice direction cosine flag",
      "description": "Print slice direction cosine (z_{r,a,s})"
    },
    "vox2ras": {
      "type": "boolean",
      "default": false,
      "title": "Vox2RAS matrix flag",
      "description": "Print the native/qform vox2ras matrix"
    },
    "ras2vox": {
      "type": "boolean",
      "default": false,
      "title": "RAS2Vox matrix flag",
      "description": "Print the native/qform ras2vox matrix"
    },
    "vox2ras_tkr": {
      "type": "boolean",
      "default": false,
      "title": "Vox2RAS TKR matrix flag",
      "description": "Print the tkregister vox2ras matrix"
    },
    "ras2vox_tkr": {
      "type": "boolean",
      "default": false,
      "title": "RAS2Vox TKR matrix flag",
      "description": "Print the tkregister ras2vox matrix"
    },
    "vox2ras_fsl": {
      "type": "boolean",
      "default": false,
      "title": "Vox2RAS FSL matrix flag",
      "description": "Print the FSL/FLIRT vox2ras matrix"
    },
    "tkr2scanner": {
      "type": "boolean",
      "default": false,
      "title": "TKR2Scanner matrix flag",
      "description": "Print tkrRAS-to-scannerRAS matrix"
    },
    "scanner2tkr": {
      "type": "boolean",
      "default": false,
      "title": "Scanner2TKR matrix flag",
      "description": "Print scannerRAS-to-tkrRAS matrix"
    },
    "ras_good": {
      "type": "boolean",
      "default": false,
      "title": "RAS good flag",
      "description": "Print the ras_good_flag"
    },
    "cras": {
      "type": "boolean",
      "default": false,
      "title": "CRAS flag",
      "description": "Print the RAS near the center of the volume"
    },
    "center": {
      "type": "boolean",
      "default": false,
      "title": "Center RAS flag",
      "description": "Print the RAS at the actual center of the volume"
    },
    "zero_cras": {
      "type": "boolean",
      "default": false,
      "title": "Zero CRAS flag",
      "description": "Zero the center ras"
    },
    "p0": {
      "type": "boolean",
      "default": false,
      "title": "P0 flag",
      "description": "Print the RAS at voxel (0,0,0)"
    },
    "det": {
      "type": "boolean",
      "default": false,
      "title": "Determinant flag",
      "description": "Print the determinant of the vox2ras matrix"
    },
    "dof": {
      "type": "boolean",
      "default": false,
      "title": "Degrees of freedom flag",
      "description": "Print the degrees of freedom stored in the header"
    },
    "nframes": {
      "type": "boolean",
      "default": false,
      "title": "Number of frames flag",
      "description": "Print the number of frames"
    },
    "mid_frame": {
      "type": "boolean",
      "default": false,
      "title": "Middle frame flag",
      "description": "Print the middle frame"
    },
    "format": {
      "type": "boolean",
      "default": false,
      "title": "Format flag",
      "description": "Print file format"
    },
    "orientation": {
      "type": "boolean",
      "default": false,
      "title": "Orientation flag",
      "description": "Print orientation string (e.g., LPS, RAS, RPI)"
    },
    "slicedirection": {
      "type": "boolean",
      "default": false,
      "title": "Slice direction flag",
      "description": "Print primary slice direction (e.g., axial)"
    },
    "autoalign": {
      "type": "boolean",
      "default": false,
      "title": "Autoalign matrix flag",
      "description": "Print auto align matrix (if it exists)"
    },
    "ctab": {
      "type": "boolean",
      "default": false,
      "title": "Color lookup table flag",
      "description": "Print embedded color lookup table"
    },
    "cmds": {
      "type": "boolean",
      "default": false,
      "title": "Commands flag",
      "description": "Print command-line provenance info"
    },
    "dump": {
      "type": "boolean",
      "default": false,
      "title": "Dump flag",
      "description": "Print FA, TR, TE, TI, etc"
    },
    "voxel_crs": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 3,
          "maxItems": 3
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Voxel column row slice",
      "description": "Dump voxel value from column, row, slice (0-based, all frames)"
    },
    "entropy": {
      "type": "boolean",
      "default": false,
      "title": "Entropy flag",
      "description": "Compute and print entropy"
    },
    "output_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output file",
      "description": "Print flagged results to file"
    },
    "orig_ras2vox": {
      "type": "boolean",
      "default": false,
      "title": "Orig Ras2Vox matrix flag",
      "description": "Print orig Ras2Vox matrix if present"
    },
    "in_type": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Input type",
      "description": "Explicitly specify file type"
    }
  },
  "additionalProperties": false,
  "required": [
    "input1"
  ]
}