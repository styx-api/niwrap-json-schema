{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "This program computes the overlap of a set of segmentations for a given morph using an xform file.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri_evaluate_morph"
    },
    "xform_name": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Xform Name",
      "description": "Transformation file name."
    },
    "segmentation_files": {
      "type": "array",
      "items": {
        "type": "string",
        "x-styx-type": "file"
      },
      "title": "Segmentation Files",
      "description": "Input segmentation files."
    },
    "output_file": {
      "type": "string",
      "title": "Output File",
      "description": "Output file."
    }
  },
  "additionalProperties": false,
  "required": [
    "xform_name",
    "segmentation_files",
    "output_file"
  ]
}