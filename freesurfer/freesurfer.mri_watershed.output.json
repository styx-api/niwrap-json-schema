{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_watershed",
  "description": "A tool for stripping skull and other non-brain tissues to produce brain volume from T1 volume.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "root": {
      "type": "string",
      "title": "Root",
      "description": "Output root directory"
    },
    "output_brain_vol": {
      "type": "string",
      "title": "Output Brain Volume",
      "description": "Skull stripped brain volume"
    },
    "output_brain_surf": {
      "type": "string",
      "title": "Brain Surface File",
      "description": "Saved brain surface when specified"
    }
  }
}