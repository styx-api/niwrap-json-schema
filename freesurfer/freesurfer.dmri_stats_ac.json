{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "The tool 'dmri_stats_ac' performs statistical analysis on dMRI data.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.dmri_stats_ac"
    },
    "anatomicuts_folder": {
      "type": "string",
      "title": "Anatomicuts Folder",
      "description": "Input folder containing anatomicuts data"
    },
    "num_clusters": {
      "type": "integer",
      "title": "Number of Clusters",
      "description": "Number of clusters for analysis"
    },
    "correspondence_file": {
      "type": "string",
      "title": "Correspondence File",
      "description": "File specifying correspondence details"
    },
    "measures": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Measures and Files",
      "description": "Number of measures followed by each measure name and file"
    },
    "output_file": {
      "type": "string",
      "title": "Output File",
      "description": "Output file"
    }
  },
  "additionalProperties": false,
  "required": [
    "anatomicuts_folder",
    "num_clusters",
    "correspondence_file",
    "measures",
    "output_file"
  ]
}