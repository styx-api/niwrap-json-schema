{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "reconbatchjobs",
  "description": "Batch job processor for reconstruction scripts",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/reconbatchjobs"
    },
    "logfile": {
      "type": "string",
      "title": "Log file",
      "description": "Log file to capture output of batch jobs"
    },
    "cmdfiles": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Command files",
      "description": "Command files for batch processing"
    }
  },
  "additionalProperties": false,
  "required": [
    "logfile",
    "cmdfiles"
  ]
}