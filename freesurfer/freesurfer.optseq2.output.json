{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "optseq2",
  "description": "Optseq2 is a tool for automatically scheduling events for rapid-presentation event-related (RPER) fMRI experiments.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "root": {
      "type": "string",
      "title": "Root",
      "description": "Output root directory"
    },
    "output_schedules": {
      "type": "string",
      "title": "Output Schedules",
      "description": "Output schedules"
    },
    "output_design_matrices": {
      "type": "string",
      "title": "Output Design Matrices",
      "description": "Output FIR design matrices"
    },
    "output_contrast_matrix": {
      "type": "string",
      "title": "Output Contrast Matrix",
      "description": "Output contrast matrix"
    },
    "output_summary": {
      "type": "string",
      "title": "Output Summary",
      "description": "Output search summary"
    },
    "output_log": {
      "type": "string",
      "title": "Output Log",
      "description": "Output log file"
    },
    "output_sviter": {
      "type": "string",
      "title": "Output Iteration Information",
      "description": "Output per-iteration information"
    }
  }
}