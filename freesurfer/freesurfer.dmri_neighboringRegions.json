{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A tool for diffusion MRI analysis involving neighboring regions.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.dmri_neighboringRegions"
    },
    "input_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input file",
      "description": "Input image file (e.g. img.nii.gz)"
    },
    "output_file": {
      "type": "string",
      "title": "Output file",
      "description": "Output result file (e.g. result.nii.gz)"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_file",
    "output_file"
  ]
}