{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_long_normalize",
  "description": "Tool to normalize the white-matter of MRI volumes, optionally based on control points.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri_long_normalize"
    },
    "input_vol": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Volume",
      "description": "Input MRI volume file."
    },
    "base_tp_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Base Time Point File",
      "description": "Base time point file."
    },
    "output_vol": {
      "type": "string",
      "title": "Output Volume",
      "description": "Output MRI volume file."
    },
    "normalization_iters": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Normalization Iterations",
      "description": "Use n 3D normalization iterations (default is 2)."
    },
    "disable_1d": {
      "type": "boolean",
      "default": false,
      "title": "Disable 1D Normalization Flag",
      "description": "Disable 1D normalization."
    },
    "smooth_bias": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Smooth Bias",
      "description": "Smooth the bias field."
    },
    "aseg": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Aseg",
      "description": "Aseg file specification."
    },
    "debug_gvx": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 3,
          "maxItems": 3
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Debug GVx",
      "description": "For debugging: specify Gvx, Gvy, Gvz."
    },
    "debug_gx": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 3,
          "maxItems": 3
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Debug GX",
      "description": "For debugging: specify Gx, Gy, Gz."
    },
    "reading": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 2,
          "maxItems": 2
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Reading",
      "description": "For reading: specify control points and bias field."
    },
    "print_usage": {
      "type": "boolean",
      "default": false,
      "title": "Print Usage Flag",
      "description": "Print usage information."
    }
  },
  "additionalProperties": false,
  "required": [
    "input_vol",
    "base_tp_file",
    "output_vol"
  ]
}