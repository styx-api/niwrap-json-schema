{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A script that runs freeview with arguments like tkregister, focusing on LTA files.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.tkregisterfv"
    },
    "mov": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Moving Volume",
      "description": "Moving image volume"
    },
    "targ": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Target Volume",
      "description": "Target image volume"
    },
    "reg": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Registration File",
      "description": "LTA registration file"
    },
    "subject": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subject Identifier",
      "description": "Subject identifier for FreeSurfer directories"
    },
    "fstarg": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "FSTarget Volume",
      "description": "Freesurfer target volume instead of orig.mgz"
    },
    "sd": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subjects Directory",
      "description": "FreeSurfer SUBJECTS_DIR environment variable"
    },
    "seg": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Segmentation Volume",
      "description": "Segmentation volume to load"
    },
    "aseg_flag": {
      "type": "boolean",
      "default": false,
      "title": "Load Aseg",
      "description": "Load aseg.mgz as segmentation volume"
    },
    "aparc_aseg_flag": {
      "type": "boolean",
      "default": false,
      "title": "Load Aparc+Aseg",
      "description": "Load aparc+aseg.mgz as segmentation volume"
    },
    "opacity": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Segmentation Opacity",
      "description": "Set segmentation volume opacity"
    },
    "surfs_flag": {
      "type": "boolean",
      "default": false,
      "title": "Load WM Surfaces",
      "description": "Load left and right hemisphere white matter surfaces"
    },
    "pial_surfs_flag": {
      "type": "boolean",
      "default": false,
      "title": "Load Pial Surfaces",
      "description": "Load pial surfaces instead of white matter surfaces"
    },
    "all_surfs_flag": {
      "type": "boolean",
      "default": false,
      "title": "Load All Surfaces",
      "description": "Load both pial and white matter surfaces"
    },
    "no_surfs_flag": {
      "type": "boolean",
      "default": false,
      "title": "No Surfaces",
      "description": "Do not load any surfaces"
    },
    "lh_only_flag": {
      "type": "boolean",
      "default": false,
      "title": "Left Hemisphere Only",
      "description": "Load only left hemisphere surface"
    },
    "rh_only_flag": {
      "type": "boolean",
      "default": false,
      "title": "Right Hemisphere Only",
      "description": "Load only right hemisphere surface"
    },
    "surf": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Load Explicit Surface",
      "description": "Explicit path to surface to load"
    },
    "aux_s": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Auxiliary Surface",
      "description": "Explicit path to auxiliary surface to load"
    },
    "plane": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Plane",
      "description": "Plane view: cor, sag, ax"
    },
    "no_config_flag": {
      "type": "boolean",
      "default": false,
      "title": "No Configuration Window",
      "description": "Do not automatically raise transform config window"
    },
    "mov2": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Second Moving Volume",
      "description": "Provide a second moving image volume"
    },
    "reg2": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Second Registration File",
      "description": "Provide a second registration file"
    },
    "mov3": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Third Moving Volume",
      "description": "Provide a third moving image volume"
    },
    "reg3": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Third Registration File",
      "description": "Provide a third registration file"
    },
    "heat_flag": {
      "type": "boolean",
      "default": false,
      "title": "Use Heat Map",
      "description": "Use heat map color tables for all volumes"
    },
    "regheader_flag": {
      "type": "boolean",
      "default": false,
      "title": "Regheader",
      "description": "Create registration file assuming the two volumes share a RAS"
    },
    "params": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Affine Matrix Parameters",
      "description": "Affine matrix parameters: translations in mm, rotations in degrees"
    },
    "flip_x_flag": {
      "type": "boolean",
      "default": false,
      "title": "Flip X-Axis",
      "description": "Regheader with rx=180"
    },
    "flip_y_flag": {
      "type": "boolean",
      "default": false,
      "title": "Flip Y-Axis",
      "description": "Regheader with ry=180"
    },
    "flip_z_flag": {
      "type": "boolean",
      "default": false,
      "title": "Flip Z-Axis",
      "description": "Regheader with rz=180"
    },
    "fstal": {
      "type": "boolean",
      "default": false,
      "title": "FSTalairach",
      "description": "Modify the talairach.xfm with subject"
    },
    "aux": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Auxiliary Volume",
      "description": "Load auxiliary volumes with registration"
    }
  },
  "additionalProperties": false,
  "required": [
    "reg"
  ]
}