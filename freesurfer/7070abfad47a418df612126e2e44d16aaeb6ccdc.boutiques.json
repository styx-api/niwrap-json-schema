{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Extracts values from surface, overlay, and annotation files and outputs them to a CSV file.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "mris_extract_values"
    },
    "surface": {
      "type": "string",
      "title": "Surface File",
      "description": "Path to the surface file"
    },
    "overlay": {
      "type": "string",
      "title": "Overlay File",
      "description": "Path to the overlay file"
    },
    "annotation": {
      "type": "string",
      "title": "Annotation File",
      "description": "Path to the annotation file"
    },
    "csvfile": {
      "type": "string",
      "title": "CSV Output File",
      "description": "Name of the output CSV file"
    },
    "num_images": {
      "type": "number",
      "title": "Number of Image Files",
      "description": "Number of image files to process"
    },
    "image_files": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Image Files",
      "description": "List of image files"
    }
  },
  "additionalProperties": false,
  "required": [
    "surface",
    "overlay",
    "annotation",
    "csvfile",
    "num_images",
    "image_files"
  ]
}