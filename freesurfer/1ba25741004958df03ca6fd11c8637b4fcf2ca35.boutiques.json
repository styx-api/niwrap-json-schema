{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Initialize long timepoint subject for recon-all processing.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "rca-long-tp-init"
    },
    "timepoint": {
      "type": "string",
      "title": "Timepoint",
      "description": "Timepoint identifier"
    },
    "base": {
      "type": "string",
      "title": "Base",
      "description": "Base identifier"
    },
    "use_long_base_ctrl_vol": {
      "type": "boolean",
      "default": false,
      "title": "Use Long Base Ctrl Vol Flag",
      "description": "Use long base control volume"
    },
    "hemisphere": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Hemisphere",
      "description": "Specify the hemisphere (left or right)"
    },
    "expert_opts": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Expert Options File",
      "description": "Expert options file"
    },
    "subject": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subject",
      "description": "Subject identifier for testing; put after -long"
    }
  },
  "additionalProperties": false,
  "required": [
    "timepoint",
    "base"
  ]
}