{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_dct_align_binary",
  "description": "A binary tool for aligning MRI images using DCT.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mri_dct_align_binary"
    },
    "source_image": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Source Image",
      "description": "Source image for alignment"
    },
    "destination_image": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Destination Image",
      "description": "Destination image for alignment"
    },
    "output_transformation": {
      "type": "string",
      "title": "Output Transformation",
      "description": "Output transformation file"
    }
  },
  "additionalProperties": false,
  "required": [
    "source_image",
    "destination_image",
    "output_transformation"
  ]
}