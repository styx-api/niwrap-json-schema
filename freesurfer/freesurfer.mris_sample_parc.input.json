{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_sample_parc",
  "description": "This program samples a volumetric parcellation onto a surface.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mris_sample_parc"
    },
    "subject_name": {
      "type": "string",
      "title": "Subject Name",
      "description": "The subject ID."
    },
    "hemisphere": {
      "type": "string",
      "title": "Hemisphere",
      "description": "Hemisphere: rh or lh."
    },
    "parc_name": {
      "type": "string",
      "title": "Parcellation Name",
      "description": "Parcellation filename."
    },
    "output_annot": {
      "type": "string",
      "title": "Output Annotation",
      "description": "Output annotation filename."
    },
    "sdir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subjects Directory",
      "description": "Use as subjects directory (default: $SUBJECTS_DIR)."
    },
    "surf": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Surface Filename",
      "description": "Use as surface (default: 'white')."
    },
    "fix": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Fix Topology",
      "description": "Fix topology of all labels smaller than the specified number of vertices (default=-1, do all)."
    },
    "replace": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Replace Label",
      "description": "Replace label with deeper ones."
    },
    "trans": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Translate Labels",
      "description": "Translate one label number to another."
    },
    "cortex": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Cortex Label",
      "description": "Mask regions outside of the specified cortex label."
    },
    "projmm": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Project Millimeters",
      "description": "Project the specified number of millimeters along surface normal (default=0.0)."
    },
    "proj": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Project",
      "description": "Same as -projmm."
    },
    "projfrac": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Project Fraction",
      "description": "Project the specified percent along surface normal (default=0.5)."
    },
    "file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Translation File",
      "description": "Use as translation file (default: 'cma_parcellation_colors.txt')."
    },
    "ct": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Color Table",
      "description": "Embed color table into output annotation file."
    },
    "v_level": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Diagnostic Level",
      "description": "Diagnostic level (default=0)."
    },
    "filter": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Mode Filter",
      "description": "Apply mode filter a specified number of times to parcellation (default=0)."
    },
    "smooth": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Smooth Surface",
      "description": "Smooth surface a specified number of times (default=0)."
    },
    "w_size": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Window Size",
      "description": "Use window size for sampling (default=7)."
    },
    "thickness": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Thickness File",
      "description": "Use thickness file (default: 'thickness')."
    },
    "change_unknown": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Change Unknown Region",
      "description": "Change largest connected unknown region to specified label (default: don't change)."
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Print help info."
    },
    "version": {
      "type": "boolean",
      "default": false,
      "title": "Version Flag",
      "description": "Print version info."
    }
  },
  "additionalProperties": false,
  "required": [
    "subject_name",
    "hemisphere",
    "parc_name",
    "output_annot",
    "@type"
  ]
}