{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "labels_union",
  "description": "Utility to create the union of two label files.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/labels_union"
    },
    "label1": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Label 1",
      "description": "First label file (e.g., rh.BA3a.label)"
    },
    "label2": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Label 2",
      "description": "Second label file (e.g., rh.BA3b.label)"
    },
    "outputname": {
      "type": "string",
      "title": "Output Name",
      "description": "Output name for the union label file (e.g., rh.BA3ab.union.label)"
    }
  },
  "additionalProperties": false,
  "required": [
    "label1",
    "label2",
    "outputname",
    "@type"
  ]
}