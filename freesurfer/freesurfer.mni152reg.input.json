{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mni152reg",
  "description": "Registers the FreeSurfer subject to the FSL MNI 152 brain to create a tkregister-style registration matrix.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mni152reg"
    },
    "subject": {
      "type": "string",
      "title": "Subject",
      "description": "FreeSurfer subject ID"
    },
    "register_1mm": {
      "type": "boolean",
      "default": false,
      "title": "Register 1mm flag",
      "description": "Register to 1mm target (instead of 2mm)"
    },
    "output": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output registration file",
      "description": "Explicitly set output registration file"
    },
    "symmetric": {
      "type": "boolean",
      "default": false,
      "title": "Symmetric target flag",
      "description": "Register to FSL symmetric target"
    },
    "save_volume": {
      "type": "boolean",
      "default": false,
      "title": "Save volume flag",
      "description": "Sample original to output space"
    }
  },
  "additionalProperties": false,
  "required": [
    "subject"
  ]
}