{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A tool to compute the joint density of two volumes.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.histo_compute_joint_density"
    },
    "volume1": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Volume 1",
      "description": "Input volume 1"
    },
    "volume2": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Volume 2",
      "description": "Input volume 2"
    },
    "joint_density_file": {
      "type": "string",
      "title": "Joint Density File",
      "description": "Output joint density file"
    }
  },
  "additionalProperties": false,
  "required": [
    "volume1",
    "volume2",
    "joint_density_file"
  ]
}