{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Image registration utility using 4dfp",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.imgreg_4dfp"
    },
    "target_image": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Target Image",
      "description": "Target image"
    },
    "target_mask": {
      "type": "string",
      "default": "none",
      "title": "Target Mask",
      "description": "Target mask"
    },
    "source_image": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Source Image",
      "description": "Source image"
    },
    "source_mask": {
      "type": "string",
      "default": "none",
      "title": "Source Mask",
      "description": "Source mask"
    },
    "t4file": {
      "type": "string",
      "title": "T4 File",
      "description": "Transformation file"
    },
    "mode": {
      "type": "string",
      "title": "Mode",
      "description": "Mode of operation"
    }
  },
  "additionalProperties": false,
  "required": [
    "target_image",
    "source_image",
    "t4file",
    "mode"
  ]
}