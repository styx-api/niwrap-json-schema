{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_edit_wm_with_aseg",
  "description": "A tool for editing white matter with anatomical segmentation.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mri_edit_wm_with_aseg"
    },
    "input_wm": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input white matter file",
      "description": "Input white matter file"
    },
    "input_t1_brain": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input T1/brain file",
      "description": "Input T1/brain file"
    },
    "aseg": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Anatomical segmentation file",
      "description": "Anatomical segmentation file"
    },
    "output_wm": {
      "type": "string",
      "title": "Output file",
      "description": "Output white matter file"
    },
    "fillven": {
      "type": "boolean",
      "default": false,
      "title": "Fill ven flag",
      "description": "Fill ventricular system"
    },
    "fix_scm_ha": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Fix SCM-HA",
      "description": "Remove voxels in amygdala, ILV, and parts of hippocampus"
    },
    "fix_scm_ha_only": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Fix SCM-HA only",
      "description": "Standalone: fix SCM using aseg.presurf.mgz"
    },
    "keep": {
      "type": "boolean",
      "default": false,
      "title": "Keep flag",
      "description": "Keep edits as found in output volume"
    },
    "keep_in": {
      "type": "boolean",
      "default": false,
      "title": "Keep in flag",
      "description": "Keep edits as found in input volume"
    },
    "lh": {
      "type": "boolean",
      "default": false,
      "title": "Left hemisphere flag",
      "description": "Erase right hemisphere labels from output"
    },
    "rh": {
      "type": "boolean",
      "default": false,
      "title": "Right hemisphere flag",
      "description": "Erase left hemisphere labels from output"
    },
    "fix_ento_wm": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Fix ento-WM",
      "description": "Insert lhval rhval where {3,4}006 and {3,4}201 in entowm volume"
    },
    "sa_fix_ento_wm": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Standalone fix ento-WM",
      "description": "Standalone version of fix ento-WM"
    },
    "debug_voxel": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Debug voxel",
      "description": "Specify a voxel to edit with coordinates Gx Gy Gz"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_wm",
    "input_t1_brain",
    "aseg",
    "output_wm",
    "@type"
  ]
}