{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_warp",
  "description": "This program will warp a surface using a specified deformation field.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mris_warp"
    },
    "deformvol": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Deformation Volume",
      "description": "Volume containing deformation"
    },
    "m3z": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "M3Z Deformation File",
      "description": "M3Z file containing deformation"
    },
    "regfile": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Registration File",
      "description": "register.dat file between surface and volume"
    },
    "surf": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Surface File",
      "description": "Surface file to warp"
    },
    "out": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output Surface File",
      "description": "Name for output surface (if does not contain '/', outputs to same directory as input surface)"
    },
    "abs": {
      "type": "boolean",
      "default": false,
      "title": "Absolute Displacement Flag",
      "description": "Absolute coordinate displacement convention (default)"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Print out information on how to use this program"
    },
    "version": {
      "type": "boolean",
      "default": false,
      "title": "Version Flag",
      "description": "Print out version and exit"
    }
  },
  "additionalProperties": false,
  "required": [
    "@type"
  ]
}