{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Computes the order of polynomial regressors needed to achieve a highpass filter with the given cutoff frequency.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "polyorder"
    },
    "ntp": {
      "type": "number",
      "title": "Number of Time Points",
      "description": "Number of time points (i.e., number of TRs)."
    },
    "tr": {
      "type": "number",
      "title": "TR (seconds)",
      "description": "TR in seconds."
    },
    "cutoff": {
      "type": "number",
      "title": "Cutoff Frequency (Hz)",
      "description": "Cutoff frequency in Hz."
    }
  },
  "additionalProperties": false,
  "required": [
    "ntp",
    "tr",
    "cutoff"
  ]
}