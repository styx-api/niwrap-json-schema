{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A tool for applying a bias volume to an input volume to produce an output volume.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri_apply_bias"
    },
    "input_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Volume",
      "description": "The input volume file"
    },
    "bias_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Bias Volume",
      "description": "The bias volume file"
    },
    "output_volume": {
      "type": "string",
      "title": "Output Volume",
      "description": "The output volume file"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_volume",
    "bias_volume",
    "output_volume"
  ]
}