{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_concatenate_lta",
  "description": "Concatenates two consecutive LTA transformations into one overall transformation, Out = LTA2*LTA1",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mri_concatenate_lta"
    },
    "lta_1": {
      "type": "string",
      "x-styx-type": "file",
      "title": "LTA 1 File",
      "description": "File for LTA transformation that maps some src1 to dst1"
    },
    "lta_2": {
      "type": "string",
      "x-styx-type": "file",
      "title": "LTA 2 File",
      "description": "File for LTA transformation that maps dst1 (src2) to dst2"
    },
    "lta_final": {
      "type": "string",
      "title": "LTA Final File",
      "description": "File for the combined LTA maps: src1 to dst2 = LTA2*LTA1"
    },
    "tal_src": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Talairach Source File",
      "description": "Specify source (file1) for Talairach transformation"
    },
    "tal_template": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Talairach Template File",
      "description": "Specify template (file2) for Talairach transformation"
    },
    "invert1": {
      "type": "boolean",
      "default": false,
      "title": "Invert LTA 1 Flag",
      "description": "Invert LTA1 before applying it"
    },
    "invert2": {
      "type": "boolean",
      "default": false,
      "title": "Invert LTA 2 Flag",
      "description": "Invert LTA2 before applying it"
    },
    "invertout": {
      "type": "boolean",
      "default": false,
      "title": "Invert Output LTA Flag",
      "description": "Invert output LTA"
    },
    "out_type": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output Type",
      "description": "Set final LTA type: 0 for VOX2VOX (default), 1 for RAS2RAS"
    },
    "subject": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subject",
      "description": "Set subject in output LTA"
    },
    "rmsdiff_radius": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "RMS Diff Radius",
      "description": "Radius used for computing RMS diff between transforms"
    },
    "rmsdiff_outputfile": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "RMS Diff Output File",
      "description": "Output file for RMS diff computation. Use 'nofile' to skip output"
    }
  },
  "additionalProperties": false,
  "required": [
    "lta_1",
    "lta_2",
    "lta_final",
    "@type"
  ]
}