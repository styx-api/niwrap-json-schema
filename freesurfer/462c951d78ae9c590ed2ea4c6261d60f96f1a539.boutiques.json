{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Tool for mapping labels onto subject surfaces",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.map_all_labels"
    },
    "which": {
      "type": "string",
      "title": "Which to map",
      "description": "Select what to map (e.g. coords, label, vals, curv, area)"
    },
    "fname": {
      "type": "string",
      "title": "Filename",
      "description": "Filename related to the mapping"
    },
    "hemi": {
      "type": "string",
      "title": "Hemisphere",
      "description": "Hemisphere to process (e.g. lh, rh)"
    },
    "spherical_surf": {
      "type": "string",
      "title": "Spherical surface",
      "description": "Spherical surface to use"
    },
    "subjects": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Subjects",
      "description": "List of subject identifiers"
    },
    "output": {
      "type": "string",
      "title": "Output",
      "description": "Output path"
    }
  },
  "additionalProperties": false,
  "required": [
    "which",
    "fname",
    "hemi",
    "spherical_surf",
    "subjects",
    "output"
  ]
}