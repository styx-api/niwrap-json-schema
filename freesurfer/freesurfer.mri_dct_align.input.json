{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_dct_align",
  "description": "MRI DCT alignment tool from FreeSurfer",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri_dct_align"
    },
    "source": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Source",
      "description": "Source image file"
    },
    "destination": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Destination",
      "description": "Destination image file"
    },
    "output_xform": {
      "type": "string",
      "title": "Output Transformation",
      "description": "Output transformation file"
    }
  },
  "additionalProperties": false,
  "required": [
    "source",
    "destination",
    "output_xform"
  ]
}