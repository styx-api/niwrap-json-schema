{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Non-linear alignment tool for MRI data",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri_nl_align_binary"
    },
    "source_file": {
      "type": "string",
      "title": "Source File",
      "description": "Source image file for alignment"
    },
    "target_file": {
      "type": "string",
      "title": "Target File",
      "description": "Target image file for alignment"
    },
    "warp_file": {
      "type": "string",
      "title": "Warp File",
      "description": "Output warp file"
    }
  },
  "additionalProperties": false,
  "required": [
    "source_file",
    "target_file",
    "warp_file"
  ]
}