{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A tool for linear alignment of MRI images",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri_linear_align_binary"
    },
    "source": {
      "type": "string",
      "title": "Source",
      "description": "Source image file"
    },
    "target": {
      "type": "string",
      "title": "Target",
      "description": "Target image file"
    },
    "output_xform": {
      "type": "string",
      "title": "Output Transformation",
      "description": "Output transformation file"
    },
    "target_label": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Target Label",
      "description": "Target label, assume source is high-resolution hippocampal labeling"
    }
  },
  "additionalProperties": false,
  "required": [
    "source",
    "target",
    "output_xform"
  ]
}