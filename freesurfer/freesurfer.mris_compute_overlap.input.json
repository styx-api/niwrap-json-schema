{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_compute_overlap",
  "description": "Tool to compute the overlap between two or more labels on a cortical surface.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mris_compute_overlap"
    },
    "subject": {
      "type": "string",
      "title": "Subject Name",
      "description": "Subject name"
    },
    "hemi": {
      "type": "string",
      "title": "Hemisphere",
      "description": "Hemisphere (e.g. lh or rh)"
    },
    "surface": {
      "type": "string",
      "title": "Surface Name",
      "description": "Surface name"
    },
    "annotation": {
      "type": "string",
      "title": "Annotation Name",
      "description": "Annotation name"
    },
    "labels": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Labels",
      "description": "Labels to compute overlap for"
    },
    "percentage": {
      "type": "boolean",
      "default": false,
      "title": "Percentage Flag",
      "description": "Compute brain area as a percentage of all brain labels"
    },
    "log_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Log File",
      "description": "Log results to file, where %d will include label number"
    },
    "brain_volume": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Brain Volume",
      "description": "Load brain volume and use it to normalize areas"
    }
  },
  "additionalProperties": false,
  "required": [
    "subject",
    "hemi",
    "surface",
    "annotation",
    "labels",
    "@type"
  ]
}