{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A tool for extracting focal cortical dysplasia features.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "mri_extract_fcd_features"
    },
    "subject": {
      "type": "string",
      "title": "Subject",
      "description": "The subject identifier."
    },
    "hemi": {
      "type": "string",
      "title": "Hemisphere",
      "description": "The hemisphere (e.g., lh or rh)."
    },
    "output_file": {
      "type": "string",
      "title": "Output File",
      "description": "Output file path."
    },
    "subjects_dir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subjects Directory",
      "description": "Specify SUBJECTS_DIR on the command line instead of in the environment."
    }
  },
  "additionalProperties": false,
  "required": [
    "subject",
    "hemi",
    "output_file"
  ]
}