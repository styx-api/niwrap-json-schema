{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "segment_subject",
  "description": "Front-end for MINCs mritotal to compute the Talairach transform that maps the input volume to the MNI305 space.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/segment_subject"
    },
    "input_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Volume",
      "description": "Input volume"
    },
    "output_xfm": {
      "type": "string",
      "title": "Output Transformation",
      "description": "Output transformation file"
    },
    "log_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Log File",
      "description": "Log file. Default is outdir/talarach.log"
    },
    "help_flag": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Print help and exit"
    },
    "debug_flag": {
      "type": "boolean",
      "default": false,
      "title": "Debug Flag",
      "description": "Turn on debugging"
    },
    "version_flag": {
      "type": "boolean",
      "default": false,
      "title": "Version Flag",
      "description": "Print version and exit"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_volume",
    "output_xfm",
    "@type"
  ]
}