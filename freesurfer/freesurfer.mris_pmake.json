{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Calculates paths and related costs on FreeSurfer surfaces based on an edge cost and Dijkstra's algorithm.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_pmake"
    },
    "options_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": "options.txt",
      "title": "Options File",
      "description": "The main configuration file specifying the startup run-time behaviour."
    },
    "working_dir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": ".",
      "title": "Working Directory",
      "description": "The working directory."
    },
    "listen_mode": {
      "type": "boolean",
      "default": false,
      "title": "Listen Mode",
      "description": "Start in LISTEN mode without calculating a path."
    },
    "listen_on_port": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Listen on Port",
      "description": "Create the server port on specified port and do nothing else."
    },
    "subject": {
      "type": "string",
      "title": "Subject",
      "description": "Set the subject to <subj>."
    },
    "hemisphere": {
      "type": "string",
      "title": "Hemisphere",
      "description": "The hemisphere to process."
    },
    "surface0": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": "inflated",
      "title": "Surface0 File",
      "description": "The main mesh surface to read."
    },
    "surface1": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": "smoothwm",
      "title": "Surface1 File",
      "description": "The aux mesh surface to read."
    },
    "curve0": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": "smoothwm.H.crv",
      "title": "Curve0 File",
      "description": "The main curvature function maps."
    },
    "curve1": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": "sulc",
      "title": "Curve1 File",
      "description": "The aux curvature function maps."
    },
    "use_abs_curvs": {
      "type": "boolean",
      "default": false,
      "title": "Use Absolute Curvatures",
      "description": "Use absolute values on each curvature map."
    },
    "mpm_prog": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "MPM Prog",
      "description": "The mpmProg to run."
    },
    "mpm_args": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "MPM Arguments",
      "description": "Arguments for the specified mpmProg."
    }
  },
  "additionalProperties": false,
  "required": [
    "subject",
    "hemisphere"
  ]
}