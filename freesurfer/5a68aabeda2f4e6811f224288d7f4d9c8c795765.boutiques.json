{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "This program adds a template into an average surface.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "mris_remove_negative_vertices"
    },
    "surface_file": {
      "type": "string",
      "title": "Surface File",
      "description": "Input surface file"
    },
    "patch_file": {
      "type": "string",
      "title": "Patch File",
      "description": "Patch file name"
    },
    "output_patch": {
      "type": "string",
      "title": "Output Patch",
      "description": "Output patch file"
    }
  },
  "additionalProperties": false,
  "required": [
    "surface_file",
    "patch_file",
    "output_patch"
  ]
}