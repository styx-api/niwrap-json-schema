{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A tool to compute volume intensities for a given input intensity volume and volume fraction stem.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri_compute_volume_intensities"
    },
    "input_intensity": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Intensity Volume",
      "description": "Input intensity volume"
    },
    "volume_fraction_stem": {
      "type": "string",
      "title": "Volume Fraction Stem",
      "description": "Volume fraction stem"
    },
    "output_volume": {
      "type": "string",
      "title": "Output Volume",
      "description": "Output volume file"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_intensity",
    "volume_fraction_stem",
    "output_volume"
  ]
}