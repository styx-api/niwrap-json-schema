{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "histo_register_block",
  "description": "A tool to align a histological slice with a block face image.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.histo_register_block"
    },
    "seg_time1": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Segmented Time 1",
      "description": "Segmented image at time point 1"
    },
    "seg_time2": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Segmented Time 2",
      "description": "Segmented image at time point 2"
    },
    "transform1": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Transform 1",
      "description": "Transformation file for time point 1"
    },
    "transform2": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Transform 2",
      "description": "Transformation file for time point 2"
    },
    "output_file": {
      "type": "string",
      "title": "Output File",
      "description": "Output file name for the aligned image"
    },
    "out_like": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Reference Volume",
      "description": "Set output volume parameters like the reference volume"
    },
    "invert_transform": {
      "type": "boolean",
      "default": false,
      "title": "Invert Transform Flag",
      "description": "Invert transform coordinates"
    }
  },
  "additionalProperties": false,
  "required": [
    "seg_time1",
    "seg_time2",
    "transform1",
    "transform2",
    "output_file"
  ]
}