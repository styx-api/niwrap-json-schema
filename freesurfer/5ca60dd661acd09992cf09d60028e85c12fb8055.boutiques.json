{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A program to average the orig surfaces from the given subject list into a single surface using Talairach coords and the spherical transform.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "mris_make_average_surface"
    },
    "hemi": {
      "type": "string",
      "title": "Hemisphere",
      "description": "Hemisphere, lh or rh"
    },
    "outsurfname": {
      "type": "string",
      "title": "Output Surface Name",
      "description": "Output surface name (e.g., avg_orig)"
    },
    "cansurfname": {
      "type": "string",
      "title": "Canonical Surface Name",
      "description": "Registration surface (e.g., sphere.reg)"
    },
    "outsubject": {
      "type": "string",
      "title": "Output Subject",
      "description": "Name of subject to store the results in"
    },
    "subjects": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Subjects",
      "description": "List of subjects to average"
    },
    "sdir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subjects Directory",
      "description": "Use sdir instead of SUBJECTS_DIR"
    },
    "sdir_out": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output Subjects Directory",
      "description": "Save results in sdirout/outsubject instead of SUBJECTS_DIR/outsubject"
    },
    "nonorm_flag": {
      "type": "boolean",
      "default": false,
      "title": "No Normalization Flag",
      "description": "Do not normalize area"
    },
    "icoorder": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Icosahedron Order",
      "description": "Use given icosahedron order (default is 7)"
    },
    "xfmname": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Transform Name",
      "description": "Use transforms/xfmname instead of talairach.xfm"
    },
    "templatename": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Template Name",
      "description": "Volume to use as geometry template for output surfaces"
    },
    "surfname": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Surface Name",
      "description": "Use surfname instead of orig"
    },
    "surf2surf_flag": {
      "type": "boolean",
      "default": false,
      "title": "Surf2Surf Transform Flag",
      "description": "Use surf2surf transform instead of parametric surface"
    },
    "simple": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Simple Average Surface",
      "description": "Compute an average surface from the list of surfaces. All surfaces must have same number of vertices."
    },
    "diagno": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Diagnostic Number",
      "description": "Set Gdiag_no to diagno"
    }
  },
  "additionalProperties": false,
  "required": [
    "hemi",
    "outsurfname",
    "cansurfname",
    "outsubject",
    "subjects"
  ]
}