{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_niters2fwhm",
  "description": "Convert number of iterations to full width at half maximum (FWHM) for surface.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mris_niters2fwhm"
    },
    "subject": {
      "type": "string",
      "title": "Subject",
      "description": "Subject identifier"
    },
    "hemi": {
      "type": "string",
      "title": "Hemisphere",
      "description": "Hemisphere (e.g., lh or rh)"
    },
    "surf": {
      "type": "string",
      "title": "Surface",
      "description": "Surface type (e.g., white, pial)"
    },
    "dof": {
      "type": "number",
      "title": "Degrees of Freedom",
      "description": "Degrees of Freedom"
    },
    "niters": {
      "type": "number",
      "title": "Number of Iterations",
      "description": "Maximum number of iterations"
    },
    "debug": {
      "type": "boolean",
      "default": false,
      "title": "Debug Flag",
      "description": "Turn on debugging"
    },
    "checkopts": {
      "type": "boolean",
      "default": false,
      "title": "Checkopts Flag",
      "description": "Don't run anything, just check options and exit"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Print out information on how to use this program"
    },
    "version": {
      "type": "boolean",
      "default": false,
      "title": "Version Flag",
      "description": "Print out version and exit"
    }
  },
  "additionalProperties": false,
  "required": [
    "subject",
    "hemi",
    "surf",
    "dof",
    "niters",
    "@type"
  ]
}