{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_transform",
  "description": "Applies a linear transform to an MRI volume and writes out the result.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri_transform"
    },
    "input_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Volume",
      "description": "Input MRI volume"
    },
    "lta_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "LTA File",
      "description": "Linear Transform Array (LTA) file"
    },
    "output_file": {
      "type": "string",
      "title": "Output File",
      "description": "Output file for the transformed MRI volume"
    },
    "out_like": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output Like",
      "description": "Set output volume parameters like the reference volume"
    },
    "invert": {
      "type": "boolean",
      "default": false,
      "title": "Invert Transform",
      "description": "Invert transform coordinates"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_volume",
    "lta_file",
    "output_file"
  ]
}