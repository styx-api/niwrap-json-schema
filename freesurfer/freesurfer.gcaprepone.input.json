{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "gcaprepone",
  "description": "Tool for preparing FreeSurfer subjects for use with group-wise template generation.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.gcaprepone"
    },
    "gcadir": {
      "type": "string",
      "title": "GCA Directory",
      "description": "Directory to be the new SUBJECTS_DIR"
    },
    "subject": {
      "type": "string",
      "title": "Subject",
      "description": "Subject for the process"
    },
    "init_subject": {
      "type": "boolean",
      "default": false,
      "title": "Initial Subject Flag",
      "description": "Flag indicating the initial subject"
    },
    "source_subjects_dir": {
      "type": "string",
      "title": "Source SUBJECTS_DIR",
      "description": "SUBJECTS_DIR for source data"
    },
    "done_file": {
      "type": "string",
      "title": "Done File",
      "description": "File to indicate completion"
    },
    "no_emreg": {
      "type": "boolean",
      "default": false,
      "title": "No EMReg Flag",
      "description": "Flag to skip EM registration"
    }
  },
  "additionalProperties": false,
  "required": [
    "gcadir",
    "subject",
    "source_subjects_dir",
    "done_file"
  ]
}