{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "spm_t_to_b",
  "description": "Converts SPM format to Bshort format.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.spm_t_to_b"
    },
    "spm_stem_format": {
      "type": "string",
      "title": "SPM Stem Format",
      "description": "Input SPM stem format."
    },
    "bshort_stem": {
      "type": "string",
      "title": "Bshort Stem",
      "description": "Output bshort stem."
    }
  },
  "additionalProperties": false,
  "required": [
    "spm_stem_format",
    "bshort_stem"
  ]
}