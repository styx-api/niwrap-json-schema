{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A tool for unpacking MINC format images",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.unpack_mnc.tcl"
    },
    "verbose": {
      "type": "boolean",
      "default": false,
      "title": "Verbose Flag",
      "description": "Verbose output messages"
    },
    "output_dir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output Directory",
      "description": "Output directory for unpacked files"
    },
    "input_file": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Input File",
      "description": "Specify a custom input file for unpacking"
    }
  },
  "additionalProperties": false
}