{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_joint_density",
  "description": "Tool for computing joint density from two volumes",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri_joint_density"
    },
    "vol1": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Volume 1",
      "description": "First input volume"
    },
    "vol2": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Volume 2",
      "description": "Second input volume"
    },
    "output_density_file": {
      "type": "string",
      "title": "Output Density File",
      "description": "Output joint density file"
    }
  },
  "additionalProperties": false,
  "required": [
    "vol1",
    "vol2",
    "output_density_file"
  ]
}