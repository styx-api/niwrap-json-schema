{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Tool to modify WM segmentation so that all neighbors of WM voxels have a common face.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "mri_pretess"
    },
    "filledvol": {
      "type": "string",
      "title": "Filled Volume",
      "description": "Input filled volume, usually wm.mgz"
    },
    "labelstring": {
      "type": "string",
      "title": "Label String",
      "description": "Label string, usually wm"
    },
    "normvol": {
      "type": "string",
      "title": "Normalization Volume",
      "description": "Normalization volume, usually norm.mgz"
    },
    "newfilledvol": {
      "type": "string",
      "title": "New Filled Volume",
      "description": "New filled volume output, usually wm.mgz"
    },
    "debug_voxel": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 3,
          "maxItems": 3
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Debug Voxel Coordinates",
      "description": "Specify the voxel to debug with coordinates C R S"
    },
    "nocorners": {
      "type": "boolean",
      "default": false,
      "title": "No Corners Flag",
      "description": "No removal of corner configurations in addition to edge ones"
    },
    "write": {
      "type": "boolean",
      "default": false,
      "title": "Write Flag",
      "description": "Turn on diagnostic writing"
    },
    "keep": {
      "type": "boolean",
      "default": false,
      "title": "Keep Edits Flag",
      "description": "Keep WM edits"
    },
    "test": {
      "type": "boolean",
      "default": false,
      "title": "Test Flag",
      "description": "Adds a voxel to test removal by mri_pretess, retained with -keep. Output not saved."
    }
  },
  "additionalProperties": false,
  "required": [
    "filledvol",
    "labelstring",
    "normvol",
    "newfilledvol"
  ]
}