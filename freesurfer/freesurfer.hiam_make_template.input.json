{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "hiam_make_template",
  "description": "This program adds a template into an average surface using FreeSurfer.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.hiam_make_template"
    },
    "hemi": {
      "type": "string",
      "title": "Hemisphere",
      "description": "Hemisphere to be processed (e.g. lh or rh)"
    },
    "surface_name": {
      "type": "string",
      "title": "Surface Name",
      "description": "Name of the surface"
    },
    "subjects": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Subjects",
      "description": "List of subject identifiers"
    },
    "output_name": {
      "type": "string",
      "title": "Output Name",
      "description": "Name of the output template"
    }
  },
  "additionalProperties": false,
  "required": [
    "hemi",
    "surface_name",
    "subjects",
    "output_name"
  ]
}