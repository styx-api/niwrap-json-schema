{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mri_edit_segmentation",
  "description": "A tool used for editing segmentations.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mri_edit_segmentation"
    },
    "input_segmentation": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Segmentation",
      "description": "Input segmentation file."
    },
    "t1_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "T1 Volume",
      "description": "T1 volume file."
    },
    "output_segmentation": {
      "type": "string",
      "title": "Output Segmentation",
      "description": "Output segmentation file."
    }
  },
  "additionalProperties": false,
  "required": [
    "input_segmentation",
    "t1_volume",
    "output_segmentation"
  ]
}