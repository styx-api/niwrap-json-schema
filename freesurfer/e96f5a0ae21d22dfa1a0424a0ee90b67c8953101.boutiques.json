{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Converts values in a volume or surface overlay to a label using specified parameters.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "mri_vol2label"
    },
    "input": {
      "type": "string",
      "title": "Input file",
      "description": "Input volume or surface overlay."
    },
    "label_id": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Label ID",
      "description": "Value to match in the input."
    },
    "threshold": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Threshold",
      "description": "Threshold the input to make label (i.e., input > threshold) instead of using Label ID."
    },
    "label_file": {
      "type": "string",
      "title": "Label file",
      "description": "Name of output label file."
    },
    "vol_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Volume file",
      "description": "Write label volume in this file."
    },
    "surf_subject_hemi": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Surface subject and hemisphere",
      "description": "Interpret input as surface overlay with the given subject and hemisphere (optionally with surface)."
    },
    "surf_path": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Surface path",
      "description": "Specify surface path instead of subject/hemi."
    },
    "opt_params": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Optimization parameters",
      "description": "Treats input as a probability map. Format: target delta valmap."
    },
    "remove_holes": {
      "type": "boolean",
      "default": false,
      "title": "Remove holes and islands flag",
      "description": "Remove holes in label and islands (with --surf only)."
    },
    "dilations": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of dilations",
      "description": "Dilate label (with --surf only)."
    },
    "erosions": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Number of erosions",
      "description": "Erode label (with --surf only)."
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help flag",
      "description": "Print out help information."
    }
  },
  "additionalProperties": false,
  "required": [
    "input",
    "label_file"
  ]
}