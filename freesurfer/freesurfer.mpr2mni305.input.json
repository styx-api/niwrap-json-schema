{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mpr2mni305",
  "description": "Tool for transforming MPRAGE dataset to MNI305 coordinate space",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mpr2mni305"
    },
    "mpr_anat": {
      "type": "string",
      "title": "MPR Anatomic Input",
      "description": "MPRAGE anatomical input file (e.g., 131)"
    }
  },
  "additionalProperties": false,
  "required": [
    "mpr_anat"
  ]
}