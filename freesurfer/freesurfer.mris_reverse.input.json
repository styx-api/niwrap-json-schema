{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_reverse",
  "description": "This tool reverses a cortical surface.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/mris_reverse"
    },
    "input_surface": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Surface",
      "description": "Input cortical surface file."
    },
    "output_surface": {
      "type": "string",
      "title": "Output Surface",
      "description": "Output cortical surface file."
    }
  },
  "additionalProperties": false,
  "required": [
    "input_surface",
    "output_surface"
  ]
}