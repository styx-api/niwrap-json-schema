{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Tool for registering brain MR volumes.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.register_subject"
    },
    "input_volume": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Input Volume",
      "description": "Input volume for registration (e.g., brain.mgz)"
    },
    "mask_volume": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Mask Volume",
      "description": "MR volume used to mask input volume."
    },
    "control_points": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Control Points",
      "description": "Control points used for registration."
    },
    "output_directory": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output Directory",
      "description": "Directory to write output files (e.g., transformed fsamples)."
    },
    "log_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Log File",
      "description": "Log file for recording registration results."
    },
    "gca_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "GCA File",
      "description": "GCA file required for registration."
    }
  },
  "additionalProperties": false
}