{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Converts 4dfp formatted files to Analyze format.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.4dfptoanalyze"
    },
    "input_file": {
      "type": "string",
      "title": "Input file",
      "description": "Input 4dfp filename"
    },
    "scale_factor": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Scale factor",
      "description": "Scale output values by specified factor"
    },
    "output_8bit": {
      "type": "boolean",
      "default": false,
      "title": "Output 8bit flag",
      "description": "Output 8 bit unsigned char"
    },
    "spm99": {
      "type": "boolean",
      "default": false,
      "title": "SPM99 flag",
      "description": "Include origin and scale in hdr"
    },
    "endianness": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Endianness",
      "description": "Output big or little endian (default CPU endian)"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_file"
  ]
}