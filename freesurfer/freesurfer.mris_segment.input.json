{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mris_segment",
  "description": "A command-line tool for segmenting surfaces in FreeSurfer",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_segment"
    },
    "subjects": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Input Subjects",
      "description": "A list of input subjects"
    },
    "output_subject": {
      "type": "string",
      "title": "Output Subject",
      "description": "Output subject name"
    },
    "output_file": {
      "type": "string",
      "title": "Output File",
      "description": "Output file path"
    }
  },
  "additionalProperties": false,
  "required": [
    "subjects",
    "output_subject",
    "output_file"
  ]
}