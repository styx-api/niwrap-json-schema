{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Tool to compute a distance map of each point on the surface to a reference point.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_distance_map"
    },
    "input_surface_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input Surface File",
      "description": "Input surface file"
    },
    "output_scalar_field": {
      "type": "string",
      "title": "Output Scalar Field",
      "description": "Output scalar field (.mgz)"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_surface_file",
    "output_scalar_field"
  ]
}