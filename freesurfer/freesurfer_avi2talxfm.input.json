{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "avi2talxfm",
  "description": "Convert voxel-to-voxel transform to MNI transform.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/avi2talxfm"
    },
    "input_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input volume",
      "description": "Input volume file"
    },
    "target_volume": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Target volume",
      "description": "Target volume file"
    },
    "vox2vox_transform": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Voxel-to-voxel transform",
      "description": "Voxel-to-voxel transform file"
    },
    "output_xfm": {
      "type": "string",
      "title": "Output XFM file",
      "description": "Output MNI transform file"
    }
  },
  "additionalProperties": false,
  "required": [
    "input_volume",
    "target_volume",
    "vox2vox_transform",
    "output_xfm"
  ]
}