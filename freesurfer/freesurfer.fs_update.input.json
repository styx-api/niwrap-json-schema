{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "fs_update",
  "description": "Utility to update the FreeSurfer installation",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer/fs_update"
    },
    "update_path": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Update Path",
      "description": "Path to specific files or directories to update, copied recursively"
    },
    "help_short": {
      "type": "boolean",
      "default": false,
      "title": "Help Short Flag",
      "description": "Show help"
    },
    "help_medium": {
      "type": "boolean",
      "default": false,
      "title": "Help Medium Flag"
    },
    "help_long": {
      "type": "boolean",
      "default": false,
      "title": "Help Long Flag"
    }
  },
  "additionalProperties": false,
  "required": [
    "@type"
  ]
}