{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Computes volume fractions based on a given surface and volume.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.mris_compute_volume_fractions"
    },
    "volume_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Volume file",
      "description": "Input volume file."
    },
    "surface_file": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Surface file",
      "description": "Input surface file."
    },
    "accuracy": {
      "type": "number",
      "title": "Accuracy",
      "description": "Required accuracy."
    },
    "output_file": {
      "type": "string",
      "title": "Output file",
      "description": "Output volume file for the fractions."
    },
    "debug": {
      "type": "boolean",
      "default": false,
      "title": "Debug flag",
      "description": "Turn on debugging."
    },
    "checkopts": {
      "type": "boolean",
      "default": false,
      "title": "Check options flag",
      "description": "Don't run anything, just check options and exit."
    }
  },
  "additionalProperties": false,
  "required": [
    "volume_file",
    "surface_file",
    "accuracy",
    "output_file"
  ]
}