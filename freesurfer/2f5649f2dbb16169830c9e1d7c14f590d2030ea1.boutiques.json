{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Creates an average subject by averaging surfaces, curvatures, and volumes from a set of subjects.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.make_average_subject"
    },
    "subjects": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Subjects",
      "description": "List of subject names"
    },
    "fsgd_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "FSGD file",
      "description": "Get subject list from a FreeSurfer Group Descriptor file"
    },
    "subject_list_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subject list file",
      "description": "Text file containing all subject names"
    },
    "average_subject_name": {
      "type": "string",
      "title": "Average subject name",
      "description": "Name of the average subject"
    },
    "sd_out": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output directory",
      "description": "Directory to put output under instead of SUBJECTS_DIR"
    },
    "no_link": {
      "type": "boolean",
      "default": false,
      "title": "No link flag",
      "description": "Do not link back to the original SUBJECTS_DIR with --sd-out"
    },
    "sdir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Subjects directory",
      "description": "Use an alternative SUBJECTS_DIR instead of the default one in the environment"
    },
    "ico_order": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": 7,
      "title": "Icosahedron order",
      "description": "Change order of icosahedron"
    },
    "transform_file": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Transform file",
      "description": "Filename of transform file"
    },
    "surface_registration": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": "sphere.reg",
      "title": "Surface registration",
      "description": "Alternative registration surface name"
    },
    "no_surfaces": {
      "type": "boolean",
      "default": false,
      "title": "No surfaces flag",
      "description": "Do not make average surfaces"
    },
    "no_volumes": {
      "type": "boolean",
      "default": false,
      "title": "No volumes flag",
      "description": "Do not make average volumes"
    },
    "force": {
      "type": "boolean",
      "default": false,
      "title": "Force flag",
      "description": "Overwrite existing average subject data"
    },
    "keep_all_orig": {
      "type": "boolean",
      "default": false,
      "title": "Keep all original flag",
      "description": "Concatenate all original volumes into mri/orig.all.mgz"
    },
    "no_symlink": {
      "type": "boolean",
      "default": false,
      "title": "No symlink flag",
      "description": "Do not use symbolic links with surfaces, copy files instead"
    },
    "no_ribbon": {
      "type": "boolean",
      "default": false,
      "title": "No ribbon flag",
      "description": "Do not create ribbon.mgz and aparc+aseg.mgz files"
    },
    "no_surf2surf": {
      "type": "boolean",
      "default": false,
      "title": "No surf2surf flag",
      "description": "Use old parametric surface mapping method"
    },
    "rca_threads": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "RCA threads",
      "description": "Number of threads to pass to recon-all"
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help flag",
      "description": "Show short descriptive help"
    },
    "version": {
      "type": "boolean",
      "default": false,
      "title": "Version flag",
      "description": "Show script version info"
    },
    "echo": {
      "type": "boolean",
      "default": false,
      "title": "Echo flag",
      "description": "Enable command echo for debugging"
    },
    "debug": {
      "type": "boolean",
      "default": false,
      "title": "Debug flag",
      "description": "Enable debug mode, same as --echo"
    }
  },
  "additionalProperties": false,
  "required": [
    "subjects",
    "average_subject_name"
  ]
}