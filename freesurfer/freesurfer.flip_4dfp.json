{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A tool to flip 4dfp images along specified axes.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.flip_4dfp"
    },
    "input_image": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input image",
      "description": "Input 4dfp image file"
    },
    "output_image": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output image",
      "description": "Output 4dfp image file. Default is input image root with '_flip' suffix."
    },
    "flip_x": {
      "type": "boolean",
      "default": false,
      "title": "Flip X",
      "description": "Flip along x-axis"
    },
    "flip_y": {
      "type": "boolean",
      "default": false,
      "title": "Flip Y",
      "description": "Flip along y-axis"
    },
    "flip_z": {
      "type": "boolean",
      "default": false,
      "title": "Flip Z",
      "description": "Flip along z-axis"
    },
    "endianness": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Endianness",
      "description": "Specify output endianness: 'b' for big endian, 'l' for little endian. Default is input endianness."
    }
  },
  "additionalProperties": false,
  "required": [
    "input_image"
  ]
}