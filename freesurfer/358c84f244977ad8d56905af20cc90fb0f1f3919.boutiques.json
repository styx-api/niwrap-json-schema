{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Tool for modifying MRI image headers",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "mri_modify"
    },
    "x_ras": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "title": "X RAS Cosines",
      "description": "X direction cosines (xr, xa, xs)"
    },
    "y_ras": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "title": "Y RAS Cosines",
      "description": "Y direction cosines (yr, ya, ys)"
    },
    "z_ras": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "title": "Z RAS Cosines",
      "description": "Z direction cosines (zr, za, zs)"
    },
    "cras": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "title": "Center RAS",
      "description": "Center RAS coordinates (cr, ca, cs)"
    },
    "x_size": {
      "type": "number",
      "title": "X Size",
      "description": "Size of voxel in X dimension"
    },
    "y_size": {
      "type": "number",
      "title": "Y Size",
      "description": "Size of voxel in Y dimension"
    },
    "z_size": {
      "type": "number",
      "title": "Z Size",
      "description": "Size of voxel in Z dimension"
    },
    "tr": {
      "type": "number",
      "title": "Repetition Time",
      "description": "Repetition time (TR)"
    },
    "te": {
      "type": "number",
      "title": "Echo Time",
      "description": "Echo time (TE)"
    },
    "ti": {
      "type": "number",
      "title": "Inversion Time",
      "description": "Inversion time (TI)"
    },
    "fa": {
      "type": "number",
      "title": "Flip Angle",
      "description": "Flip angle (degrees)"
    },
    "xform": {
      "type": "string",
      "title": "Transformation File",
      "description": "New transformation file name"
    },
    "input_volume": {
      "type": "string",
      "title": "Input Volume",
      "description": "Input volume"
    },
    "output_volume": {
      "type": "string",
      "title": "Output Volume",
      "description": "Output volume"
    }
  },
  "additionalProperties": false,
  "required": [
    "x_ras",
    "y_ras",
    "z_ras",
    "cras",
    "x_size",
    "y_size",
    "z_size",
    "tr",
    "te",
    "ti",
    "fa",
    "xform",
    "input_volume",
    "output_volume"
  ]
}