{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "fs_temp_file",
  "description": "Generates and creates an empty temporary file, printing the resulting path to stdout.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "freesurfer.fs_temp_file"
    },
    "base_dir": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Base Directory",
      "description": "Manually specify base temporary directory."
    },
    "base_dir_alt": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Base Directory (Alternative)",
      "description": "Manually specify base temporary directory."
    },
    "suffix": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "File Suffix",
      "description": "Optional file suffix."
    },
    "suffix_alt": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "File Suffix (Alternative)",
      "description": "Optional file suffix."
    },
    "scratch": {
      "type": "boolean",
      "default": false,
      "title": "Scratch Directory Flag",
      "description": "Use /scratch directory if available, but FS_TMPDIR takes priority."
    },
    "help": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag",
      "description": "Print help text and exit."
    },
    "help_alt": {
      "type": "boolean",
      "default": false,
      "title": "Help Flag (Alternative)",
      "description": "Print help text and exit."
    }
  },
  "additionalProperties": false
}