{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RebaseTensorImage",
  "description": "Rebase Tensor Image using specified dimensionality and method.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "ants/RebaseTensorImage"
    },
    "dimension": {
      "type": "integer",
      "title": "Dimension",
      "description": "The dimensionality of the input image."
    },
    "infile": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Input File",
      "description": "The input image file."
    },
    "outfile": {
      "type": "string",
      "x-styx-type": "file",
      "title": "Output File",
      "description": "The output image file."
    },
    "method": {
      "type": "string",
      "enum": [
        "PHYSICAL",
        "LOCAL"
      ],
      "title": "Method",
      "description": "Method of rebasing the tensor image."
    },
    "reference": {
      "anyOf": [
        {
          "type": "string",
          "x-styx-type": "file"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Reference Image",
      "description": "Reference image file (required if PHYSICAL or LOCAL method is chosen)."
    }
  },
  "additionalProperties": false,
  "required": [
    "dimension",
    "infile",
    "outfile",
    "method",
    "@type"
  ]
}