{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "antsJointLabelFusion.sh",
  "description": "The antsJointLabelFusion script is used for performing label fusion using multiple atlases to improve segmentation accuracy.",
  "type": "object",
  "properties": {
    "@type": {
      "const": "ants/antsJointLabelFusion.sh"
    },
    "dimensionality": {
      "anyOf": [
        {
          "type": "integer",
          "enum": [
            2,
            3
          ]
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Dimensionality",
      "description": "Image dimensionality (2 or 3)."
    },
    "output": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Output",
      "description": "Root directory for the output segmentation."
    },
    "atlas_image_mrf": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Atlas image for MRF",
      "description": "Atlas image(s) to be used for MRF initialization."
    },
    "atlas_segmentation_mrf": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Atlas segmentation for MRF",
      "description": "Atlas segmentation(s) to be used for MRF initialization."
    },
    "rigid_transform": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Rigid transform",
      "description": "Rigid transform initialization."
    },
    "similarity_metric": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Similarity metric",
      "description": "Metric used for calculating similarity."
    },
    "other_options": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Other options",
      "description": "Additional options for label fusion."
    },
    "verbose": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Verbose",
      "description": "Verbose output."
    },
    "target_image": {
      "type": "string",
      "title": "Target image",
      "description": "Image to segment."
    },
    "mask_image": {
      "type": "string",
      "title": "Mask image",
      "description": "Mask image."
    },
    "rigid_transform_additional_options": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Rigid transform additional options",
      "description": "Additional options for rigid transform."
    },
    "similarity_metric_additional_options": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Similarity metric additional options",
      "description": "Additional options for similarity metric."
    }
  },
  "additionalProperties": false,
  "required": [
    "target_image",
    "mask_image",
    "@type"
  ]
}