{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A simple SyN registration tool.",
  "type": "object",
  "properties": {
    "__STYXTYPE__": {
      "const": "simpleSynRegistration"
    },
    "fixed_image": {
      "type": "string",
      "title": "Fixed Image",
      "description": "The fixed image for registration."
    },
    "moving_image": {
      "type": "string",
      "title": "Moving Image",
      "description": "The moving image to be registered."
    },
    "initial_transform": {
      "type": "string",
      "title": "Initial Transform",
      "description": "The initial transform for registration."
    },
    "output_prefix": {
      "type": "string",
      "title": "Output Prefix",
      "description": "Prefix for the output file name without any extension."
    }
  },
  "additionalProperties": false,
  "required": [
    "fixed_image",
    "moving_image",
    "initial_transform",
    "output_prefix"
  ]
}