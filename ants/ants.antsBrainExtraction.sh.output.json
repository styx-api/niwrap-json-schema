{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "antsBrainExtraction.sh",
  "description": "antsBrainExtraction.sh performs template-based brain extraction using N4 bias correction, registration, and Atropos segmentation.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "root": {
      "type": "string",
      "title": "Root",
      "description": "Output root directory"
    },
    "brain_extracted_image": {
      "type": "string",
      "title": "Brain Extracted Image",
      "description": "Brain extracted image"
    },
    "brain_mask": {
      "type": "string",
      "title": "Brain Mask",
      "description": "Brain extraction mask"
    },
    "brain_segmentation": {
      "type": "string",
      "title": "Brain Segmentation",
      "description": "Brain segmentation (tissue classification)"
    },
    "csf_segmentation": {
      "type": "string",
      "title": "CSF Segmentation",
      "description": "Cerebrospinal fluid segmentation"
    },
    "gm_segmentation": {
      "type": "string",
      "title": "GM Segmentation",
      "description": "Gray matter segmentation"
    },
    "wm_segmentation": {
      "type": "string",
      "title": "WM Segmentation",
      "description": "White matter segmentation"
    },
    "generic_affine": {
      "type": "string",
      "title": "Generic Affine Transform",
      "description": "Generic affine transform from registration"
    },
    "warp_field": {
      "type": "string",
      "title": "Warp Field",
      "description": "Warp field from registration"
    },
    "inverse_warp_field": {
      "type": "string",
      "title": "Inverse Warp Field",
      "description": "Inverse warp field from registration"
    }
  }
}